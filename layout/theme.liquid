<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <!-- META TAGS FÃœR MOBILE -->
    <meta name="theme-color" content="#009a61">
    <meta name="msapplication-navbutton-color" content="#009a61">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    
    <!-- OVERSCROLL MEGA FIX -->
    <style>
      /* Reset Everything */
      * {
        margin: 0;
        padding: 0;
      }
      
      /* HTML Background */
      html {
        background: #e8f7f3 !important;
        background-attachment: fixed !important;
        min-height: 100% !important;
        position: relative !important;
      }
      
      /* Body Transparent */
      body {
        background: transparent !important;
        min-height: 100vh !important;
      }
      
      /* Overscroll Extension Method 1 */
      html::before {
        content: '' !important;
        position: fixed !important;
        top: -200% !important;
        left: 0 !important;
        width: 100% !important;
        height: 200% !important;
        background: linear-gradient(to bottom, #ffffff, #e8f7f3) !important;
        z-index: -10000 !important;
      }
      
      /* Overscroll Extension Method 2 */
      body::before {
        content: '' !important;
        position: fixed !important;
        top: -100vh !important;
        left: 0 !important;
        right: 0 !important;
        height: 100vh !important;
        background-color: #e8f7f3 !important;
        z-index: -9999 !important;
      }
      
      /* First Section gets gradient */
      .shopify-section:first-of-type {
        background: linear-gradient(180deg, 
          #ffffff 0%,
          #f9fffd 25%,
          #e8f7f3 60%,
          #daf2eb 100%
        ) !important;
      }
    </style>
    
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>