<!-- SIMBYE PRODUCT HOW-TO - DYNAMIC 3-STEP PROCESS -->

<style>
/* CSS Variables - Enterprise Design System */
:root {
  --product-howto-bg: #ffffff;
  --product-howto-text: #1a1a1a;
  --product-howto-text-secondary: #666666;
  --product-howto-primary: #009a61;
  --product-howto-primary-hover: #00824f;
  --product-howto-accent: #00d97e;
  --product-howto-border: rgba(0, 0, 0, 0.08);
  --product-howto-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.06);
  --product-howto-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.08);
  --product-howto-shadow-lg: 0 12px 32px rgba(0, 154, 97, 0.15);
  --product-howto-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --product-howto-gradient: linear-gradient(135deg, #f0faf7 0%, #ffffff 100%);
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --product-howto-bg: transparent;
  --product-howto-text: #f5f5f5;
  --product-howto-text-secondary: #999999;
  --product-howto-primary: #00d97e;
  --product-howto-primary-hover: #009a61;
  --product-howto-accent: #00ff88;
  --product-howto-border: rgba(255, 255, 255, 0.08);
  --product-howto-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.3);
  --product-howto-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
  --product-howto-shadow-lg: 0 12px 32px rgba(0, 217, 126, 0.2);
  --product-howto-gradient: linear-gradient(135deg, rgba(0, 217, 126, 0.05) 0%, transparent 100%);
}

/* Kill Shopify Grid */
.shopify-section:has(.product-howto-section) {
  display: block !important;
  padding: 0 !important;
  margin: 0 !important;
  grid-template-columns: unset !important;
}

/* Main Section */
.product-howto-section {
  width: 100%;
  padding: 50px 0 0 0;
  background: var(--product-howto-bg);
  position: relative;
  overflow: hidden;
  transition: var(--product-howto-transition);
}

/* Dark Mode */
[data-theme="dark"] .product-howto-section {
  background: linear-gradient(180deg,
    #0a0a0a 0%,
    #0d100f 20%,
    #0f1210 40%,
    #0d100f 60%,
    #0b0c0b 80%,
    #040404 100%
  );
}

/* Background Pattern */
.product-howto-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

[data-theme="dark"] .product-howto-section::before {
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(0, 217, 126, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(0, 154, 97, 0.03) 0%, transparent 50%);
}

/* Container */
.product-howto-container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 40px 50px 40px;
  position: relative;
  z-index: 1;
}

/* Header */
.product-howto-header {
  text-align: center;
  margin-bottom: 80px;
  animation: fadeInUp 0.8s ease;
}

.product-howto-title {
  font-size: 56px;
  font-weight: 700;
  color: var(--product-howto-text);
  margin: 0 0 20px 0;
  letter-spacing: -0.02em;
  line-height: 1.2;
}

.product-howto-title-highlight {
  background: var(--product-howto-primary);
  color: white;
  padding: 4px 20px;
  border-radius: 12px;
  display: inline-block;
  margin: 0 8px;
}

[data-theme="dark"] .product-howto-title-highlight {
  background: var(--product-howto-primary);
  color: #fff;
}

.product-howto-subtitle {
  font-size: 20px;
  color: var(--product-howto-text-secondary);
  margin: 0;
  font-weight: 400;
  line-height: 1.5;
}

/* Steps Container */
.product-howto-steps {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
  margin-bottom: 60px;
  position: relative;
}

/* Step Card */
.product-howto-step {
  position: relative;
  z-index: 1;
  animation: fadeInUp 0.9s ease both;
  animation-delay: calc(var(--step-index) * 0.1s);
  text-align: center;
}

.product-howto-step:nth-child(1) { --step-index: 1; }
.product-howto-step:nth-child(2) { --step-index: 2; }
.product-howto-step:nth-child(3) { --step-index: 3; }

/* Step Number */
.product-howto-step-number {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  background: var(--product-howto-primary);
  color: white;
  border-radius: 50%;
  font-size: 24px;
  font-weight: 700;
  margin: 0 auto 24px auto;
  position: relative;
  z-index: 2;
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.3);
}

[data-theme="dark"] .product-howto-step-number {
  background: var(--product-howto-primary);
  color: #0a0a0a;
  box-shadow: 0 4px 12px rgba(0, 217, 126, 0.3);
}

/* Image Container */
.product-howto-step-image {
  position: relative;
  background: transparent;
  border-radius: 0;
  overflow: visible;
  margin-bottom: 0;
  box-shadow: none;
  transition: var(--product-howto-transition);
  cursor: default;
  aspect-ratio: 4/5;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

[data-theme="dark"] .product-howto-step-image {
  background: transparent;
  border: none;
}

.product-howto-step-image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  padding: 5px;
  filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.15));
}

[data-theme="dark"] .product-howto-step-image img {
  filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.5));
}

/* Success Badge on Step 3 */
.product-howto-step:last-child .product-howto-step-image::after {
  content: 'âœ“';
  position: absolute;
  top: 16px;
  right: 16px;
  width: 48px;
  height: 48px;
  background: var(--product-howto-accent);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  font-weight: 700;
  animation: scaleIn 0.5s ease 0.3s both;
  box-shadow: 0 4px 12px rgba(0, 217, 126, 0.4);
}

[data-theme="dark"] .product-howto-step:last-child .product-howto-step-image::after {
  background: var(--product-howto-primary);
  color: #0a0a0a;
}

/* Step Content */
.product-howto-step-title {
  font-size: 22px;
  font-weight: 700;
  color: var(--product-howto-text);
  margin: 16px 0 12px 0;
  letter-spacing: -0.01em;
  line-height: 1.3;
}

.product-howto-step-desc {
  font-size: 15px;
  color: var(--product-howto-text-secondary);
  line-height: 1.6;
  margin: 0;
}

/* Responsive - Tablet */
@media (max-width: 1024px) {
  .product-howto-container {
    padding: 0 24px 50px 24px;
  }
  
  .product-howto-steps {
    gap: 32px;
  }
  
  .product-howto-step-title {
    font-size: 20px;
  }
}

/* Responsive - Mobile */
@media (max-width: 768px) {
  .product-howto-section {
    padding: 20px 0 0 0;
  }
  
  .product-howto-container {
    padding: 0 16px 20px 16px;
  }
  
  .product-howto-header {
    margin-bottom: 56px;
  }
  
  .product-howto-title {
    font-size: 28px;
  }
  
  .product-howto-subtitle {
    font-size: 16px;
  }
  
  .product-howto-steps {
    grid-template-columns: 1fr;
    gap: 48px;
    margin-bottom: 20px;
  }
  
  .product-howto-step {
    background: rgba(0, 0, 0, 0.02);
    border-radius: 24px;
    padding: 24px;
    box-shadow: none;
    border: none;
    text-align: center;
    position: relative;
  }
  
  [data-theme="dark"] .product-howto-step {
    background: rgba(255, 255, 255, 0.02);
    border: none;
  }
  
  .product-howto-step-number {
    position: relative;
    top: auto;
    left: auto;
    z-index: 3;
    margin: 0 auto 24px auto;
  }
  
  .product-howto-step-image {
    margin-top: 0;
    margin-bottom: 16px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .product-howto-step-title,
  .product-howto-step-desc {
    text-align: center;
  }
}

/* Very Small Screens */
@media (max-width: 480px) {
  .product-howto-step-title {
    font-size: 19px;
  }
  
  .product-howto-step-desc {
    font-size: 14px;
  }
  
  .product-howto-step {
    padding: 20px;
  }
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes scaleIn {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
</style>

<section class="product-howto-section" id="product-howto-section">
  <div class="product-howto-container">
    
    <!-- Header with Dynamic Product Title -->
    <div class="product-howto-header">
      <h2 class="product-howto-title">
        {{ 'product_howto.title_start' | t | default: 'How does Simbye eSIM work for' }} 
        <span class="product-howto-title-highlight">{{ product.title }}</span>?
      </h2>
      <p class="product-howto-subtitle">
        {{ 'product_howto.subtitle' | t | default: 'Get connected in under 2 minutes' }}
      </p>
    </div>
    
    <!-- Steps -->
    <div class="product-howto-steps">
      
      <!-- Step 1: Choose -->
      <div class="product-howto-step">
        <div class="product-howto-step-number">1</div>
        <div class="product-howto-step-image">
          {% if section.settings.step1_image %}
            <img 
              src="{{ section.settings.step1_image | image_url: width: 600 }}" 
              alt="{{ 'product_howto.step1_alt' | t | default: 'Choose eSIM data plan' }}"
              loading="lazy"
              width="600"
              height="750"
            >
          {% else %}
            <img 
              src="https://via.placeholder.com/600x750/f0faf7/009a61?text=Step+1" 
              alt="{{ 'product_howto.step1_alt' | t | default: 'Choose eSIM data plan' }}"
            >
          {% endif %}
        </div>
        <h3 class="product-howto-step-title">
          {{ 'product_howto.step1_title_start' | t | default: 'Choose Your eSIM Data Plan for' }} 
          {{ product.title }}
        </h3>
        <p class="product-howto-step-desc">
          {{ 'product_howto.step1_desc' | t | default: 'Select a plan that suits your needs and purchase it. You will receive a QR code via email.' }}
        </p>
      </div>
      
      <!-- Step 2: Scan QR Code -->
      <div class="product-howto-step">
        <div class="product-howto-step-number">2</div>
        <div class="product-howto-step-image">
          {% if section.settings.step2_image %}
            <img 
              src="{{ section.settings.step2_image | image_url: width: 600 }}" 
              alt="{{ 'product_howto.step2_alt' | t | default: 'Scan QR code' }}"
              loading="lazy"
              width="600"
              height="750"
            >
          {% else %}
            <img 
              src="https://via.placeholder.com/600x750/f0faf7/009a61?text=Step+2" 
              alt="{{ 'product_howto.step2_alt' | t | default: 'Scan QR code' }}"
            >
          {% endif %}
        </div>
        <h3 class="product-howto-step-title">
          {{ 'product_howto.step2_title' | t | default: 'Scan the QR Code' }}
        </h3>
        <p class="product-howto-step-desc">
          {{ 'product_howto.step2_desc' | t | default: 'Press and hold the QR code and then click on "Add eSIM", or scan the QR code to install the eSIM.' }}
        </p>
      </div>
      
      <!-- Step 3: Enable Data Roaming -->
      <div class="product-howto-step">
        <div class="product-howto-step-number">3</div>
        <div class="product-howto-step-image">
          {% if section.settings.step3_image %}
            <img 
              src="{{ section.settings.step3_image | image_url: width: 600 }}" 
              alt="{{ 'product_howto.step3_alt' | t | default: 'Enable data roaming' }}"
              loading="lazy"
              width="600"
              height="750"
            >
          {% else %}
            <img 
              src="https://via.placeholder.com/600x750/f0faf7/009a61?text=Step+3" 
              alt="{{ 'product_howto.step3_alt' | t | default: 'Enable data roaming' }}"
            >
          {% endif %}
        </div>
        <h3 class="product-howto-step-title">
          {{ 'product_howto.step3_title' | t | default: 'Enable Data Roaming' }}
        </h3>
        <p class="product-howto-step-desc">
          {{ 'product_howto.step3_desc_start' | t | default: 'The eSIM can only be activated in' }} 
          {{ product.title }}. 
          {{ 'product_howto.step3_desc_end' | t | default: 'Then enable data roaming for automatic connection.' }}
        </p>
      </div>
      
    </div>
    
  </div>
</section>

<script>
(function() {
  'use strict';
  
  const section = document.getElementById('product-howto-section');
  const steps = document.querySelectorAll('.product-howto-step');
  
  function init() {
    if (!section) return;
    animateOnScroll();
  }
  
  function animateOnScroll() {
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, {
        threshold: 0.1,
        rootMargin: '50px'
      });
      
      steps.forEach(step => {
        step.style.opacity = '0';
        step.style.transform = 'translateY(30px)';
        step.style.transition = 'all 0.6s ease';
        observer.observe(step);
      });
    }
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

