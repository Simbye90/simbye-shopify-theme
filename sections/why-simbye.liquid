  }
}

/* Individual Icon Animations on Scroll */
.why-feature.animate .why-icon {
  animation: iconBounceIn 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) both;
}

@keyframes iconBounceIn {
  0% {
