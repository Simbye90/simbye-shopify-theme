  .btn-hero-main:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 154, 97, 0.3);
    background: #00824f;
  }
  
  /* Visual wrapper nicht mehr n√∂tig auf Tablet */
