<!-- SIMBYE HERO - OPTIMIZED FOR SEO & MOBILE -->

<style>
/* Global Reset */
.hero-section-wrapper {
  width: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

/* Hero Section - FULL WIDTH */
.hero-enterprise {
  width: 100%;
  padding: 40px 0 60px 0; /* Kein seitliches Padding = Full Width */
  background: linear-gradient(180deg, 
    #ffffff 0%,
    #ffffff 10%,
    #f9fffd 30%,
    #e8f7f3 70%,
    #daf2eb 100%
  );
  position: relative;
}

/* Container fÃ¼r Content - mit Padding */
.hero-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px; /* Padding nur im Container */
  width: 100%;
}

/* MOBILE FIRST */
.hero-content {
  text-align: center;
  width: 100%;
}

/* Title Mobile */
.hero-title {
  font-size: 38px;
  font-weight: 900;
  line-height: 1.05;
  margin: 0 0 24px 0;
  letter-spacing: -0.02em;
}

.hero-title-primary {
  display: block;
  color: #0a0a0a;
  margin-bottom: 6px;
}

.hero-title-gradient {
  display: block;
  background: linear-gradient(135deg, #009a61 0%, #00d97e 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Subtitle - NUR DESKTOP */
.hero-subtitle {
  display: none; /* Mobile: ausgeblendet */
}

/* Button Mobile */
.hero-cta {
  margin-bottom: 36px;
}

.btn-hero-main {
  width: 100%;
  max-width: 300px;
  padding: 18px 32px;
  font-size: 18px;
  font-weight: 700;
  color: white;
  background: var(--primary-color, #009a61);
  border: none;
  border-radius: 50px;
  cursor: pointer;
  box-shadow: 0 4px 16px rgba(0, 154, 97, 0.2);
  transition: all 0.3s ease;
  white-space: nowrap;
}

/* Stats Mobile */
.hero-stats {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 36px;
  width: 100%;
}

.stat-item {
  text-align: center;
  flex: 1;
  max-width: 90px;
}

.stat-number {
  display: block;
  font-size: 26px;
  font-weight: 900;
  color: var(--primary-color, #009a61);
  margin-bottom: 4px;
}

.stat-label {
  display: block;
  font-size: 11px;
  font-weight: 600;
  color: #6b6b6b;
  line-height: 1.3;
}

/* Image Mobile - FULL WIDTH */
.hero-visual {
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  position: relative;
}

.hero-phones {
  width: 100%;
  height: auto;
  display: block;
}

/* Product Labels - Hidden Mobile */
.product-labels {
  display: none;
}

/* Mobile Badges */
.mobile-products {
  display: flex;
  gap: 8px;
  justify-content: center;
  margin-top: -20px;
  margin-bottom: 20px;
  flex-wrap: wrap;
  padding: 0 20px;
  position: relative;
  z-index: 2;
}

.mobile-product-badge {
  padding: 10px 14px;
  background: white;
  border-radius: 20px;
  font-size: 13px;
  font-weight: 700;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  white-space: nowrap;
}

.mobile-product-badge .price {
  color: var(--primary-color, #009a61);
  font-weight: 800;
}

/* TABLET (768px+) */
@media (min-width: 768px) {
  .hero-enterprise {
    padding: 50px 0 70px 0;
  }
  
  .hero-container {
    padding: 0 30px;
  }
  
  .hero-title {
    font-size: 52px;
    margin-bottom: 20px;
  }
  
  /* Subtitle zeigen auf Tablet */
  .hero-subtitle {
    display: block;
    font-size: 18px;
    font-weight: 500;
    color: #5a5a5a;
    line-height: 1.5;
    margin: 0 0 36px 0;
  }
  
  .btn-hero-main {
    width: auto;
    padding: 20px 48px;
    max-width: none;
  }
  
  .hero-stats {
    gap: 36px;
  }
  
  .stat-number {
    font-size: 32px;
  }
  
  .stat-label {
    font-size: 13px;
  }
  
  .hero-visual {
    width: 100%;
    margin: 0 auto;
    max-width: 600px;
  }
}

/* DESKTOP (1024px+) */
@media (min-width: 1024px) {
  .hero-enterprise {
    padding: 60px 0 80px 0; /* Full width background */
  }
  
  .hero-container {
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }
  
  /* Content Links wie Logo */
  .hero-content {
    text-align: left;
  }
  
  .hero-title {
    font-size: 64px;
    margin-bottom: 24px;
  }
  
  .hero-title-primary {
    margin-bottom: 10px;
  }
  
  .hero-subtitle {
    font-size: 20px;
    padding: 0;
    max-width: 480px;
    margin-bottom: 40px;
  }
  
  .hero-cta {
    margin-bottom: 50px;
  }
  
  .btn-hero-main:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 28px rgba(0, 154, 97, 0.3);
    background: #00824f;
  }
  
  .hero-stats {
    justify-content: flex-start;
    gap: 50px;
  }
  
  .stat-item {
    text-align: left;
  }
  
  .stat-number {
    font-size: 38px;
  }
  
  .stat-label {
    font-size: 14px;
  }
  
  /* Visual Desktop */
  .hero-visual {
    width: 100%;
    margin: 0;
    max-width: none;
    position: relative;
  }
  
  .hero-phones {
    max-width: 650px;
    width: 100%;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.1));
  }
  
  /* Product Labels Desktop */
  .product-labels {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }
  
  .product-label {
    position: absolute;
    padding: 12px 20px;
    background: white;
    border-radius: 26px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    font-weight: 700;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 10px;
    transition: transform 0.3s ease;
  }
  
  .product-label:hover {
    transform: scale(1.05);
  }
  
  .product-label-1 {
    top: 15%;
    left: -12%;
  }
  
  .product-label-2 {
    top: 45%;
    right: -8%;
  }
  
  .product-label-3 {
    bottom: 25%;
    left: 5%;
  }
  
  .label-price {
    color: var(--primary-color, #009a61);
    font-weight: 800;
  }
  
  /* Hide mobile badges */
  .mobile-products {
    display: none;
  }
}

/* XL Desktop */
@media (min-width: 1440px) {
  .hero-title {
    font-size: 72px;
  }
  
  .hero-subtitle {
    font-size: 22px;
  }
}

/* Dark Mode */
[data-theme="dark"] .hero-enterprise {
  background: linear-gradient(180deg,
    #0a0a0a 0%,
    #0a0a0a 10%,
    #0f1210 30%,
    #0a1510 70%,
    #051008 100%
  );
}

[data-theme="dark"] .hero-title-primary {
  color: #f5f5f5;
}

[data-theme="dark"] .hero-subtitle {
  color: #b0b0b0;
}

[data-theme="dark"] .mobile-product-badge,
[data-theme="dark"] .product-label {
  background: #1a1a1a;
  color: #f0f0f0;
}

/* Animations */
.hero-content > * {
  animation: fadeInUp 0.6s ease both;
}

.hero-content > *:nth-child(2) { animation-delay: 0.1s; }
.hero-content > *:nth-child(3) { animation-delay: 0.2s; }
.hero-content > *:nth-child(4) { animation-delay: 0.3s; }

.hero-visual {
  animation: fadeIn 0.8s ease 0.4s both;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
</style>

