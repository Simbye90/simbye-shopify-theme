<script>
(function() {
  'use strict';
  
  // Initialize both desktop and mobile search
  function initSearch(inputId, buttonId, suggestionsId) {
    const searchInput = document.getElementById(inputId);
    const searchButton = document.getElementById(buttonId);
    const suggestions = document.getElementById(suggestionsId);
    
    if (!searchInput || !searchButton || !suggestions) return;
    
    // State
    let isOpen = false;
    let selectedIndex = -1;
    let searchTimeout = null;
    let currentProducts = [];
    
    // Event Listeners
    searchInput.addEventListener('input', handleInput);
    searchInput.addEventListener('focus', handleFocus);
    searchInput.addEventListener('keydown', handleKeyDown);
    searchButton.addEventListener('click', handleSearch);
    
    // Click outside
    document.addEventListener('click', function(e) {
      if (!searchInput.contains(e.target) && !suggestions.contains(e.target)) {
        hideSuggestions();
      }
    });
    
    // Prevent zoom on iOS
    if (/iPhone|iPad|iPod/i.test(navigator.userAgent)) {
      searchInput.addEventListener('touchstart', function() {
        searchInput.style.fontSize = '16px';
      });
    }
    
    // Handle input
    function handleInput() {
      const value = this.value.trim();
      
      // Clear previous timeout
      if (searchTimeout) clearTimeout(searchTimeout);
      
      if (value.length > 0) {
        // Show loading
        showLoading();
        
        // Debounce search
        searchTimeout = setTimeout(() => {
          searchProducts(value);
        }, 300);
      } else {
        hideSuggestions();
      }
    }
    
    // Handle focus
    function handleFocus() {
      const value = this.value.trim();
      if (value.length > 0) {
        searchProducts(value);
      }
    }
    
    // Handle keyboard navigation
    function handleKeyDown(e) {
      const items = suggestions.querySelectorAll('.suggestion-item');
      
      switch(e.key) {
        case 'Enter':
          e.preventDefault();
          if (selectedIndex >= 0 && items[selectedIndex]) {
            items[selectedIndex].click();
          } else if (searchInput.value.trim()) {
            handleSearch();
          }
          break;
          
        case 'ArrowDown':
          e.preventDefault();
          selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
          updateSelection(items);
          break;
          
        case 'ArrowUp':
          e.preventDefault();
          selectedIndex = Math.max(selectedIndex - 1, -1);
          updateSelection(items);
          break;
          
        case 'Escape':
          hideSuggestions();
          searchInput.blur();
          break;
      }
    }
    
    // Search products via Shopify Search API
    function searchProducts(query) {
      // Shopify Predictive Search API
      fetch(`/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=8`)
        .then(response => response.json())
        .then(data => {
          if (data.resources && data.resources.results && data.resources.results.products) {
            currentProducts = data.resources.results.products;
            displayProducts(currentProducts);
          } else {
            displayEmpty();
          }
        })
        .catch(error => {
          console.error('Search error:', error);
          displayEmpty();
        });
    }
    
 // Display products
function displayProducts(products) {
  if (products.length === 0) {
    displayEmpty();
    return;
  }
  
  let html = '';
  
  products.forEach(product => {
    // Extract country from title
    const title = product.title.replace('eSIM', '').replace('-', '').trim();
    const imageUrl = product.featured_image?.url || '';
    
    // PRICE LOGIC: Wenn erste Variante 0€ ist, nimm zweite Variante
    let price = '';
    if (product.variants && product.variants.length > 0) {
      let variantToUse = product.variants[0];
      
      // Check if first variant is FREE (price = 0)
      const firstPrice = parseFloat(variantToUse.price || 0);
      if (firstPrice === 0 && product.variants.length > 1) {
        variantToUse = product.variants[1];
      }
      
      price = variantToUse.price ? `${variantToUse.price}` : '';
    }
    
    html += `
      <a href="${product.url}" class="suggestion-item">
        ${imageUrl ? `<img src="${imageUrl}" alt="${title}" class="suggestion-image">` : '<span class="suggestion-image">🌍</span>'}
        <div class="suggestion-content">
          <span class="suggestion-title">${title}</span>
        </div>
        ${price ? `<span class="suggestion-price">${price}</span>` : ''}
      </a>
    `;
  });
  
  suggestions.innerHTML = html;
  showSuggestions();
  selectedIndex = -1;
}
    
    // Display empty state
    function displayEmpty() {
      suggestions.innerHTML = `
        <div class="suggestions-empty">
          {{ 'hero.no_results' | t | default: 'Keine Ergebnisse gefunden' }}
        </div>
      `;
      showSuggestions();
    }
    
    // Show loading
    function showLoading() {
      suggestions.innerHTML = `
        <div class="suggestions-loading">
          <span class="loading-spinner"></span>
          {{ 'hero.searching' | t | default: 'Suche läuft...' }}
        </div>
      `;
      showSuggestions();
    }
    
    // Handle search button
    function handleSearch() {
      const value = searchInput.value.trim();
      if (value) {
        // If we have exact match in current products
        const exactMatch = currentProducts.find(p => 
          p.title.toLowerCase().includes(value.toLowerCase())
        );
        
        if (exactMatch) {
          window.location.href = exactMatch.url;
        } else {
          // General search
          window.location.href = `/search?q=${encodeURIComponent(value)}`;
        }
      }
    }
    
    // Update keyboard selection
    function updateSelection(items) {
      items.forEach((item, index) => {
        if (index === selectedIndex) {
          item.classList.add('selected');
          // Scroll into view if needed
          item.scrollIntoView({ block: 'nearest' });
        } else {
          item.classList.remove('selected');
        }
      });
    }
    
    // Show/hide suggestions
    function showSuggestions() {
      suggestions.classList.add('active');
      isOpen = true;
    }
    
    function hideSuggestions() {
      suggestions.classList.remove('active');
      isOpen = false;
      selectedIndex = -1;
    }
  }
  
  // Initialize both desktop and mobile search
  initSearch('destination-search', 'search-btn', 'search-suggestions');
  initSearch('destination-search-mobile', 'search-btn-mobile', 'search-suggestions-mobile');
})();
</script>

