<!-- SIMBYE HERO - ENTERPRISE FINAL -->

<style>
/* FULL WIDTH SECTION */
.hero-enterprise {
  width: 100vw;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  padding: 0;
  background: linear-gradient(180deg, 
    #ffffff 0%,
    #ffffff 10%,
    #f9fffd 25%,
    #e8f7f3 60%,
    #daf2eb 100%
  );
  overflow: hidden;
}

/* Container mit Padding - WICHTIG: Gleiche Werte wie Header! */
.hero-container {
  max-width: 1600px; /* Gleich wie Header */
  margin: 0 auto;
  padding: 40px 20px 60px 20px; /* Mobile: 20px, Desktop wird überschrieben */
  width: 100%;
}

@media (min-width: 768px) {
  .hero-container {
    padding: 50px 30px 70px 30px;
  }
}

@media (min-width: 1024px) {
  .hero-container {
    padding: 60px 40px 80px 40px; /* Desktop: 40px wie Header */
  }
}

/* MOBILE FIRST - SIMPLIFIED */
.hero-content {
  text-align: center;
  width: 100%;
}

/* Title Mobile */
.hero-title {
  font-size: 32px;
  font-weight: 900;
  line-height: 1.1;
  margin: 0 0 24px 0;
  letter-spacing: -0.02em;
  animation: fadeInUp 0.6s ease;
}

.hero-title-primary {
  display: block;
  color: #0a0a0a;
  margin-bottom: 6px;
}

.hero-title-gradient {
  display: block;
  background: linear-gradient(135deg, #009a61 0%, #00d97e 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Subtitle - NUR DESKTOP */
.hero-subtitle {
  display: none;
}

/* Button - NUR DESKTOP */
.hero-cta {
  display: none;
}

/* Stats Mobile - Direkt nach Title */
.hero-stats {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 32px;
  width: 100%;
}

.stat-item {
  text-align: center;
  flex: 1;
  max-width: 90px;
}

.stat-number {
  display: block;
  font-size: 22px;
  font-weight: 900;
  color: var(--primary-color, #009a61);
  margin-bottom: 2px;
  line-height: 1;
}

.stat-label {
  display: block;
  font-size: 10px;
  font-weight: 600;
  color: #6b6b6b;
  line-height: 1.2;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Image Mobile - Full Width */
.hero-visual {
  width: calc(100% + 40px);
  margin: 0 -20px;
  position: relative;
}

.hero-image {
  width: 100%;
  height: auto;
  display: block;
  /* Keine Animation auf Mobile für bessere Performance */
}

/* Mobile Product Badges */
.mobile-products {
  display: flex;
  gap: 8px;
  justify-content: center;
  margin-top: -15px;
  margin-bottom: 20px;
  flex-wrap: wrap;
  padding: 0 20px;
  position: relative;
  z-index: 2;
}

.mobile-product-badge {
  padding: 8px 14px;
  background: white;
  border-radius: 18px;
  font-size: 12px;
  font-weight: 700;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  white-space: nowrap;
}

.mobile-product-badge .price {
  color: var(--primary-color, #009a61);
  font-weight: 800;
}

/* Product Labels Desktop - Hidden on Mobile */
.product-labels {
  display: none;
}

/* TABLET (768px+) */
@media (min-width: 768px) {
  .hero-title {
    font-size: 42px;
    margin-bottom: 20px;
  }
  
  /* Subtitle zeigen auf Tablet */
  .hero-subtitle {
    display: block;
    font-size: 17px;
    font-weight: 500;
    color: #5a5a5a;
    line-height: 1.5;
    margin: 0 0 28px 0;
    padding: 0 10px;
  }
  
  /* Button zeigen auf Tablet */
  .hero-cta {
    display: flex;
    justify-content: center;
    margin-bottom: 36px;
  }
  
  .btn-hero-main {
    padding: 18px 44px;
    font-size: 17px;
    font-weight: 700;
    color: white;
    background: var(--primary-color, #009a61);
    border: none;
    border-radius: 50px;
    cursor: pointer;
    box-shadow: 0 4px 16px rgba(0, 154, 97, 0.2);
    transition: all 0.3s ease;
  }
  
  .btn-hero-main:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 154, 97, 0.3);
    background: #00824f;
  }
  
  .hero-stats {
    gap: 35px;
  }
  
  .stat-number {
    font-size: 28px;
  }
  
  .stat-label {
    font-size: 12px;
  }
  
  .hero-visual {
    width: 100%;
    margin: 0 auto;
    max-width: 600px;
  }
  
  .hero-image {
    animation: none; /* Keine Animation auf Tablet */
  }
}

/* DESKTOP (1024px+) */
@media (min-width: 1024px) {
  .hero-container {
    padding: 60px 40px 80px 40px; /* Gleiche seitliche Padding wie Header */
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    /* WICHTIG: Gleiche max-width wie Header für Alignment */
    max-width: 1600px;
  }
  
  /* Content Links GENAU wie Logo positioniert */
  .hero-content {
    text-align: left;
    padding-left: 0; /* Kein extra padding, gleich wie Logo */
  }
  
  .hero-title {
    font-size: 56px;
    margin-bottom: 24px;
  }
  
  .hero-title-primary {
    margin-bottom: 10px;
  }
  
  .hero-subtitle {
    font-size: 19px;
    padding: 0;
    max-width: 480px;
    margin-bottom: 36px;
  }
  
  .hero-cta {
    justify-content: flex-start;
    margin-bottom: 48px;
  }
  
  .btn-hero-main {
    padding: 20px 52px;
    font-size: 18px;
  }
  
  .hero-stats {
    justify-content: flex-start;
    gap: 48px;
  }
  
  .stat-item {
    text-align: left;
    max-width: none;
  }
  
  .stat-number {
    font-size: 36px;
    margin-bottom: 4px;
  }
  
  .stat-label {
    font-size: 13px;
    text-transform: none;
    letter-spacing: 0;
  }
  
  /* Visual Desktop */
  .hero-visual {
    width: 100%;
    margin: 0;
    max-width: none;
    position: relative;
  }
  
  .hero-image {
    max-width: 650px;
    width: 100%;
    filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.12));
    /* Für Weltkugel - sanftes Schweben statt Rotation */
    animation: floatGlobe 8s ease-in-out infinite;
  }
  
  @keyframes floatGlobe {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-15px) scale(1.02); }
  }
  
  /* Product Labels Desktop anzeigen */
  .product-labels {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }
  
  .product-label {
    position: absolute;
    padding: 12px 20px;
    background: white;
    border-radius: 26px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    font-weight: 700;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 10px;
    animation: floatLabel 8s ease-in-out infinite;
  }
  
  .product-label-1 {
    top: 10%;
    left: -15%;
  }
  
  .product-label-2 {
    top: 40%;
    right: -12%;
    animation-delay: 2.5s;
  }
  
  .product-label-3 {
    bottom: 20%;
    left: -8%;
    animation-delay: 5s;
  }
  
  .label-price {
    color: var(--primary-color, #009a61);
    font-weight: 800;
  }
  
  /* Mobile badges verstecken auf Desktop */
  .mobile-products {
    display: none;
  }
}

/* XL Desktop (1440px+) */
@media (min-width: 1440px) {
  .hero-title {
    font-size: 68px;
  }
  
  .hero-subtitle {
    font-size: 21px;
  }
  
  .stat-number {
    font-size: 40px;
  }
  
  .stat-label {
    font-size: 14px;
  }
}

/* Dark Mode */
[data-theme="dark"] .hero-enterprise {
  background: linear-gradient(180deg,
    #0a0a0a 0%,
    #0a0a0a 10%,
    #0f1210 25%,
    #0a1510 60%,
    #051008 100%
  );
}

[data-theme="dark"] .hero-title-primary {
  color: #f5f5f5;
}

[data-theme="dark"] .hero-subtitle {
  color: #b0b0b0;
}

[data-theme="dark"] .mobile-product-badge,
[data-theme="dark"] .product-label {
  background: rgba(20, 20, 20, 0.95);
  color: #f0f0f0;
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes floatLabel {
  0%, 100% { 
    transform: translateY(0) rotate(0deg);
  }
  25% {
    transform: translateY(-8px) rotate(1deg);
  }
  75% {
    transform: translateY(5px) rotate(-1deg);
  }
}
</style>

<section class="hero-enterprise">
  <div class="hero-container">
    <!-- Content -->
    <div class="hero-content">
      <!-- Title -->
      <h1 class="hero-title">
        {% comment %} METHODE 3: Über spezifische Collections {% endcomment %}
        {% unless turkey_product %}
          {% if collections['turkey'] %}
            {% assign turkey_product = collections['turkey'].products.first %}
          {% elsif collections['turkei'] %}
            {% assign turkey_product = collections['turkei'].products.first %}
          {% endif %}
        {% endunless %}
        
        {% unless usa_product %}
          {% if collections['usa'] %}
            {% assign usa_product = collections['usa'].products.first %}
          {% elsif collections['united-states'] %}
            {% assign usa_product = collections['united-states'].products.first %}
          {% endif %}
        {% endunless %}
        
        {% unless japan_product %}
          {% if collections['japan'] %}
            {% assign japan_product = collections['japan'].products.first %}
          {% endif %}
        {% endunless %}<span class="hero-title-primary">
          {{ 'hero.title_line1' | t | default: 'Günstige eSIM' }}
        </span>
        <span class="hero-title-gradient">
          {{ 'hero.title_line2' | t | default: 'Datenpakete für Reisen' }}
        </span>
      </h1>
      
      <!-- Subtitle - NUR Tablet/Desktop -->
      <p class="hero-subtitle">
        {{ 'hero.subtitle' | t | default: 'Internet in 190+ Ländern • Keine Roaming-Gebühren • In 2 Minuten aktiviert' }}
      </p>
      
      <!-- CTA Button - NUR Tablet/Desktop -->
      <div class="hero-cta">
        <button 
          class="btn-hero-main" 
          onclick="window.location.href='{{ section.settings.cta_link | default: collections.all.url }}'"
          type="button"
        >
          {{ 'hero.cta_primary' | t | default: 'Kostenlos testen' }}
        </button>
      </div>
      
      <!-- Stats -->
      <div class="hero-stats">
        <div class="stat-item">
          <span class="stat-number">190+</span>
          <span class="stat-label">{{ 'hero.stat_countries' | t | default: 'Länder verfügbar' }}</span>
        </div>
        
        <div class="stat-item">
          <span class="stat-number">2 Min</span>
          <span class="stat-label">{{ 'hero.stat_activation' | t | default: 'Installation' }}</span>
        </div>
        
        <div class="stat-item">
          <span class="stat-number">100K+</span>
          <span class="stat-label">{{ 'hero.stat_customers' | t | default: 'Zufriedene Kunden' }}</span>
        </div>
      </div>
    </div>
    
    <!-- Visual -->
    <div class="hero-visual">
      <img 
        class="hero-image"
        src="{{ section.settings.hero_image | image_url: width: 1300 | default: 'https://cdn.shopify.com/s/files/1/0633/9012/2175/files/Design_ohne_Titel-3.png?v=1758222990' }}"
        alt="{{ 'hero.image_alt' | t | default: 'Simbye eSIM Weltkugel' }}"
        width="650"
        height="520"
        loading="eager"
        fetchpriority="high"
      >
      
      <!-- Desktop Product Labels mit echten Shopify Varianten -->
      <div class="product-labels">
        {% comment %} 
          RICHTIGE SHOPIFY IMPLEMENTATION
          
          DAMIT ES FUNKTIONIERT:
          1. Produkte müssen existieren mit Handles wie:
             - "turkey-esim" oder "turkei-esim"
             - "usa-esim" 
             - "japan-esim"
          
          2. ODER Produkte müssen getaggt sein mit:
             - Tag: "turkey" für Türkei
             - Tag: "usa" für USA
             - Tag: "japan" für Japan
          
          3. ODER Produkt-Titel müssen enthalten:
             - "Türkei" oder "Turkey"
             - "USA"
             - "Japan"
             
          DEBUG: Um zu sehen welche Produkte gefunden werden,
          entferne die comment Tags unten:
        {% endcomment %}
        
        {% comment %}
        DEBUG INFO:
        Turkey Product: {{ turkey_product.title }}
        USA Product: {{ usa_product.title }}
        Japan Product: {{ japan_product.title }}
        {% endcomment %}
        
        {% comment %} Versuche Produkte über verschiedene Methoden zu finden {% endcomment %}
        
        {% comment %} METHODE 1: Direkte Produkt Handles {% endcomment %}
        {% assign turkey_product = all_products['turkey-esim'] | default: all_products['turkei-esim'] | default: all_products['turkey'] | default: all_products['turkei'] %}
        {% assign usa_product = all_products['usa-esim'] | default: all_products['usa'] | default: all_products['united-states'] %}
        {% assign japan_product = all_products['japan-esim'] | default: all_products['japan'] %}
        
        {% comment %} METHODE 2: Falls keine gefunden, suche in allen Produkten {% endcomment %}
        {% unless turkey_product %}
          {% for product in collections.all.products limit: 100 %}
            {% if product.title contains 'Türkei' or product.title contains 'Turkey' or product.title contains 'Turkei' %}
              {% assign turkey_product = product %}
              {% break %}
            {% elsif product.tags contains 'turkey' or product.tags contains 'turkei' or product.tags contains 'türkei' %}
              {% assign turkey_product = product %}
              {% break %}
            {% endif %}
          {% endfor %}
        {% endunless %}
        
        {% unless usa_product %}
          {% for product in collections.all.products limit: 100 %}
            {% if product.title contains 'USA' or product.title contains 'United States' or product.title contains 'Amerika' %}
              {% assign usa_product = product %}
              {% break %}
            {% elsif product.tags contains 'usa' or product.tags contains 'united-states' or product.tags contains 'amerika' %}
              {% assign usa_product = product %}
              {% break %}
            {% endif %}
          {% endfor %}
        {% endunless %}
        
        {% unless japan_product %}
          {% for product in collections.all.products limit: 100 %}
            {% if product.title contains 'Japan' %}
              {% assign japan_product = product %}
              {% break %}
            {% elsif product.tags contains 'japan' %}
              {% assign japan_product = product %}
              {% break %}
            {% endif %}
          {% endfor %}
        {% endunless %}
        
        <!-- Türkei Label -->
        <div class="product-label product-label-1">
          <span>🇹🇷</span>
          {% if turkey_product %}
            {% assign product_title = turkey_product.title | split: ' - ' | first | split: ' | ' | first | split: 'eSIM' | first | strip %}
            <span>{{ product_title | truncate: 20 }}</span>
            <span class="label-price">
              {% if turkey_product.variants.size > 1 %}
                ab {{ turkey_product.price_min | money_without_currency }}
              {% else %}
                {{ turkey_product.price | money_without_currency }}
              {% endif %}
            </span>
          {% else %}
            <span>Türkei • 5GB</span>
            <span class="label-price">9€</span>
          {% endif %}
        </div>
        
        <!-- USA Label -->
        <div class="product-label product-label-2">
          <span>🇺🇸</span>
          {% if usa_product %}
            {% assign product_title = usa_product.title | split: ' - ' | first | split: ' | ' | first | split: 'eSIM' | first | strip %}
            <span>{{ product_title | truncate: 20 }}</span>
            <span class="label-price">
              {% if usa_product.variants.size > 1 %}
                ab {{ usa_product.price_min | money_without_currency }}
              {% else %}
                {{ usa_product.price | money_without_currency }}
              {% endif %}
            </span>
          {% else %}
            <span>USA • 10GB</span>
            <span class="label-price">19€</span>
          {% endif %}
        </div>
        
        <!-- Japan Label -->
        <div class="product-label product-label-3">
          <span>🇯🇵</span>
          {% if japan_product %}
            {% assign product_title = japan_product.title | split: ' - ' | first | split: ' | ' | first | split: 'eSIM' | first | strip %}
            <span>{{ product_title | truncate: 20 }}</span>
            <span class="label-price">
              {% if japan_product.variants.size > 1 %}
                ab {{ japan_product.price_min | money_without_currency }}
              {% else %}
                {{ japan_product.price | money_without_currency }}
              {% endif %}
            </span>
          {% else %}
            <span>Japan • 3GB</span>
            <span class="label-price">12€</span>
          {% endif %}
        </div>
      </div>
      
      <!-- Mobile Product Badges -->
      <div class="mobile-products">
        <span class="mobile-product-badge">
          🇹🇷 Türkei ab <span class="price">9€</span>
        </span>
        <span class="mobile-product-badge">
          🇺🇸 USA ab <span class="price">19€</span>
        </span>
        <span class="mobile-product-badge">
          🇯🇵 Japan ab <span class="price">12€</span>
        </span>
      </div>
    </div>
  </div>
</section>

