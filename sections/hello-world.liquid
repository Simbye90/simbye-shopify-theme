<!-- SIMBYE HERO SECTION - OPTIMIZED V2 -->

<style>
/* Hero Section - Full Width Design */
.hero-enterprise {
  position: relative;
  width: 100%;
  min-height: calc(100vh - var(--header-height, 90px));
  /* Gradient von Grün zu Weiß */
  background: linear-gradient(180deg, 
    rgba(232, 247, 243, 1) 0%,
    rgba(248, 255, 254, 1) 30%,
    rgba(255, 255, 255, 0) 70%,
    rgba(255, 255, 255, 0) 100%
  );
  overflow: hidden;
  display: flex;
  align-items: center;
  padding: 60px 0 0 0; /* Kein Padding unten für nahtlosen Übergang */
  margin: 0;
}

/* Container - volle Breite ausnutzen */
.hero-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 40px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
  position: relative;
  z-index: 2;
}

/* Content Section */
.hero-content {
  max-width: 600px;
}

/* Trust Badge - NEU POSITIONIERT */
.hero-trust-floating {
  position: absolute;
  top: 20px;
  right: 40px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 20px;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(0, 154, 97, 0.1);
  border-radius: 30px;
  font-size: 14px;
  font-weight: 600;
  color: var(--primary-color, #009a61);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  animation: slideInRight 0.8s ease;
}

.trust-pulse {
  width: 8px;
  height: 8px;
  background: var(--primary-color, #009a61);
  border-radius: 50%;
  animation: pulse 2s infinite;
}

/* Main Title */
.hero-title {
  font-size: clamp(36px, 5.5vw, 64px);
  font-weight: 800;
  line-height: 1.05;
  margin-bottom: 24px;
  letter-spacing: -0.03em;
  animation: fadeInUp 0.6s ease both;
}

.hero-title-primary {
  display: block;
  color: #1a1a1a;
  margin-bottom: 8px;
}

.hero-title-gradient {
  display: block;
  background: linear-gradient(135deg, #009a61 0%, #00d97e 50%, #009a61 100%);
  background-size: 200% auto;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: shimmer 3s ease infinite;
}

/* Subtitle */
.hero-subtitle {
  font-size: clamp(18px, 2.5vw, 22px);
  font-weight: 500;
  color: #5a5a5a;
  line-height: 1.6;
  margin-bottom: 36px;
  animation: fadeInUp 0.7s ease 0.1s both;
}

/* Single CTA Button */
.hero-cta {
  animation: fadeInUp 0.8s ease 0.2s both;
}

.btn-hero-main {
  padding: 20px 48px;
  font-size: 19px;
  font-weight: 700;
  color: white;
  background: linear-gradient(135deg, var(--primary-color, #009a61), #00824f);
  border: none;
  border-radius: 35px;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 6px 24px rgba(0, 154, 97, 0.25);
  position: relative;
  overflow: hidden;
  display: inline-block;
}

.btn-hero-main::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.btn-hero-main:hover {
  transform: translateY(-3px) scale(1.02);
  box-shadow: 0 10px 36px rgba(0, 154, 97, 0.35);
}

.btn-hero-main:hover::before {
  left: 100%;
}

/* Stats Row - Simplified */
.hero-stats {
  display: flex;
  gap: 48px;
  margin-top: 48px;
  animation: fadeInUp 0.9s ease 0.3s both;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stat-number {
  font-size: 32px;
  font-weight: 800;
  color: var(--primary-color, #009a61);
  letter-spacing: -0.02em;
}

.stat-label {
  font-size: 14px;
  font-weight: 500;
  color: #6b6b6b;
}

/* Visual Section */
.hero-visual {
  position: relative;
  animation: fadeIn 1s ease 0.4s both;
}

.hero-phones {
  width: 100%;
  height: auto;
  max-width: 650px;
  position: relative;
  filter: drop-shadow(0 30px 60px rgba(0, 0, 0, 0.15));
  animation: floatSmooth 8s ease-in-out infinite;
}

/* Dynamic Product Labels - mit Shopify Produktdaten */
.product-labels {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.product-label {
  position: absolute;
  padding: 10px 18px;
  background: white;
  border-radius: 25px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  font-weight: 600;
  font-size: 14px;
  display: flex;
  align-items: center;
  gap: 8px;
  animation: floatLabel 5s ease-in-out infinite;
  white-space: nowrap;
}

.product-label-1 {
  top: 15%;
  left: -12%;
  animation-delay: 0s;
}

.product-label-2 {
  top: 45%;
  right: -8%;
  animation-delay: 1.5s;
}

.product-label-3 {
  bottom: 25%;
  left: 0%;
  animation-delay: 3s;
}

.label-flag {
  font-size: 18px;
}

.label-price {
  color: var(--primary-color, #009a61);
  font-weight: 700;
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes shimmer {
  0% { background-position: 0% 50%; }
  100% { background-position: 200% 50%; }
}

@keyframes pulse {
  0%, 100% { 
    opacity: 1;
    transform: scale(1);
  }
  50% { 
    opacity: 0.6;
    transform: scale(1.2);
  }
}

@keyframes floatSmooth {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  25% { transform: translateY(-15px) rotate(-1deg); }
  75% { transform: translateY(10px) rotate(1deg); }
}

@keyframes floatLabel {
  0%, 100% { 
    transform: translateY(0) scale(1);
    opacity: 0.9;
  }
  50% { 
    transform: translateY(-12px) scale(1.05);
    opacity: 1;
  }
}

/* Dark Mode */
[data-theme="dark"] .hero-enterprise {
  background: linear-gradient(180deg,
    rgba(10, 10, 10, 1) 0%,
    rgba(15, 15, 15, 1) 30%,
    rgba(20, 20, 20, 0) 70%,
    rgba(20, 20, 20, 0) 100%
  );
}

[data-theme="dark"] .hero-title-primary {
  color: #f0f0f0;
}

[data-theme="dark"] .hero-subtitle {
  color: #b0b0b0;
}

[data-theme="dark"] .hero-trust-floating {
  background: rgba(0, 0, 0, 0.8);
  border-color: rgba(0, 255, 136, 0.2);
  color: #00ff88;
}

[data-theme="dark"] .product-label {
  background: #1a1a1a;
  color: #f0f0f0;
}

/* MOBILE OPTIMIZED - SEHR WICHTIG */
@media (max-width: 768px) {
  .hero-enterprise {
    min-height: calc(100vh - var(--header-mobile-height, 70px));
    padding: 30px 0 0 0;
  }
  
  .hero-container {
    grid-template-columns: 1fr;
    padding: 0 20px;
    gap: 40px;
  }
  
  /* Trust Badge Mobile - Nach unten */
  .hero-trust-floating {
    position: static;
    display: inline-flex;
    margin-bottom: 20px;
    animation: fadeInUp 0.5s ease;
  }
  
  .hero-content {
    text-align: center;
    max-width: 100%;
    order: 1;
  }
  
  .hero-title {
    font-size: clamp(28px, 8vw, 42px);
    margin-bottom: 16px;
  }
  
  .hero-subtitle {
    font-size: 16px;
    margin-bottom: 28px;
    padding: 0 10px;
  }
  
  /* CTA Mobile optimiert */
  .btn-hero-main {
    width: 100%;
    max-width: 340px;
    padding: 18px 32px;
    font-size: 17px;
  }
  
  /* Stats Mobile - Horizontal Scroll */
  .hero-stats {
    display: flex;
    gap: 32px;
    justify-content: center;
    margin-top: 32px;
    overflow-x: auto;
    padding: 0 10px;
    -webkit-overflow-scrolling: touch;
  }
  
  .stat-item {
    min-width: fit-content;
    text-align: center;
  }
  
  .stat-number {
    font-size: 24px;
  }
  
  /* Visual Mobile */
  .hero-visual {
    order: 2;
    margin-top: 20px;
  }
  
  .hero-phones {
    max-width: 100%;
    margin: 0 -20px; /* Full width on mobile */
    width: calc(100% + 40px);
  }
  
  /* Labels vereinfacht auf Mobile */
  .product-labels {
    display: none; /* Zu viel auf Mobile */
  }
  
  /* Alternative: Einfache Badge unter Bild */
  .mobile-products {
    display: flex;
    gap: 12px;
    justify-content: center;
    margin-top: 20px;
    flex-wrap: wrap;
  }
  
  .mobile-product-badge {
    padding: 8px 16px;
    background: white;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
}

/* Tablet */
@media (min-width: 769px) and (max-width: 1024px) {
  .hero-container {
    gap: 40px;
    padding: 0 30px;
  }
  
  .hero-trust-floating {
    top: 10px;
    right: 20px;
    font-size: 13px;
    padding: 10px 16px;
  }
  
  .hero-phones {
    max-width: 500px;
  }
}

/* Desktop only */
@media (min-width: 769px) {
  .mobile-products {
    display: none;
  }
}
</style>

<section class="hero-enterprise">
  <div class="hero-container">
    <!-- Trust Badge Desktop Position -->
    {% if section.settings.show_trust_badge %}
    <div class="hero-trust-floating">
      <span class="trust-pulse"></span>
      <span>{{ 'hero.trust_badge' | t | default: '100.000+ zufriedene Kunden' }}</span>
    </div>
    {% endif %}
    
    <!-- Left: Content -->
    <div class="hero-content">
      <!-- Trust Badge Mobile Position -->
      {% if section.settings.show_trust_badge %}
      <div class="hero-trust-floating mobile-only" style="display: none;">
        <span class="trust-pulse"></span>
        <span>{{ 'hero.trust_badge' | t | default: '100.000+ zufriedene Kunden' }}</span>
      </div>
      {% endif %}
      
      <!-- Main Title -->
      <h1 class="hero-title">
        <span class="hero-title-primary">
          {{ 'hero.title_line1' | t | default: 'Günstige eSIM' }}
        </span>
        <span class="hero-title-gradient">
          {{ 'hero.title_line2' | t | default: 'Datenpakete für Reisen' }}
        </span>
      </h1>
      
      <!-- Subtitle -->
      <p class="hero-subtitle">
        {{ 'hero.subtitle' | t | default: 'Internet in 190+ Ländern • Keine Roaming-Gebühren • In 2 Minuten aktiviert' }}
      </p>
      
      <!-- Single CTA Button -->
      <div class="hero-cta">
        <button class="btn-hero-main" onclick="window.location.href='{{ section.settings.cta_link | default: '/collections/all' }}'">
          {{ 'hero.cta_primary' | t | default: 'Kostenlos testen' }}
        </button>
      </div>
      
      <!-- Stats - Simplified -->
      <div class="hero-stats">
        <div class="stat-item">
          <span class="stat-number">190+</span>
          <span class="stat-label">{{ 'hero.stat_countries' | t | default: 'Länder' }}</span>
        </div>
        
        <div class="stat-item">
          <span class="stat-number">2 Min</span>
          <span class="stat-label">{{ 'hero.stat_activation' | t | default: 'Installation' }}</span>
        </div>
      </div>
    </div>
    
    <!-- Right: Visual -->
    <div class="hero-visual">
      <!-- Main Image -->
      <img 
        class="hero-phones"
        src="{{ section.settings.hero_image | default: 'https://cdn.shopify.com/s/files/1/0633/9012/2175/files/3-iphones-min-min.webp?v=1742328516' }}"
        alt="{{ 'hero.image_alt' | t | default: 'Simbye eSIM' }}"
        width="650"
        height="520"
        loading="eager"
        fetchpriority="high"
      >
      
      <!-- Dynamic Product Labels (Desktop only) -->
      <div class="product-labels">
        {% assign featured_products = collections.frontpage.products | limit: 3 %}
        {% if featured_products.size > 0 %}
          {% for product in featured_products limit: 3 %}
            <div class="product-label product-label-{{ forloop.index }}">
              <span class="label-flag">
                {% if product.title contains 'Turkey' or product.title contains 'Türkei' %}🇹🇷
                {% elsif product.title contains 'USA' %}🇺🇸
                {% elsif product.title contains 'Japan' %}🇯🇵
                {% elsif product.title contains 'Thailand' %}🇹🇭
                {% else %}🌍{% endif %}
              </span>
              <span>{{ product.title | truncate: 20 }}</span>
              <span class="label-price">{{ product.price | money }}</span>
            </div>
          {% endfor %}
        {% else %}
          <!-- Fallback wenn keine Produkte -->
          <div class="product-label product-label-1">
            <span class="label-flag">🇹🇷</span>
            <span>Türkei • 5GB</span>
            <span class="label-price">9€</span>
          </div>
          <div class="product-label product-label-2">
            <span class="label-flag">🇺🇸</span>
            <span>USA • 10GB</span>
            <span class="label-price">19€</span>
          </div>
          <div class="product-label product-label-3">
            <span class="label-flag">🇯🇵</span>
            <span>Japan • 3GB</span>
            <span class="label-price">12€</span>
          </div>
        {% endif %}
      </div>
      
      <!-- Mobile Product Badges -->
      <div class="mobile-products">
        <span class="mobile-product-badge">🇹🇷 Türkei ab 9€</span>
        <span class="mobile-product-badge">🇺🇸 USA ab 19€</span>
        <span class="mobile-product-badge">🇯🇵 Japan ab 12€</span>
      </div>
    </div>
  </div>
</section>

<!-- Section Schema für Customizer -->
{% schema %}
{
  "name": "Hero Simbye",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Bild",
      "info": "Standard: 3 iPhones"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "checkbox",
      "id": "show_trust_badge",
      "label": "Trust Badge anzeigen",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Simbye",
      "category": "Hero"
    }
  ]
}
{% endschema %}

<!-- Mobile Detection Script -->
<script>
  (function() {
    // Show mobile trust badge on mobile
    if (window.innerWidth <= 768) {
      const mobileBadge = document.querySelector('.hero-trust-floating.mobile-only');
      const desktopBadge = document.querySelector('.hero-trust-floating:not(.mobile-only)');
      if (mobileBadge) mobileBadge.style.display = 'inline-flex';
      if (desktopBadge) desktopBadge.style.display = 'none';
    }
  })();
</script>
