</style>

<section class="hero-enterprise">
  <div class="hero-container">
    <!-- Content -->
    <div class="hero-content">
      <!-- Title -->
      <h1 class="hero-title">
        <span class="hero-title-primary">
          {{ 'hero.title_line1' | t | default: 'Günstige eSIM' }}
        </span>
        <span class="hero-title-gradient">
          {{ 'hero.title_line2' | t | default: 'Datenpakete für Reisen' }}
        </span>
      </h1>
      
      <!-- Subtitle - NUR Tablet/Desktop -->
      <p class="hero-subtitle">
        {{ 'hero.subtitle' | t | default: 'Internet in 190+ Ländern • Keine Roaming-Gebühren • In 2 Minuten aktiviert' }}
      </p>
      
      <!-- ENTERPRISE SUCHBALKEN -->
      <div class="hero-search-wrapper">
        <div class="hero-search-container">
          <div class="hero-search">
            <!-- Location Icon -->
            <svg class="search-location-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
              <circle cx="12" cy="9" r="3"/>
            </svg>
            
            <!-- Input Field -->
            <input 
              type="text" 
              id="destination-search"
              placeholder="{{ 'hero.search_placeholder' | t | default: 'Wohin reist du?' }}"
              autocomplete="off"
              aria-label="{{ 'hero.search_aria_label' | t | default: 'Reiseziel suchen' }}"
            >
            
            <!-- Search Button -->
            <button type="button" class="search-btn" id="search-btn" aria-label="{{ 'hero.search_button' | t | default: 'Suchen' }}">
              {{ 'hero.search_button' | t | default: 'Suchen' }}
            </button>
          </div>
          
          <!-- Dropdown Suggestions -->
          <div class="search-suggestions" id="search-suggestions"></div>
        </div>
      </div>
      
      <!-- STATS HIER FÜR MOBILE (NACH SUCHBALKEN) + DESKTOP -->
      <div class="hero-stats">
        <div class="stat-item">
          <span class="stat-number">190+</span>
          <span class="stat-label">{{ 'hero.stat_countries' | t | default: 'Länder verfügbar' }}</span>
        </div>
        
        <div class="stat-item">
          <span class="stat-number">2 Min</span>
          <span class="stat-label">{{ 'hero.stat_activation' | t | default: 'Installation' }}</span>
        </div>
        
        <div class="stat-item">
          <span class="stat-number">100K+</span>
          <span class="stat-label">{{ 'hero.stat_customers' | t | default: 'Zufriedene Kunden' }}</span>
        </div>
      </div>
    </div>
    
    <!-- Visual -->
    <div class="hero-visual-wrapper">
      <div class="hero-visual">
        <img 
          class="hero-image"
          src="{{ section.settings.hero_image | image_url: width: 1300 | default: 'https://cdn.shopify.com/s/files/1/0633/9012/2175/files/Design_ohne_Titel-3.png?v=1758222990' }}"
          alt="{{ 'hero.image_alt' | t | default: 'Simbye eSIM Weltkugel' }}"
          width="650"
          height="520"
          loading="eager"
          fetchpriority="high"
        >
        
        <!-- Mobile Product Badges -->
        <div class="mobile-products">
          {% comment %} Produkte laden {% endcomment %}
          {% if section.settings.product_1 %}
            {% assign product_1 = all_products[section.settings.product_1] %}
          {% endif %}
          {% if section.settings.product_2 %}
            {% assign product_2 = all_products[section.settings.product_2] %}
          {% endif %}
          {% if section.settings.product_3 %}
            {% assign product_3 = all_products[section.settings.product_3] %}
          {% endif %}
          
          <!-- Mobile Badge 1 -->
          {% if product_1 != blank %}
            <span class="mobile-product-badge">
              {% if product_1.featured_image %}
                <img src="{{ product_1.featured_image | image_url: width: 24 }}" alt="" style="width: 16px; height: 16px; border-radius: 2px; object-fit: cover;">
              {% else %}
                🌍
              {% endif %}
              {% assign product_name = product_1.title | split: ' - ' | first | split: ' | ' | first | replace: 'eSIM', '' | strip %}
              <span>{{ product_name | truncate: 12 }}</span>
              {% if section.settings.product_1_gb != blank %}
                <span style="color: var(--primary-color, #009a61); font-weight: 800;">{{ section.settings.product_1_gb }}</span>
              {% endif %}
              {% if section.settings.product_1_price != blank %}
                <span class="price">{{ section.settings.product_1_price }}</span>
              {% endif %}
