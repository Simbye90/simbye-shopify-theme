<script>
(function() {
  'use strict';
  
  // Elements
  const searchInput = document.getElementById('destination-search');
  const searchButton = document.querySelector('.search-btn');
  const suggestions = document.getElementById('search-suggestions');
  
  // Popular countries f√ºr Autocomplete
  const popularCountries = [
    { name: 'T√ºrkei', code: 'turkey', flag: 'üáπüá∑', url: '/products/esim-turkey' },
    { name: 'USA', code: 'usa', flag: 'üá∫üá∏', url: '/products/esim-usa' },
    { name: 'Japan', code: 'japan', flag: 'üáØüáµ', url: '/products/esim-japan' },
    { name: '√Ñgypten', code: 'egypt', flag: 'üá™üá¨', url: '/products/esim-egypt' },
    { name: 'Thailand', code: 'thailand', flag: 'üáπüá≠', url: '/products/esim-thailand' },
    { name: 'Spanien', code: 'spain', flag: 'üá™üá∏', url: '/products/esim-spain' },
    { name: 'Italien', code: 'italy', flag: 'üáÆüáπ', url: '/products/esim-italy' },
    { name: 'Frankreich', code: 'france', flag: 'üá´üá∑', url: '/products/esim-france' },
    { name: 'Griechenland', code: 'greece', flag: 'üá¨üá∑', url: '/products/esim-greece' },
    { name: 'Dubai', code: 'uae', flag: 'üá¶üá™', url: '/products/esim-uae' }
  ];
  
  let isOpen = false;
  let selectedIndex = -1;
  
  // Show suggestions on focus
  searchInput.addEventListener('focus', function() {
    if (!isOpen) {
      showSuggestions();
    }
  });
  
  // Filter suggestions on input
  searchInput.addEventListener('input', function() {
    const value = this.value.toLowerCase().trim();
    
    if (value.length > 0) {
      // Filter countries based on input
      const filtered = popularCountries.filter(country => 
        country.name.toLowerCase().includes(value) ||
        country.code.includes(value)
      );
      
      if (filtered.length > 0) {
        showFilteredSuggestions(filtered);
      }
    } else {
      showSuggestions();
    }
  });
  
  // Handle search button click
  searchButton.addEventListener('click', function() {
    const value = searchInput.value.trim();
    if (value) {
      // Check if it matches a country
      const country = popularCountries.find(c => 
        c.name.toLowerCase() === value.toLowerCase()
      );
      
      if (country) {
        window.location.href = country.url;
      } else {
        // General search
        window.location.href = `/search?q=${encodeURIComponent(value)}`;
      }
    }
  });
  
  // Handle Enter key
  searchInput.addEventListener('keydown', function(e) {
    const items = suggestions.querySelectorAll('.suggestion-item');
    
    if (e.key === 'Enter') {
      e.preventDefault();
      if (selectedIndex >= 0 && items[selectedIndex]) {
        items[selectedIndex].click();
      } else {
        searchButton.click();
      }
    } else if (e.key === 'ArrowDown') {
      e.preventDefault();
      selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
      updateSelection(items);
    } else if (e.key === 'ArrowUp') {
      e.preventDefault();
      selectedIndex = Math.max(selectedIndex - 1, -1);
      updateSelection(items);
    } else if (e.key === 'Escape') {
      hideSuggestions();
      searchInput.blur();
    }
  });
  
  // Close on click outside
  document.addEventListener('click', function(e) {
    if (!searchInput.contains(e.target) && !suggestions.contains(e.target)) {
      hideSuggestions();
    }
  });
  
  // Functions
  function showSuggestions() {
    suggestions.classList.add('active');
    isOpen = true;
    selectedIndex = -1;
  }
  
  function hideSuggestions() {
    suggestions.classList.remove('active');
    isOpen = false;
    selectedIndex = -1;
  }
  
  function showFilteredSuggestions(filtered) {
    // Build filtered HTML
    let html = '<div class="suggestions-header">Suchergebnisse</div>';
    
    filtered.forEach(country => {
      html += `
        <a href="${country.url}" class="suggestion-item">
          <span style="font-size: 20px; margin-right: 12px;">${country.flag}</span>
          <span class="suggestion-text">${country.name}</span>
        </a>
      `;
    });
    
    // Add "show all" link
    html += `
      <a href="/collections/all" class="suggestion-item" style="background: #f8f8f8;">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#009a61" stroke-width="2" style="margin-right: 12px;">
          <circle cx="12" cy="12" r="10"/>
          <path d="M2 12h20"/>
        </svg>
        <span class="suggestion-text" style="color: #009a61; font-weight: 600;">
          Alle L√§nder anzeigen
        </span>
      </a>
    `;
    
    suggestions.innerHTML = html;
    showSuggestions();
  }
  
  function updateSelection(items) {
    items.forEach((item, index) => {
      if (index === selectedIndex) {
        item.style.background = '#f8fffe';
      } else {
        item.style.background = '';
      }
    });
  }
})();
</script>

