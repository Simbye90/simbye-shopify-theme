<!-- sections/footer-ultimate.liquid -->
<footer class="footer-ultimate full-width" id="footer-{{ section.id }}" data-section-id="{{ section.id }}">
  
  <!-- Main Footer -->
  <div class="footer-main">
    <div class="footer-container">
      
      <!-- Top Row with Logo and Apps -->
      <div class="footer-top-row">
        <!-- Logo -->
        <div class="footer-logo-section">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | image_url: width: 140 }}" 
                 alt="{{ shop.name }}"
                 class="footer-logo"
                 width="140"
                 loading="lazy">
          {% else %}
            <div class="footer-logo-text">{{ shop.name }}</div>
          {% endif %}
        </div>
        
        <!-- App Downloads -->
        {% if section.settings.show_apps %}
          <div class="footer-apps">
            <a href="{{ section.settings.ios_link | default: '#' }}" class="app-store-btn" target="_blank">
              <img src="https://cdn.shopify.com/s/files/1/0633/9012/2175/files/app-store-badge.svg?v=1" 
                   alt="Download on App Store"
                   width="135"
                   height="40">
            </a>
            <a href="{{ section.settings.android_link | default: '#' }}" class="app-store-btn" target="_blank">
              <img src="https://cdn.shopify.com/s/files/1/0633/9012/2175/files/google-play-badge.svg?v=1" 
                   alt="Get it on Google Play"
                   width="135"
                   height="40">
            </a>
          </div>
        {% endif %}
      </div>
      
      <!-- Main Content Grid -->
      <div class="footer-content">
        <!-- Popular Destinations -->
        <div class="footer-column">
          <h3 class="footer-heading">{{ section.settings.destinations_title | default: 'Beliebte Reiseziele' }}</h3>
          <ul class="footer-list">
            {% for block in section.blocks %}
              {% if block.type == 'destination' %}
                <li>
                  <a href="{{ block.settings.url }}" class="footer-link">
                    {{ block.settings.name }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        
        <!-- Company Menu -->
        <div class="footer-column">
          <h3 class="footer-heading">{{ section.settings.company_title | default: 'Simbye' }}</h3>
          <ul class="footer-list">
            {% if section.settings.company_menu != blank %}
              {% for link in linklists[section.settings.company_menu].links %}
                <li>
                  <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                </li>
              {% endfor %}
            {% endif %}
          </ul>
        </div>
        
        <!-- eSIM Info Menu -->
        <div class="footer-column">
          <h3 class="footer-heading">{{ section.settings.esim_title | default: 'eSIM' }}</h3>
          <ul class="footer-list">
            {% if section.settings.esim_menu != blank %}
              {% for link in linklists[section.settings.esim_menu].links %}
                <li>
                  <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                </li>
              {% endfor %}
            {% endif %}
          </ul>
        </div>
        
        <!-- Help Menu -->
        <div class="footer-column">
          <h3 class="footer-heading">{{ section.settings.help_title | default: 'Hilfe' }}</h3>
          <ul class="footer-list">
            {% if section.settings.help_menu != blank %}
              {% for link in linklists[section.settings.help_menu].links %}
                <li>
                  <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
                </li>
              {% endfor %}
            {% endif %}
          </ul>
        </div>
        
        <!-- Social Media -->
        <div class="footer-column footer-social-column">
          <h3 class="footer-heading">{{ section.settings.social_title | default: 'Folge uns' }}</h3>
          <div class="footer-social-links">
            {% for block in section.blocks %}
              {% if block.type == 'social' %}
                <a href="{{ block.settings.url }}" 
                   class="footer-social-link"
                   target="_blank"
                   rel="noopener">
                  <span class="social-icon">{{ block.settings.icon_svg }}</span>
                  <span class="social-name">{{ block.settings.platform }}</span>
                </a>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
      
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="footer-container">
      <div class="footer-bottom-content">
        <!-- Copyright & Legal -->
        <div class="footer-legal">
          <p class="footer-copyright">
            {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright | default: 'Alle Rechte vorbehalten.' }}
          </p>
          <div class="footer-legal-links">
            {% if section.settings.legal_menu != blank %}
              {% for link in linklists[section.settings.legal_menu].links %}
                <a href="{{ link.url }}" class="legal-link">{{ link.title }}</a>
              {% endfor %}
            {% endif %}
          </div>
        </div>
        
        <!-- Payment Methods -->
        {% if section.settings.show_payment and shop.enabled_payment_types != empty %}
          <div class="footer-payment">
            <ul class="payment-methods" role="list">
              {% for type in shop.enabled_payment_types %}
                <li class="payment-method">
                  {{ type | payment_type_svg_tag: class: 'payment-icon-colored' }}
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>
/* Force Full Width */
.shopify-section:has(.footer-ultimate) {
  padding: 0 !important;
  margin: 0 !important;
  width: 100% !important;
}

.footer-ultimate {
  width: 100vw !important;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw !important;
  margin-right: -50vw !important;
}

/* Variables */
.footer-ultimate {
  --footer-bg: #ffffff;
  --footer-text: #000000;
  --footer-text-secondary: #666666;
  --footer-link: #333333;
  --footer-primary: #009a61;
  --footer-border: #f0f0f0;
  --footer-transition: all 0.2s ease;
}

/* Dark Mode */
[data-theme="dark"] .footer-ultimate {
  --footer-bg: #0a0a0a;
  --footer-text: #ffffff;
  --footer-text-secondary: #999999;
  --footer-link: #cccccc;
  --footer-primary: #00d97e;
  --footer-border: rgba(255, 255, 255, 0.08);
}

/* Base */
.footer-ultimate {
  background: var(--footer-bg);
  color: var(--footer-text);
  font-family: system-ui, -apple-system, sans-serif;
}

/* Container */
.footer-container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 40px;
}

/* Main Footer */
.footer-main {
  padding: 60px 0;
  border-bottom: 1px solid var(--footer-border);
}

/* Top Row */
.footer-top-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60px;
}

.footer-logo {
  height: 32px;
  width: auto;
}

.footer-logo-text {
  font-size: 32px;
  font-weight: 700;
  color: var(--footer-primary);
  letter-spacing: -0.02em;
}

/* App Store Buttons */
.footer-apps {
  display: flex;
  gap: 16px;
}

.app-store-btn {
  display: block;
  transition: var(--footer-transition);
}

.app-store-btn:hover {
  opacity: 0.8;
  transform: translateY(-2px);
}

.app-store-btn img {
  height: 40px;
  width: auto;
}

/* Content Grid - Saily Style */
.footer-content {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 40px;
}

/* Footer Column */
.footer-column {
  min-width: 0;
}

.footer-heading {
  font-size: 16px;
  font-weight: 600;
  color: var(--footer-text);
  margin: 0 0 20px;
  letter-spacing: -0.01em;
}

.footer-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-list li {
  margin-bottom: 12px;
}

.footer-link {
  font-size: 14px;
  color: var(--footer-link);
  text-decoration: none;
  transition: var(--footer-transition);
  display: block;
}

.footer-link:hover {
  color: var(--footer-primary);
}

/* Social Links Column */
.footer-social-links {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.footer-social-link {
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 14px;
  color: var(--footer-link);
  text-decoration: none;
  transition: var(--footer-transition);
}

.footer-social-link:hover {
  color: var(--footer-primary);
}

.social-icon {
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.social-icon svg {
  width: 20px;
  height: 20px;
  fill: currentColor;
}

/* Bottom Bar */
.footer-bottom {
  background: var(--footer-bg);
  padding: 30px 0;
}

.footer-bottom-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 40px;
}

/* Legal Section */
.footer-legal {
  display: flex;
  align-items: center;
  gap: 30px;
  flex: 1;
}

.footer-copyright {
  font-size: 13px;
  color: var(--footer-text-secondary);
  margin: 0;
}

.footer-legal-links {
  display: flex;
  gap: 24px;
}

.legal-link {
  font-size: 13px;
  color: var(--footer-link);
  text-decoration: none;
  transition: var(--footer-transition);
  text-decoration: underline;
}

.legal-link:hover {
  color: var(--footer-primary);
}

/* Payment Methods - COLORED LIKE SAILY! */
.footer-payment {
  display: flex;
  align-items: center;
}

.payment-methods {
  display: flex;
  gap: 16px;
  list-style: none;
  padding: 0;
  margin: 0;
  align-items: center;
}

.payment-method {
  display: flex;
  align-items: center;
}

/* PAYMENT ICONS ALWAYS IN COLOR! */
.payment-icon-colored {
  height: 28px;
  width: auto;
  opacity: 1;
  filter: none !important; /* Force color display */
  transition: var(--footer-transition);
}

.payment-icon-colored:hover {
  transform: scale(1.1);
}

/* Dark Mode Payment Icons Stay Colored */
[data-theme="dark"] .payment-icon-colored {
  filter: brightness(1.1) !important;
}

/* Mobile Responsive */
@media (max-width: 1024px) {
  .footer-content {
    grid-template-columns: repeat(3, 1fr) 1.5fr;
    gap: 30px;
  }
  
  .footer-social-column {
    grid-column: span 1;
  }
}

@media (max-width: 768px) {
  .footer-container {
    padding: 0 20px;
  }
  
  .footer-main {
    padding: 40px 0;
  }
  
  .footer-top-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 30px;
    margin-bottom: 40px;
  }
  
  .footer-apps {
    width: 100%;
  }
  
  .app-store-btn {
    flex: 1;
  }
  
  .app-store-btn img {
    width: 100%;
    height: auto;
    max-width: 135px;
  }
  
  .footer-content {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .footer-bottom-content {
    flex-direction: column;
    gap: 20px;
  }
  
  .footer-legal {
    flex-direction: column;
    text-align: center;
    gap: 16px;
  }
  
  .footer-legal-links {
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
  }
  
  .payment-methods {
    flex-wrap: wrap;
    justify-content: center;
  }
}
</style>

