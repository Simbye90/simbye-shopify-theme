<!-- SIMBYE ENTERPRISE FOOTER - DYNAMIC BLOCKS SYSTEM -->

<style>
/* Kill Shopify Grid */
.shopify-section:has(.footer-enterprise) {
  display: block !important;
  padding: 0 !important;
  margin: 0 !important;
  grid-template-columns: unset !important;
}

/* CSS Variables */
:root {
  --footer-bg: #ffffff;
  --footer-text: #1a1a1a;
  --footer-text-secondary: #666666;
  --footer-primary: #009a61;
  --footer-primary-hover: #00824f;
  --footer-accent: #00d97e;
  --footer-border: rgba(0, 0, 0, 0.08);
  --footer-shadow: 0 -2px 10px rgba(0, 0, 0, 0.03);
  --footer-transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode */
[data-theme="dark"] {
  --footer-bg: #0a0a0a;
  --footer-text: #f5f5f5;
  --footer-text-secondary: #999999;
  --footer-primary: #00d97e;
  --footer-primary-hover: #009a61;
  --footer-accent: #00ff88;
  --footer-border: rgba(255, 255, 255, 0.08);
  --footer-shadow: 0 -2px 10px rgba(0, 0, 0, 0.2);
}

/* Main Footer */
.footer-enterprise {
  width: 100%;
  background: var(--footer-bg);
  border-top: 1px solid var(--footer-border);
  box-shadow: var(--footer-shadow);
  transition: var(--footer-transition);
}

/* Container */
.footer-container {
  max-width: 1600px;
  margin: 0 auto;
  padding: 0 40px;
}

/* Top Section with Logo & Apps */
.footer-top {
  padding: 60px 0 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--footer-border);
}

/* Logo */
.footer-logo {
  width: 180px;
  height: auto;
  transition: transform var(--footer-transition);
}

.footer-logo:hover {
  transform: scale(1.02);
}

/* App Store Buttons */
.footer-apps {
  display: flex;
  gap: 12px;
  align-items: center;
}

.app-store-btn {
  display: block;
  transition: var(--footer-transition);
  height: 44px;
  border-radius: 8px;
  overflow: hidden;
}

.app-store-btn img {
  height: 44px;
  width: auto;
  display: block;
}

.app-store-btn:hover {
  transform: translateY(-2px);
  opacity: 0.9;
}

/* Main Content Grid */
.footer-content {
  padding: 60px 0 50px;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 60px;
}

/* Column */
.footer-column {
  min-width: 0;
}

.footer-heading {
  font-size: 18px;
  font-weight: 700;
  color: var(--footer-text);
  margin: 0 0 24px;
  letter-spacing: -0.01em;
}

.footer-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.footer-list li {
  margin: 0;
}

.footer-link {
  display: inline-flex;
  align-items: center;
  color: var(--footer-text-secondary);
  text-decoration: none;
  font-size: 15px;
  font-weight: 500;
  transition: var(--footer-transition);
  letter-spacing: -0.01em;
}

.footer-link:hover {
  color: var(--footer-primary);
  transform: translateX(2px);
}

/* Social Links */
.social-links {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.social-link {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  color: var(--footer-text-secondary);
  text-decoration: none;
  font-size: 15px;
  font-weight: 500;
  transition: var(--footer-transition);
  letter-spacing: -0.01em;
}

.social-link svg {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
}

.social-link:hover {
  color: var(--footer-primary);
  transform: translateX(2px);
}

/* Bottom Section */
.footer-bottom {
  padding: 30px 0;
  border-top: 1px solid var(--footer-border);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Copyright & Legal */
.footer-legal {
  display: flex;
  align-items: center;
  gap: 24px;
}

.footer-copyright {
  color: var(--footer-text-secondary);
  font-size: 14px;
  font-weight: 500;
  margin: 0;
}

.legal-links {
  display: flex;
  gap: 20px;
  list-style: none;
  padding: 0;
  margin: 0;
}

.legal-link {
  color: var(--footer-text-secondary);
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  transition: var(--footer-transition);
  border-bottom: 1px solid transparent;
}

.legal-link:hover {
  color: var(--footer-primary);
  border-bottom-color: var(--footer-primary);
}

/* Payment Icons */
.payment-icons {
  display: flex;
  gap: 12px;
  align-items: center;
}

.payment-icon {
  height: 28px;
  width: auto;
  opacity: 0.7;
  transition: var(--footer-transition);
  filter: grayscale(100%);
}

.payment-icon:hover {
  opacity: 1;
  filter: grayscale(0%);
  transform: translateY(-2px);
}

[data-theme="dark"] .payment-icon {
  opacity: 0.6;
  filter: grayscale(100%) brightness(1.8);
}

[data-theme="dark"] .payment-icon:hover {
  opacity: 0.9;
  filter: grayscale(0%) brightness(1.2);
}

/* Mobile Responsive */
@media (max-width: 1200px) {
  .footer-content {
    grid-template-columns: repeat(2, 1fr);
    gap: 50px 40px;
  }
}

@media (max-width: 768px) {
  .footer-container {
    padding: 0 20px;
  }
  
  .footer-top {
    flex-direction: column;
    gap: 30px;
    padding: 40px 0 30px;
    text-align: center;
  }
  
  .footer-logo {
    width: 160px;
  }
  
  .footer-apps {
    flex-direction: column;
    width: 100%;
  }
  
  .app-store-btn {
    width: 100%;
    max-width: 200px;
  }
  
  .footer-content {
    grid-template-columns: 1fr;
    gap: 40px;
    padding: 40px 0 30px;
  }
  
  .footer-column {
    text-align: left;
  }
  
  .footer-bottom {
    flex-direction: column;
    gap: 24px;
    padding: 24px 0;
  }
  
  .footer-legal {
    flex-direction: column;
    gap: 16px;
    text-align: center;
  }
  
  .legal-links {
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
  }
  
  .payment-icons {
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
  }
  
  .payment-icon {
    height: 24px;
  }
}
</style>

