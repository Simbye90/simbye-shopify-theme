<!-- sections/footer-enterprise.liquid -->
<footer class="footer-enterprise full-width" id="footer-{{ section.id }}" data-section-id="{{ section.id }}">
  <!-- Background Gradient -->
  <div class="footer-bg-gradient"></div>
  
  <!-- Main Footer -->
  <div class="footer-main">
    <div class="footer-container">
      <!-- Footer Grid -->
      <div class="footer-grid">
        <!-- Logo Column -->
        <div class="footer-column footer-brand">
          <div class="footer-logo">
            <img src="{{ section.settings.logo | image_url: width: 200 }}" 
                 alt="{{ shop.name }}"
                 loading="lazy"
                 width="200">
          </div>
          <p class="footer-tagline">{{ section.settings.tagline | default: 'eSIM for 190+ countries. No roaming fees. Instant activation.' }}</p>
          
          <!-- Social Media -->
          {% if section.settings.show_social %}
            <div class="footer-social">
              {% for block in section.blocks %}
                {% if block.type == 'social_link' %}
                  <a href="{{ block.settings.url }}" 
                     class="social-link" 
                     title="{{ block.settings.platform }}"
                     target="_blank"
                     rel="noopener"
                     {{ block.shopify_attributes }}>
                    {{ block.settings.icon_svg }}
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
        
        <!-- Dynamic Menu Columns -->
        {% for block in section.blocks %}
          {% if block.type == 'menu_column' %}
            <div class="footer-column" {{ block.shopify_attributes }}>
              <h4 class="footer-heading">{{ block.settings.heading }}</h4>
              <ul class="footer-links">
                {% if block.settings.menu != blank %}
                  {% for link in linklists[block.settings.menu].links %}
                    <li>
                      <a href="{{ link.url }}" class="footer-link">
                        {{ link.title }}
                        {% if link.object.metafields.custom.is_new %}
                          <span class="link-badge">NEW</span>
                        {% endif %}
                      </a>
                    </li>
                  {% endfor %}
                {% endif %}
                
                <!-- Custom Links -->
                {% for i in (1..6) %}
                  {% capture link_title %}custom_link_{{ i }}_title{% endcapture %}
                  {% capture link_url %}custom_link_{{ i }}_url{% endcapture %}
                  {% if block.settings[link_title] != blank %}
                    <li>
                      <a href="{{ block.settings[link_url] }}" class="footer-link">
                        {{ block.settings[link_title] }}
                      </a>
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          
          <!-- Product Column -->
          {% if block.type == 'product_column' %}
            <div class="footer-column footer-products" {{ block.shopify_attributes }}>
              <h4 class="footer-heading">{{ block.settings.heading | default: 'Popular eSIMs' }}</h4>
              <div class="footer-product-grid">
                {% for i in (1..4) %}
                  {% capture product_id %}product_{{ i }}{% endcapture %}
                  {% assign product = all_products[block.settings[product_id]] %}
                  {% if product %}
                    <a href="{{ product.url }}" class="footer-product">
                      <span class="product-flag">{{ product.metafields.custom.flag | default: 'üåç' }}</span>
                      <span class="product-name">{{ product.title | truncate: 15 }}</span>
                      <span class="product-price">{{ product.price | money_without_currency }}</span>
                    </a>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      <!-- Trust Badges -->
      {% if section.settings.show_trust_badges %}
        <div class="footer-trust">
          <div class="trust-badges">
            <div class="trust-badge">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M9 11l3 3L22 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span>SSL Encrypted</span>
            </div>
            <div class="trust-badge">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span>4.9/5 Rating</span>
            </div>
            <div class="trust-badge">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span>100% Secure</span>
            </div>
            <div class="trust-badge">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              <span>24/7 Support</span>
            </div>
          </div>
        </div>
      {% endif %}
      
      <!-- Payment Methods -->
      {% if section.settings.show_payment %}
        <div class="footer-payment">
          <div class="payment-methods">
            <img src="https://cdn.shopify.com/s/files/1/0633/9012/2175/files/visa.svg?v=1" alt="Visa" height="32" loading="lazy">
            <img src="https://cdn.shopify.com/s/files/1/0633/9012/2175/files/mastercard.svg?v=1" alt="Mastercard" height="32" loading="lazy">
            <img src="https://cdn.shopify.com/s/files/1/0633/9012/2175/files/amex.svg?v=1" alt="Amex" height="32" loading="lazy">
            <img src="https://cdn.shopify.com/s/files/1/0633/9012/2175/files/apple-pay.svg?v=1" alt="Apple Pay" height="32" loading="lazy">
            <img src="https://cdn.shopify.com/s/files/1/0633/9012/2175/files/google-pay.svg?v=1" alt="Google Pay" height="32" loading="lazy">
            <img src="https://cdn.shopify.com/s/files/1/0633/9012/2175/files/paypal.svg?v=1" alt="PayPal" height="32" loading="lazy">
            <img src="https://cdn.shopify.com/s/files/1/0633/9012/2175/files/klarna.svg?v=1" alt="Klarna" height="32" loading="lazy">
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="footer-container">
      <div class="footer-bottom-content">
        <div class="footer-copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'All rights reserved.' }}</p>
        </div>
        <div class="footer-legal">
          {% for link in linklists[section.settings.legal_menu].links %}
            <a href="{{ link.url }}" class="legal-link">{{ link.title }}</a>
          {% endfor %}
        </div>
        <div class="footer-localization">
          <button class="locale-selector">
            <span>üåê {{ shop.locale | upcase }}</span>
          </button>
          <button class="currency-selector">
            <span>{{ cart.currency.symbol }} {{ cart.currency.iso_code }}</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
/* Force Full Width */
.shopify-section:has(.footer-enterprise) {
  padding: 0 !important;
  margin: 0 !important;
  max-width: 100% !important;
  width: 100% !important;
}

.footer-enterprise {
  width: 100vw !important;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw !important;
  margin-right: -50vw !important;
}

/* Variables */
.footer-enterprise {
  --footer-bg: #fafafa;
  --footer-text: #1a1a1a;
  --footer-text-secondary: #666;
  --footer-border: rgba(0, 0, 0, 0.08);
  --footer-primary: #009a61;
  --footer-primary-hover: #00824f;
  --footer-accent: #00d97e;
  --footer-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode */
[data-theme="dark"] .footer-enterprise {
  --footer-bg: #0a0a0a;
  --footer-text: #f5f5f5;
  --footer-text-secondary: #999;
  --footer-border: rgba(255, 255, 255, 0.08);
  --footer-primary: #00d97e;
  --footer-primary-hover: #00c571;
}

/* Main Section */
.footer-enterprise {
  position: relative;
  background: var(--footer-bg);
  overflow: hidden;
}

/* Background Gradient */
.footer-bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, 
    transparent 0%, 
    rgba(0, 154, 97, 0.02) 50%, 
    rgba(0, 154, 97, 0.04) 100%);
  pointer-events: none;
}

[data-theme="dark"] .footer-bg-gradient {
  background: linear-gradient(180deg, 
    transparent 0%, 
    rgba(0, 217, 126, 0.02) 50%, 
    rgba(0, 217, 126, 0.04) 100%);
}

/* Container */
.footer-container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 40px;
}

/* Footer Grid */
.footer-main {
  position: relative;
  z-index: 1;
}

.footer-grid {
  padding: 100px 0 80px 0;
  display: grid;
  grid-template-columns: 2fr repeat(auto-fit, minmax(200px, 1fr));
  gap: 60px;
}

/* Footer Column */
.footer-column {
  min-width: 0;
}

/* Brand Column */
.footer-brand {
  grid-column: span 1;
}

.footer-logo {
  margin-bottom: 20px;
}

.footer-logo img {
  height: 40px;
  width: auto;
}

.footer-tagline {
  font-size: 15px;
  color: var(--footer-text-secondary);
  line-height: 1.6;
  margin: 0 0 24px;
  max-width: 280px;
}

/* Social Links */
.footer-social {
  display: flex;
  gap: 12px;
}

.social-link {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--footer-border);
  border-radius: 12px;
  color: var(--footer-text);
  transition: var(--footer-transition);
}

.social-link:hover {
  background: var(--footer-primary);
  color: white;
  transform: translateY(-3px);
}

.social-link svg {
  width: 20px;
  height: 20px;
}

/* Footer Heading */
.footer-heading {
  font-size: 18px;
  font-weight: 700;
  color: var(--footer-text);
  margin: 0 0 24px;
  letter-spacing: -0.01em;
}

/* Footer Links */
.footer-links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-links li {
  margin-bottom: 12px;
}

.footer-link {
  font-size: 15px;
  color: var(--footer-text-secondary);
  text-decoration: none;
  transition: var(--footer-transition);
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.footer-link:hover {
  color: var(--footer-primary);
  transform: translateX(3px);
}

.link-badge {
  padding: 2px 6px;
  background: var(--footer-accent);
  color: white;
  font-size: 10px;
  font-weight: 700;
  border-radius: 4px;
}

/* Product Grid */
.footer-product-grid {
  display: grid;
  gap: 12px;
}

.footer-product {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px;
  background: var(--footer-border);
  border-radius: 10px;
  text-decoration: none;
  transition: var(--footer-transition);
}

[data-theme="dark"] .footer-product {
  background: rgba(255, 255, 255, 0.03);
}

.footer-product:hover {
  background: var(--footer-primary);
  transform: translateX(3px);
}

.footer-product:hover * {
  color: white !important;
}

.product-flag {
  font-size: 20px;
}

.product-name {
  flex: 1;
  font-size: 14px;
  color: var(--footer-text);
  font-weight: 500;
}

.product-price {
  font-size: 13px;
  color: var(--footer-primary);
  font-weight: 700;
}

/* Trust Badges */
.footer-trust {
  padding: 40px 0;
  border-top: 1px solid var(--footer-border);
  border-bottom: 1px solid var(--footer-border);
}

.trust-badges {
  display: flex;
  justify-content: center;
  gap: 40px;
  flex-wrap: wrap;
}

.trust-badge {
  display: flex;
  align-items: center;
  gap: 10px;
  color: var(--footer-text-secondary);
}

.trust-badge svg {
  width: 24px;
  height: 24px;
  stroke: var(--footer-primary);
}

.trust-badge span {
  font-size: 14px;
  font-weight: 500;
}

/* Payment Methods */
.footer-payment {
  padding: 40px 0;
}

.payment-methods {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
  filter: grayscale(100%) opacity(0.6);
  transition: var(--footer-transition);
}

.payment-methods:hover {
  filter: grayscale(0%) opacity(1);
}

.payment-methods img {
  height: 32px;
  width: auto;
}

/* Bottom Bar */
.footer-bottom {
  background: rgba(0, 0, 0, 0.02);
  padding: 24px 0;
  border-top: 1px solid var(--footer-border);
}

[data-theme="dark"] .footer-bottom {
  background: rgba(255, 255, 255, 0.02);
}

.footer-bottom-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24px;
}

.footer-copyright p {
  font-size: 14px;
  color: var(--footer-text-secondary);
  margin: 0;
}

.footer-legal {
  display: flex;
  gap: 24px;
}

.legal-link {
  font-size: 14px;
  color: var(--footer-text-secondary);
  text-decoration: none;
  transition: var(--footer-transition);
}

.legal-link:hover {
  color: var(--footer-primary);
}

.footer-localization {
  display: flex;
  gap: 12px;
}

.locale-selector,
.currency-selector {
  padding: 8px 16px;
  background: transparent;
  border: 1px solid var(--footer-border);
  border-radius: 8px;
  color: var(--footer-text-secondary);
  font-size: 14px;
  cursor: pointer;
  transition: var(--footer-transition);
}

.locale-selector:hover,
.currency-selector:hover {
  border-color: var(--footer-primary);
  color: var(--footer-primary);
}

/* Mobile Styles */
@media (max-width: 768px) {
  .footer-container {
    padding: 0 20px;
  }
  
  .footer-grid {
    grid-template-columns: 1fr;
    padding: 60px 0 40px 0;
    gap: 40px;
  }
  
  .footer-brand {
    text-align: center;
  }
  
  .footer-logo {
    display: flex;
    justify-content: center;
  }
  
  .footer-tagline {
    max-width: 100%;
    text-align: center;
  }
  
  .footer-social {
    justify-content: center;
  }
  
  .footer-heading {
    font-size: 16px;
    margin-bottom: 16px;
  }
  
  .footer-product-grid {
    grid-template-columns: 1fr 1fr;
  }
  
  .trust-badges {
    gap: 20px;
  }
  
  .trust-badge {
    flex-direction: column;
    text-align: center;
    gap: 6px;
  }
  
  .payment-methods {
    gap: 12px;
  }
  
  .payment-methods img {
    height: 24px;
  }
  
  .footer-bottom-content {
    flex-direction: column;
    text-align: center;
  }
  
  .footer-legal {
    gap: 16px;
  }
  
  .footer-localization {
    width: 100%;
    justify-content: center;
  }
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .footer-enterprise *,
  .footer-enterprise *::before,
  .footer-enterprise *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
