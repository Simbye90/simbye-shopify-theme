<!-- sections/footer-enterprise.liquid -->
<footer class="footer-enterprise full-width" id="footer-{{ section.id }}" data-section-id="{{ section.id }}">
  <!-- Background Pattern -->
  <div class="footer-bg-pattern"></div>
  
  <!-- Main Footer Content -->
  <div class="footer-main">
    <div class="footer-container">
      <div class="footer-grid">
        
        <!-- Brand Column -->
        <div class="footer-brand">
          <!-- Logo -->
          <div class="footer-logo">
            {% if section.settings.logo %}
              <img src="{{ section.settings.logo | image_url: width: 200 }}" 
                   alt="{{ shop.name }}"
                   width="200"
                   height="auto"
                   loading="lazy">
            {% else %}
              <h3 class="footer-logo-text">{{ shop.name }}</h3>
            {% endif %}
          </div>
          
          <!-- Tagline -->
          <p class="footer-tagline">
            {{ section.settings.tagline | default: 'eSIM for 190+ countries ‚Ä¢ No roaming fees ‚Ä¢ Instant activation' }}
          </p>
          
          <!-- Social Media Links -->
          {% if section.settings.show_social %}
            <div class="footer-social">
              {% for block in section.blocks %}
                {% if block.type == 'social_link' %}
                  <a href="{{ block.settings.url }}" 
                     class="social-icon"
                     title="{{ block.settings.platform }}"
                     target="_blank"
                     rel="noopener noreferrer"
                     {{ block.shopify_attributes }}>
                    {{ block.settings.icon_svg }}
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
        
        <!-- Menu Columns (3) -->
        <div class="footer-menus">
          {% assign menu_count = 0 %}
          {% for block in section.blocks %}
            {% if block.type == 'menu_column' and menu_count < 3 %}
              <div class="footer-menu-column" {{ block.shopify_attributes }}>
                <h4 class="footer-menu-title">{{ block.settings.heading }}</h4>
                <ul class="footer-menu-list">
                  {% if block.settings.menu != blank %}
                    {% for link in linklists[block.settings.menu].links %}
                      <li>
                        <a href="{{ link.url }}" class="footer-link">
                          {{ link.title }}
                          {% if forloop.index <= 2 and block.settings.show_new_badge %}
                            <span class="link-badge">NEW</span>
                          {% endif %}
                        </a>
                      </li>
                    {% endfor %}
                  {% endif %}
                </ul>
              </div>
              {% assign menu_count = menu_count | plus: 1 %}
            {% endif %}
          {% endfor %}
        </div>
        
        <!-- Popular Products Column -->
        <div class="footer-products">
          <h4 class="footer-menu-title">{{ section.settings.products_title | default: 'Popular eSIMs' }}</h4>
          <div class="footer-product-list">
            {% for block in section.blocks %}
              {% if block.type == 'product_item' %}
                {% assign product = all_products[block.settings.product] %}
                {% if product %}
                  <a href="{{ product.url }}" class="footer-product-item">
                    <span class="product-flag">{{ product.metafields.custom.flag | default: 'üåç' }}</span>
                    <span class="product-name">{{ product.title | truncate: 20 }}</span>
                    <span class="product-price">{{ product.price | money_without_currency }}</span>
                  </a>
                {% endif %}
              {% endif %}
            {% endfor %}
          </div>
        </div>
        
      </div>
    </div>
  </div>
  
  <!-- Trust & Payment Section -->
  <div class="footer-trust-payment">
    <div class="footer-container">
      <div class="trust-payment-grid">
        
        <!-- Trust Badges -->
        {% if section.settings.show_trust %}
          <div class="footer-trust">
            <div class="trust-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span>4.9/5 (2847 Reviews)</span>
            </div>
            <div class="trust-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M9 11l3 3L22 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11" stroke="currentColor" stroke-width="2"/>
              </svg>
              <span>SSL Secured</span>
            </div>
            <div class="trust-item">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                <path d="M12 6v6l4 2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              <span>24/7 Support</span>
            </div>
          </div>
        {% endif %}
        
        <!-- Payment Icons -->
        {% if section.settings.show_payment and shop.enabled_payment_types != empty %}
          <div class="footer-payment">
            <ul class="payment-icons" role="list">
              {% for type in shop.enabled_payment_types %}
                <li class="payment-icon-item">
                  {{ type | payment_type_svg_tag: class: 'payment-icon' }}
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
        
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="footer-container">
      <div class="footer-bottom-content">
        <div class="footer-copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'All rights reserved.' }}</p>
        </div>
        <div class="footer-legal">
          {% if section.settings.legal_menu != blank %}
            {% for link in linklists[section.settings.legal_menu].links %}
              <a href="{{ link.url }}" class="legal-link">{{ link.title }}</a>
              {% unless forloop.last %}<span class="legal-separator">‚Ä¢</span>{% endunless %}
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
/* Force Full Width */
.shopify-section:has(.footer-enterprise) {
  padding: 0 !important;
  margin: 0 !important;
  width: 100% !important;
}

.footer-enterprise {
  width: 100vw !important;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw !important;
  margin-right: -50vw !important;
}

/* Variables */
.footer-enterprise {
  --footer-bg: #ffffff;
  --footer-text: #1a1a1a;
  --footer-text-secondary: #666666;
  --footer-accent: #009a61;
  --footer-hover: #00824f;
  --footer-border: rgba(0, 0, 0, 0.08);
  --footer-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode */
[data-theme="dark"] .footer-enterprise {
  --footer-bg: #040404;
  --footer-text: #ffffff;
  --footer-text-secondary: #999999;
  --footer-accent: #00d97e;
  --footer-hover: #00c571;
  --footer-border: rgba(255, 255, 255, 0.08);
}

/* Base */
.footer-enterprise {
  position: relative;
  background: var(--footer-bg);
  color: var(--footer-text);
  overflow: hidden;
}

/* Background Pattern */
.footer-bg-pattern {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 10% 20%, rgba(0, 154, 97, 0.03) 0%, transparent 40%),
    radial-gradient(circle at 90% 80%, rgba(0, 217, 126, 0.03) 0%, transparent 40%);
  pointer-events: none;
}

/* Container */
.footer-container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 40px;
}

/* Main Footer */
.footer-main {
  padding: 80px 0 60px;
  border-bottom: 1px solid var(--footer-border);
}

/* Grid Layout */
.footer-grid {
  display: grid;
  grid-template-columns: 300px 1fr 250px;
  gap: 80px;
}

/* Brand Column */
.footer-brand {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.footer-logo img {
  height: 40px;
  width: auto;
}

.footer-logo-text {
  font-size: 24px;
  font-weight: 700;
  margin: 0;
  color: var(--footer-accent);
}

.footer-tagline {
  font-size: 14px;
  line-height: 1.6;
  color: var(--footer-text-secondary);
  margin: 0;
}

/* Social Icons */
.footer-social {
  display: flex;
  gap: 12px;
}

.social-icon {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--footer-border);
  border-radius: 12px;
  color: var(--footer-text);
  transition: var(--footer-transition);
}

.social-icon:hover {
  background: var(--footer-accent);
  color: white;
  transform: translateY(-3px);
}

.social-icon svg {
  width: 20px;
  height: 20px;
  stroke-width: 2;
}

/* Menu Columns */
.footer-menus {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 60px;
}

.footer-menu-column {
  min-width: 0;
}

.footer-menu-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--footer-text);
  margin: 0 0 20px;
  letter-spacing: -0.01em;
}

.footer-menu-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-menu-list li {
  margin-bottom: 12px;
}

.footer-link {
  font-size: 14px;
  color: var(--footer-text-secondary);
  text-decoration: none;
  transition: var(--footer-transition);
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.footer-link:hover {
  color: var(--footer-accent);
  transform: translateX(2px);
}

.link-badge {
  padding: 2px 6px;
  background: var(--footer-accent);
  color: white;
  font-size: 9px;
  font-weight: 700;
  border-radius: 4px;
  letter-spacing: 0.5px;
}

/* Products Column */
.footer-products {
  min-width: 0;
}

.footer-product-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.footer-product-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 12px;
  background: rgba(0, 154, 97, 0.04);
  border-radius: 10px;
  text-decoration: none;
  transition: var(--footer-transition);
}

[data-theme="dark"] .footer-product-item {
  background: rgba(255, 255, 255, 0.03);
}

.footer-product-item:hover {
  background: var(--footer-accent);
  transform: translateX(3px);
}

.footer-product-item:hover * {
  color: white !important;
}

.product-flag {
  font-size: 18px;
}

.product-name {
  flex: 1;
  font-size: 14px;
  color: var(--footer-text);
  font-weight: 500;
}

.product-price {
  font-size: 13px;
  color: var(--footer-accent);
  font-weight: 700;
}

/* Trust & Payment Section */
.footer-trust-payment {
  padding: 40px 0;
  background: rgba(0, 154, 97, 0.02);
}

[data-theme="dark"] .footer-trust-payment {
  background: rgba(255, 255, 255, 0.02);
}

.trust-payment-grid {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 40px;
}

/* Trust Items */
.footer-trust {
  display: flex;
  gap: 30px;
}

.trust-item {
  display: flex;
  align-items: center;
  gap: 8px;
  color: var(--footer-text-secondary);
  font-size: 14px;
}

.trust-item svg {
  width: 20px;
  height: 20px;
  stroke: var(--footer-accent);
}

/* Payment Icons */
.footer-payment {
  display: flex;
}

.payment-icons {
  display: flex;
  gap: 12px;
  list-style: none;
  padding: 0;
  margin: 0;
  align-items: center;
}

.payment-icon-item {
  display: flex;
  align-items: center;
}

.payment-icon {
  height: 28px;
  width: auto;
  filter: grayscale(100%) opacity(0.6);
  transition: var(--footer-transition);
}

.payment-icon:hover {
  filter: grayscale(0%) opacity(1);
  transform: translateY(-2px);
}

/* Bottom Bar */
.footer-bottom {
  padding: 24px 0;
  background: var(--footer-bg);
  border-top: 1px solid var(--footer-border);
}

.footer-bottom-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24px;
}

.footer-copyright p {
  font-size: 13px;
  color: var(--footer-text-secondary);
  margin: 0;
}

.footer-legal {
  display: flex;
  align-items: center;
  gap: 8px;
}

.legal-link {
  font-size: 13px;
  color: var(--footer-text-secondary);
  text-decoration: none;
  transition: var(--footer-transition);
}

.legal-link:hover {
  color: var(--footer-accent);
}

.legal-separator {
  color: var(--footer-border);
  font-size: 10px;
}

/* Mobile Responsive */
@media (max-width: 1024px) {
  .footer-grid {
    grid-template-columns: 1fr 2fr;
    gap: 60px;
  }
  
  .footer-products {
    display: none;
  }
  
  .footer-menus {
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }
}

@media (max-width: 768px) {
  .footer-container {
    padding: 0 20px;
  }
  
  .footer-main {
    padding: 60px 0 40px;
  }
  
  .footer-grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .footer-brand {
    text-align: center;
    align-items: center;
  }
  
  .footer-social {
    justify-content: center;
  }
  
  .footer-menus {
    grid-template-columns: 1fr;
    gap: 30px;
    text-align: center;
  }
  
  .footer-products {
    display: block;
    text-align: center;
  }
  
  .footer-product-list {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
  }
  
  .trust-payment-grid {
    flex-direction: column;
    gap: 30px;
  }
  
  .footer-trust {
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }
  
  .payment-icons {
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .footer-bottom-content {
    flex-direction: column;
    text-align: center;
    gap: 16px;
  }
  
  .footer-legal {
    flex-wrap: wrap;
    justify-content: center;
  }
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .footer-enterprise *,
  .footer-enterprise *::before,
  .footer-enterprise *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
</style>

