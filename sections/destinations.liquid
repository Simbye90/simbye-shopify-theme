  border-radius: 16px;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.6px;
  z-index: 1;
  box-shadow: 0 2px 8px rgba(0, 154, 97, 0.3);
