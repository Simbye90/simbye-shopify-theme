/* View All Button - BIGGER & SHOWS ALL ON SAME PAGE */
.dest-view-all-wrapper {
  text-align: center;
  margin-top: 60px;
  animation: fadeInUp 1s ease 0.2s both;
}

.dest-view-all {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  padding: 20px 60px;
