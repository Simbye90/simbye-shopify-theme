          {% assign all_countries = collections[all_collection_handle] %}
          {% if all_countries and all_countries.products.size > 0 %}
            {% comment %} KEIN LIMIT - zeige ALLE Produkte {% endcomment %}
            {% for product in all_countries.products %}
