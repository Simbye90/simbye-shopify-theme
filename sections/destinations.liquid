  document.addEventListener('DOMContentLoaded', function() {
    const viewAllBtn = document.getElementById('dest-view-all-btn');
    if (viewAllBtn) {
      viewAllBtn.setAttribute('data-view-text', '{{ "destinations.view_all" | t }}');
      viewAllBtn.setAttribute('data-back-text', '{{ "destinations.back_to_popular" | t }}');
      viewAllBtn.setAttribute('data-all-title', '{{ "destinations.all_countries" | t }}');
    }
  });
</script>

