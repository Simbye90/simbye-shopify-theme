<style>
/* CSS Variables for Theme */
:root {
  --dest-bg: #ffffff;
  --dest-card-bg: #ffffff;
  --dest-text: #1a1a1a;
  --dest-text-secondary: #666666;
  --dest-border: #e8e8e8;
  --dest-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  --dest-shadow-hover: 0 6px 20px rgba(0, 0, 0, 0.08);
  --dest-primary: #009a61;
  --dest-primary-hover: #00824f;
  --dest-tab-bg: #f5f5f5;
  --dest-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --dest-bg: #0f0f0f;
  --dest-card-bg: #1a1a1a;
  --dest-text: #f5f5f5;
  --dest-text-secondary: #999999;
  --dest-border: #2a2a2a;
  --dest-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  --dest-shadow-hover: 0 6px 20px rgba(0, 0, 0, 0.5);
  --dest-primary: #00d97e;
  --dest-primary-hover: #009a61;
  --dest-tab-bg: #1a1a1a;
}

/* Main Section Container */
.esim-destinations {
  width: 100%;
  padding: 80px 20px;
  background: var(--dest-bg);
  position: relative;
  transition: var(--dest-transition);
}

.esim-destinations-container {
  max-width: 1440px;
  margin: 0 auto;
  width: 100%;
}

/* Tab Navigation - EXACT LIKE SCREENSHOT */
.dest-tabs {
  display: inline-flex;
  background: var(--dest-tab-bg);
  border-radius: 100px;
  padding: 4px;
  margin: 0 auto 48px;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

[data-theme="dark"] .dest-tabs {
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.3);
}

.dest-tab-btn {
  padding: 12px 32px;
  background: transparent;
  color: var(--dest-text);
  border: none;
  border-radius: 100px;
  font-size: 15px;
  font-weight: 600;
  cursor: pointer;
  transition: var(--dest-transition);
  white-space: nowrap;
  outline: none;
  position: relative;
  min-width: 110px;
  text-align: center;
}

.dest-tab-btn:hover:not(.active) {
  color: var(--dest-primary);
}

.dest-tab-btn.active {
  background: var(--dest-primary);
  color: white;
  box-shadow: 0 2px 8px rgba(0, 154, 97, 0.25);
}

[data-theme="dark"] .dest-tab-btn.active {
  background: var(--dest-primary);
  box-shadow: 0 2px 8px rgba(0, 217, 126, 0.25);
}

/* Section Heading */
.dest-heading {
  font-size: clamp(40px, 5vw, 60px);
  font-weight: 700;
  text-align: center;
  margin: 0 0 60px 0;
  color: var(--dest-text);
  letter-spacing: -0.02em;
  line-height: 1.1;
  transition: var(--dest-transition);
  animation: fadeInUp 0.8s ease;
}

/* Countries Grid - 4 COLUMNS LIKE SCREENSHOT */
.dest-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  margin-bottom: 60px;
  animation: fadeInUp 0.9s ease 0.1s both;
  max-width: 1400px;
  margin-left: auto;
  margin-right: auto;
}

@media (max-width: 1400px) {
  .dest-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 1024px) {
  .dest-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 18px;
  }
}

@media (max-width: 640px) {
  .dest-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
}

/* Country Card - BETTER LAYOUT */
.dest-card {
  background: var(--dest-card-bg);
  border-radius: 20px;
  padding: 24px 28px;
  box-shadow: var(--dest-shadow);
  transition: var(--dest-transition);
  cursor: pointer;
  text-decoration: none;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  border: 1px solid var(--dest-border);
  min-height: 100px;
  gap: 16px;
}

.dest-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--dest-shadow-hover);
  border-color: var(--dest-primary);
}

.dest-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(0, 154, 97, 0.03), 
    transparent);
  transition: left 0.8s ease;
}

[data-theme="dark"] .dest-card::before {
  background: linear-gradient(90deg, 
    transparent, 
    rgba(0, 217, 126, 0.05), 
    transparent);
}

.dest-card:hover::before {
  left: 100%;
}

/* Country Info Section */
.dest-card-info {
  display: flex;
  align-items: center;
  gap: 16px;
  flex: 1;
}

/* Flag Container */
.dest-flag {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  position: relative;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

[data-theme="dark"] .dest-flag {
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  background: #2a2a2a;
}

.dest-flag img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Flag Emoji Fallback */
.dest-flag-emoji {
  font-size: 32px;
  line-height: 1;
}

/* Country Name */
.dest-country {
  font-size: 20px;
  font-weight: 600;
  color: var(--dest-text);
  margin: 0;
  letter-spacing: -0.01em;
  flex: 1;
}

/* Price Section - BETTER POSITIONED */
.dest-price-section {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-left: auto;
}

.dest-price-wrapper {
  text-align: right;
}

.dest-starting {
  font-size: 12px;
  color: var(--dest-text-secondary);
  display: block;
  margin-bottom: 2px;
  font-weight: 500;
  opacity: 0.8;
}

.dest-price {
  font-size: 18px;
  font-weight: 700;
  color: var(--dest-text);
  display: block;
  letter-spacing: -0.02em;
}

/* Arrow Icon */
.dest-arrow {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: var(--dest-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--dest-transition);
  flex-shrink: 0;
}

.dest-card:hover .dest-arrow {
  transform: translateX(4px);
  background: var(--dest-primary-hover);
}

.dest-arrow svg {
  width: 20px;
  height: 20px;
  color: white;
  stroke-width: 2.5;
}

/* Tab Content */
.dest-tab-content {
  display: none;
  opacity: 0;
  animation: tabFadeIn 0.5s ease forwards;
}

.dest-tab-content.active {
  display: block;
}

/* Badge for Popular - BETTER POSITION */
.dest-badge {
  position: absolute;
  top: 12px;
  right: 12px;
  background: var(--dest-primary);
  color: white;
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  z-index: 1;
}

/* View All Button */
.dest-view-all-wrapper {
  text-align: center;
  margin-top: 48px;
  animation: fadeInUp 1s ease 0.2s both;
}

.dest-view-all {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16px 48px;
  background: var(--dest-primary);
  color: white;
  border: none;
  border-radius: 50px;
  font-size: 15px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  cursor: pointer;
  text-decoration: none;
  transition: var(--dest-transition);
  box-shadow: 0 4px 16px rgba(0, 154, 97, 0.2);
  position: relative;
  overflow: hidden;
}

.dest-view-all:hover {
  background: var(--dest-primary-hover);
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(0, 154, 97, 0.3);
}

.dest-view-all::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transform: translate(-50%, -50%);
  transition: width 0.6s ease, height 0.6s ease;
}

.dest-view-all:hover::before {
  width: 300px;
  height: 300px;
}

/* Loading State */
.dest-loading {
  text-align: center;
  padding: 80px 20px;
  color: var(--dest-text-secondary);
  grid-column: 1 / -1;
}

.dest-loading-spinner {
