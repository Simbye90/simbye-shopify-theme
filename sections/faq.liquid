  align-items: center;
  gap: 10px;
  margin-top: 20px;
  padding: 12px 24px;
  background: var(--faq-primary);
  color: white;
  font-size: 16px;
  font-weight: 600;
  text-decoration: none;
  border-radius: 100px;
  transition: var(--faq-transition);
}

.answer-cta:hover {
  background: var(--faq-primary-hover);
  transform: translateX(4px);
  box-shadow: 0 8px 24px rgba(0, 154, 97, 0.3);
}

/* 24/7 Support CTA - MODERN DESIGN */
.faq-support-cta {
  margin-top: 80px;
}

.support-card {
  position: relative;
  padding: 48px;
  background: linear-gradient(135deg, var(--faq-primary) 0%, var(--faq-accent) 100%);
  border-radius: 32px;
  display: flex;
  align-items: center;
  gap: 40px;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0, 154, 97, 0.2);
}

.support-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 60%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: supportFloat 4s ease-in-out infinite;
}

@keyframes supportFloat {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(10deg); }
}

/* Support Icon */
.support-icon-wrapper {
  position: relative;
  flex-shrink: 0;
}

.support-icon {
  width: 80px;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border-radius: 24px;
  color: white;
  animation: iconPulse 2s ease-in-out infinite;
}

@keyframes iconPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.support-badge {
  position: absolute;
  top: -8px;
  right: -8px;
  padding: 4px 8px;
  background: #ff4757;
  color: white;
  font-size: 11px;
  font-weight: 700;
  border-radius: 100px;
  animation: badgeBounce 2s ease-in-out infinite;
}

@keyframes badgeBounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-2px); }
}

.support-content {
  flex: 1;
  color: white;
}

.support-content h3 {
  font-size: 32px;
  font-weight: 700;
  margin: 0 0 12px;
}

.support-content p {
  font-size: 18px;
  opacity: 0.95;
  margin: 0;
}

.support-btn {
  flex-shrink: 0;
  display: inline-flex;
  align-items: center;
  gap: 12px;
  padding: 18px 36px;
  background: white;
  color: var(--faq-primary);
  font-size: 18px;
  font-weight: 700;
  text-decoration: none;
  border-radius: 100px;
  transition: var(--faq-transition);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
}

.support-btn:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
}

.support-btn svg {
