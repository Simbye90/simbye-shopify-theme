  --faq-primary-hover: #00824f;
  --faq-accent: #00d97e;
  --faq-text: #1a1a1a;
  --faq-text-secondary: #666;
  --faq-bg: #ffffff;
  --faq-card-bg: #ffffff;
  --faq-border: rgba(0, 0, 0, 0.08);
  --faq-shadow: 0 12px 48px rgba(0, 154, 97, 0.1);
  --faq-radius: 24px;
  --faq-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode Variables */
