          <span class="about-stat-number">100K+</span>
          <span class="about-stat-label">{{ 'about.stat2' | t | default: 'Happy Customers' }}</span>
        </div>
        <div class="about-stat">
          <span class="about-stat-number">4.9★</span>
          <span class="about-stat-label">{{ 'about.stat3' | t | default: 'Customer Rating' }}</span>
        </div>
        <div class="about-stat">
          <span class="about-stat-number">2 Min</span>
          <span class="about-stat-label">{{ 'about.stat4' | t | default: 'Avg. Activation Time' }}</span>
        </div>
