/* Hide radio inputs */
input[type="radio"][name="device-tab"] {
  display: none;
}

/* Tabs Navigation */
.tabs-navigation {
  background: var(--devices-tab-bg);
  border-radius: 16px 16px 0 0;
  padding: 8px;
  display: flex;
  gap: 8px;
  box-shadow: var(--devices-shadow-sm);
  margin-bottom: 0;
}

.tab-label {
  flex: 1;
  text-align: center;
  padding: 16px 24px;
  background: transparent;
  color: var(--devices-text-secondary);
  border-radius: 12px;
  cursor: pointer;
  font-size: 18px;
  font-weight: 600;
  transition: var(--devices-transition);
  user-select: none;
}

.tab-label:hover {
  background: var(--devices-tab-hover);
  color: white;
}

/* Active Tab State */
#tab-apple:checked ~ .tabs-navigation .tab-label[for="tab-apple"],
#tab-samsung:checked ~ .tabs-navigation .tab-label[for="tab-samsung"],
#tab-google:checked ~ .tabs-navigation .tab-label[for="tab-google"],
#tab-other:checked ~ .tabs-navigation .tab-label[for="tab-other"] {
  background: var(--devices-tab-active);
  color: white;
}

[data-theme="dark"] #tab-apple:checked ~ .tabs-navigation .tab-label[for="tab-apple"],
[data-theme="dark"] #tab-samsung:checked ~ .tabs-navigation .tab-label[for="tab-samsung"],
[data-theme="dark"] #tab-google:checked ~ .tabs-navigation .tab-label[for="tab-google"],
[data-theme="dark"] #tab-other:checked ~ .tabs-navigation .tab-label[for="tab-other"] {
  background: var(--devices-primary);
  color: #0a0a0a;
}

/* Tab Content */
.tab-content {
  display: none;
  background: white;
  border-radius: 0 0 16px 16px;
  padding: 40px;
  box-shadow: var(--devices-shadow-md);
  min-height: 500px;
  animation: fadeInContent 0.3s ease;
}

[data-theme="dark"] .tab-content {
  background: rgba(26, 26, 26, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.08);
}

#tab-apple:checked ~ #content-apple,
#tab-samsung:checked ~ #content-samsung,
#tab-google:checked ~ #content-google,
#tab-other:checked ~ #content-other {
  display: block;
}

/* Device Grid */
.device-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 16px;
  list-style: none;
  padding: 0;
  margin: 0;
}

.device-item {
  background: var(--devices-card-bg);
  padding: 18px;
  border-radius: 12px;
  text-align: center;
  font-size: 15px;
  font-weight: 600;
  color: var(--devices-text);
  transition: var(--devices-transition);
  border: 2px solid transparent;
  text-decoration: none;
  display: block;
}

.device-item:hover {
  background: rgba(0, 154, 97, 0.08);
  border-color: var(--devices-primary);
  transform: translateY(-2px);
  color: var(--devices-primary);
}

[data-theme="dark"] .device-item {
  background: rgba(255, 255, 255, 0.05);
}

[data-theme="dark"] .device-item:hover {
  background: rgba(0, 217, 126, 0.1);
  border-color: var(--devices-primary);
  color: var(--devices-primary);
}

.view-all-btn {
  display: none;
  width: 100%;
  padding: 16px;
  margin-top: 24px;
  background: var(--devices-primary);
  color: white;
  border: none;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: var(--devices-transition);
}

.view-all-btn:hover {
  background: var(--devices-primary-hover);
  transform: translateY(-2px);
}

.device-grid.show-all .device-item {
  display: block !important;
}

/* ==========================================
   WHY CHECK SECTION
   ========================================== */
.why-check-section {
  width: 100%;
  padding: 80px 0;
  background: linear-gradient(180deg,
