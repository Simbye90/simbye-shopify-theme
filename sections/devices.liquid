  }
  
  .tab-label {
    padding: 14px 20px;
    font-size: 16px;
    white-space: nowrap;
  }
  
  .tab-content {
    padding: 24px;
  }
  
  .device-grid {
    grid-template-columns: 1fr;
    gap: 12px;
  }
  
  .device-grid .device-item {
    display: none;
  }
  
  .device-grid .device-item:nth-child(-n+6) {
    display: block;
  }
  
  .view-all-btn {
    display: block;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
    gap: 24px;
  }
  
  .cta-title {
    font-size: 28px;
  }
  
  .cta-button {
    width: 100%;
    justify-content: center;
  }
}
