  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: var(--devices-transition);
}

.faq-question:hover {
  color: var(--devices-primary);
}

.faq-icon {
  width: 24px;
  height: 24px;
  color: var(--devices-primary);
  transition: transform var(--devices-transition);
  flex-shrink: 0;
}

.faq-item.active .faq-icon {
  transform: rotate(180deg);
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.faq-answer-content {
  padding: 0 24px 24px 24px;
  font-size: 15px;
  color: var(--devices-text-secondary);
  line-height: 1.6;
}

.faq-item.active .faq-answer {
  max-height: 500px;
}

/* ==========================================
