  }
  
  .hero-subtitle {
    font-size: 16px;
  }
  
  .hero-stats {
    flex-direction: column;
    gap: 24px;
  }
  
  .devices-tabs-section,
  .why-check-section,
  .faq-section,
  .cta-section {
    padding: 60px 0;
  }
  
  .tabs-container,
  .why-check-container,
  .faq-container,
  .cta-container {
    padding: 0 20px;
  }
  
  .tabs-navigation {
    overflow-x: auto;
