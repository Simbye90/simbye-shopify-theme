<!-- sections/main-page.liquid -->
<!-- SIMBYE MAIN PAGE SECTION - DYNAMIC -->

<style>
/* CSS Variables - Enterprise Style */
:root {
  --page-primary: #009a61;
  --page-primary-hover: #00824f;
  --page-accent: #00d97e;
  --page-text: #1a1a1a;
  --page-text-secondary: #666666;
  --page-bg: #ffffff;
  --page-card-bg: #ffffff;
  --page-border: rgba(0, 0, 0, 0.08);
  --page-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.06);
  --page-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.08);
  --page-radius: 24px;
  --page-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

[data-theme="dark"] {
  --page-text: #f5f5f5;
  --page-text-secondary: #999999;
  --page-bg: #0a0a0a;
  --page-card-bg: rgba(26, 26, 26, 0.8);
  --page-border: rgba(255, 255, 255, 0.08);
  --page-primary: #00d97e;
  --page-accent: #00ff88;
  --page-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.3);
  --page-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
}

/* Kill Shopify Grid */
.shopify-section:has(.main-page-section) {
  display: block !important;
  padding: 0 !important;
  margin: 0 !important;
  grid-template-columns: unset !important;
}

/* Main Section */
.main-page-section {
  width: 100%;
  min-height: 60vh;
  padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
  background: var(--page-bg);
  position: relative;
}

[data-theme="dark"] .main-page-section {
  background: #0a0a0a;
}

/* Container */
.page-container {
  margin: 0 auto;
  padding: 0 40px;
  position: relative;
}

.page-container.narrow { max-width: 800px; }
.page-container.medium { max-width: 1200px; }
.page-container.wide { max-width: 1440px; }
.page-container.full { max-width: 100%; padding: 0; }

/* Page Header */
.page-header {
  text-align: {{ section.settings.text_alignment }};
  margin-bottom: 60px;
  animation: fadeInUp 0.8s ease;
}

.page-title {
  font-size: clamp(36px, 5vw, 56px);
  font-weight: 700;
  color: var(--page-text);
  margin: 0 0 16px 0;
  letter-spacing: -0.02em;
  line-height: 1.1;
}

.page-subtitle {
  font-size: 18px;
  color: var(--page-text-secondary);
  margin: 0;
  line-height: 1.6;
}

/* Page Content */
.page-content {
  color: var(--page-text);
  font-size: 16px;
  line-height: 1.8;
  animation: fadeInUp 0.9s ease 0.2s both;
}

.page-content h1,
.page-content h2,
.page-content h3,
.page-content h4 {
  color: var(--page-text);
  font-weight: 700;
  letter-spacing: -0.01em;
  margin-top: 2em;
  margin-bottom: 0.8em;
  line-height: 1.3;
}

.page-content h1:first-child,
.page-content h2:first-child,
.page-content h3:first-child {
  margin-top: 0;
}

.page-content h1 { font-size: 2.5em; }
.page-content h2 { font-size: 2em; }
.page-content h3 { font-size: 1.5em; }
.page-content h4 { font-size: 1.25em; }

.page-content p {
  margin-bottom: 1.5em;
}

.page-content a {
  color: var(--page-primary);
  text-decoration: underline;
  transition: var(--page-transition);
}

.page-content a:hover {
  color: var(--page-primary-hover);
}

.page-content ul,
.page-content ol {
  margin: 1.5em 0;
  padding-left: 2em;
}

.page-content li {
  margin-bottom: 0.8em;
}

.page-content img {
  max-width: 100%;
  height: auto;
  border-radius: 16px;
  margin: 2em 0;
  box-shadow: var(--page-shadow-md);
}

.page-content blockquote {
  border-left: 4px solid var(--page-primary);
  padding-left: 1.5em;
  margin: 2em 0;
  font-style: italic;
  color: var(--page-text-secondary);
}

.page-content table {
  width: 100%;
  border-collapse: collapse;
  margin: 2em 0;
}

.page-content table th,
.page-content table td {
  padding: 12px 16px;
  border: 1px solid var(--page-border);
  text-align: left;
}

.page-content table th {
  background: var(--page-card-bg);
  font-weight: 600;
}

.page-content code {
  background: rgba(0, 154, 97, 0.1);
  padding: 3px 8px;
  border-radius: 6px;
  font-family: monospace;
  font-size: 0.9em;
  color: var(--page-primary);
}

[data-theme="dark"] .page-content code {
  background: rgba(0, 217, 126, 0.15);
  color: var(--page-accent);
}

.page-content pre {
  background: var(--page-card-bg);
  padding: 1.5em;
  border-radius: 12px;
  overflow-x: auto;
  margin: 2em 0;
  border: 1px solid var(--page-border);
}

.page-content pre code {
  background: none;
  padding: 0;
  color: var(--page-text);
}

/* Responsive */
@media (max-width: 1024px) {
  .page-container {
    padding: 0 24px;
  }
}

@media (max-width: 768px) {
  .main-page-section {
    padding: 100px 0 60px 0;
  }
  
  .page-container {
    padding: 0 20px;
  }
  
  .page-header {
    margin-bottom: 40px;
  }
  
  .page-title {
    font-size: 32px;
  }
  
  .page-subtitle {
    font-size: 16px;
  }
  
  .page-content {
    font-size: 15px;
  }
  
  .page-content h1 { font-size: 2em; }
  .page-content h2 { font-size: 1.75em; }
  .page-content h3 { font-size: 1.5em; }
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

<div class="main-page-section">
  <div class="page-container {{ section.settings.container_width }}">
    
    {% if section.settings.show_title %}
      <div class="page-header">
        <h1 class="page-title">{{ page.title }}</h1>
        
        {% if page.metafields.custom.subtitle != blank %}
          <p class="page-subtitle">{{ page.metafields.custom.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    {% if page.content != blank %}
      <div class="page-content">
        {{ page.content }}
      </div>
    {% endif %}
    
  </div>
</div>

{% schema %}
{
  "name": "Main Page",
  "settings": [
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show Page Title",
      "default": true
    },
    {
      "type": "select",
      "id": "container_width",
      "label": "Container Width",
      "options": [
        {
          "value": "narrow",
          "label": "Narrow (800px)"
        },
        {
          "value": "medium",
          "label": "Medium (1200px)"
        },
        {
          "value": "wide",
          "label": "Wide (1440px)"
        },
        {
          "value": "full",
          "label": "Full Width"
        }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding Top",
      "default": 120
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ]
}
{% endschema %}