<!-- SIMBYE ENTERPRISE 404 PAGE -->

<style>
/* ============================================
   ENTERPRISE 404 PAGE - SIMBYE STYLE
   ============================================ */

/* CSS Variables */
:root {
  --error-primary: #009a61;
  --error-accent: #00d97e;
  --error-text: #1a1a1a;
  --error-text-secondary: #666666;
  --error-bg: #ffffff;
  --error-card-bg: #ffffff;
  --error-border: rgba(0, 0, 0, 0.08);
  --error-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  --error-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

[data-theme="dark"] {
  --error-text: #f5f5f5;
  --error-text-secondary: #999999;
  --error-bg: #0a0a0a;
  --error-card-bg: rgba(26, 26, 26, 0.8);
  --error-border: rgba(255, 255, 255, 0.08);
  --error-primary: #00d97e;
  --error-accent: #00ff88;
  --error-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
}

/* Kill Shopify Grid */
.shopify-section:has(.error-page-enterprise) {
  display: block !important;
  padding: 0 !important;
  margin: 0 !important;
  grid-template-columns: unset !important;
  max-width: 100% !important;
  width: 100% !important;
}

/* Main Section */
.error-page-enterprise {
  width: 100%;
  min-height: calc(100vh - 90px);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--error-bg);
  padding: 80px 20px;
  position: relative;
  overflow: hidden;
}

[data-theme="light"] .error-page-enterprise {
  background: #ffffff;
}

[data-theme="dark"] .error-page-enterprise {
  background: #0a0a0a;
}

/* Background Pattern */
.error-page-enterprise::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.03;
  pointer-events: none;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(0, 154, 97, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(0, 217, 126, 0.1) 0%, transparent 50%);
}

/* Container */
.error-container {
  max-width: 800px;
  width: 100%;
  text-align: center;
  position: relative;
  z-index: 1;
  animation: fadeInUp 0.8s ease;
}

/* 404 Number */
.error-number {
  font-size: clamp(120px, 20vw, 200px);
  font-weight: 900;
  line-height: 1;
  margin: 0 0 24px 0;
  background: linear-gradient(135deg, var(--error-primary), var(--error-accent));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.02em;
  animation: fadeInScale 0.8s ease;
}

/* Title */
.error-title {
  font-size: clamp(32px, 5vw, 48px);
  font-weight: 700;
  color: var(--error-text);
  margin: 0 0 16px 0;
  letter-spacing: -0.02em;
  line-height: 1.2;
  animation: fadeInUp 0.8s ease 0.1s both;
}

/* Description */
.error-description {
  font-size: 18px;
  color: var(--error-text-secondary);
  margin: 0 0 48px 0;
  line-height: 1.6;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  animation: fadeInUp 0.8s ease 0.2s both;
}

/* Search Box */
.error-search {
  max-width: 600px;
  margin: 0 auto 48px auto;
  position: relative;
  animation: fadeInUp 0.8s ease 0.3s both;
}

.search-wrapper {
  display: flex;
  align-items: center;
  background: var(--error-card-bg);
  border-radius: 100px;
  box-shadow: var(--error-shadow);
  border: 2px solid var(--error-border);
  transition: var(--error-transition);
  height: 60px;
  overflow: hidden;
}

[data-theme="dark"] .search-wrapper {
  background: rgba(26, 26, 26, 0.8);
  border-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
}

.search-wrapper:focus-within {
  border-color: var(--error-primary);
  box-shadow: 0 8px 32px rgba(0, 154, 97, 0.2);
}

.search-icon {
  width: 24px;
  height: 24px;
  margin-left: 24px;
  color: var(--error-text-secondary);
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  border: none;
  background: transparent;
  padding: 0 20px;
  font-size: 16px;
  color: var(--error-text);
  outline: none;
  font-family: inherit;
}

.search-input::placeholder {
  color: var(--error-text-secondary);
}

[data-theme="dark"] .search-input {
  color: #f5f5f5;
}

.search-btn {
  padding: 0 32px;
  height: 100%;
  background: linear-gradient(135deg, var(--error-primary), var(--error-accent));
  color: white;
  border: none;
  font-weight: 700;
  font-size: 15px;
  cursor: pointer;
  transition: var(--error-transition);
  white-space: nowrap;
  font-family: inherit;
}

.search-btn:hover {
  background: linear-gradient(135deg, #00824f, var(--error-primary));
}

/* Quick Links */
.error-links {
  display: flex;
  gap: 16px;
  justify-content: center;
  flex-wrap: wrap;
  animation: fadeInUp 0.8s ease 0.4s both;
}

.error-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 16px 32px;
  background: var(--error-card-bg);
  color: var(--error-text);
  border-radius: 100px;
  text-decoration: none;
  font-weight: 600;
  font-size: 16px;
  border: 2px solid var(--error-border);
  transition: var(--error-transition);
  box-shadow: var(--error-shadow);
}

[data-theme="dark"] .error-link {
  background: rgba(26, 26, 26, 0.8);
  border-color: rgba(255, 255, 255, 0.08);
}

.error-link:hover {
  border-color: var(--error-primary);
  transform: translateY(-2px);
  box-shadow: 0 12px 32px rgba(0, 154, 97, 0.15);
}

.error-link-primary {
  background: linear-gradient(135deg, var(--error-primary), var(--error-accent));
  color: white;
  border-color: transparent;
}

[data-theme="dark"] .error-link-primary {
  background: linear-gradient(135deg, #00d97e, #00ff88);
  color: #0a0a0a;
}

.error-link-primary:hover {
  transform: translateY(-2px) scale(1.02);
  box-shadow: 0 12px 32px rgba(0, 154, 97, 0.3);
}

.link-icon {
  width: 20px;
  height: 20px;
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* Responsive */
@media (max-width: 768px) {
  .error-page-enterprise {
    min-height: calc(100vh - 70px);
    padding: 60px 20px;
  }
  
  .error-number {
    font-size: 100px;
    margin-bottom: 20px;
  }
  
  .error-title {
    font-size: 28px;
    margin-bottom: 12px;
  }
  
  .error-description {
    font-size: 16px;
    margin-bottom: 36px;
  }
  
  .error-search {
    margin-bottom: 36px;
  }
  
  .search-wrapper {
    height: 54px;
  }
  
  .search-icon {
    width: 20px;
    height: 20px;
    margin-left: 20px;
  }
  
  .search-input {
    font-size: 15px;
    padding: 0 16px;
  }
  
  .search-btn {
    padding: 0 24px;
    font-size: 14px;
  }
  
  .error-links {
    gap: 12px;
  }
  
  .error-link {
    padding: 14px 24px;
    font-size: 15px;
  }
}

@media (max-width: 480px) {
  .error-number {
    font-size: 80px;
  }
  
  .error-title {
    font-size: 24px;
  }
  
  .error-links {
    flex-direction: column;
    align-items: stretch;
  }
  
  .error-link {
    justify-content: center;
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
</style>

<!-- Main Section -->
<section class="error-page-enterprise">
  <div class="error-container">
    
    <!-- 404 Number -->
    <div class="error-number">404</div>
    
    <!-- Title -->
    <h1 class="error-title">{{ '404.title' | t | default: 'Page Not Found' }}</h1>
    
    <!-- Description -->
    <p class="error-description">
      {{ '404.not_found' | t | default: "The page you're looking for doesn't exist or has been moved. Try searching for what you need or browse our eSIM products." }}
    </p>
    
    <!-- Search Box -->
    <div class="error-search">
      <form action="/search" method="get" class="search-wrapper">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.35-4.35"/>
        </svg>
        
        <input 
          type="search" 
          name="q" 
          class="search-input"
          placeholder="Search for eSIM products..."
          autocomplete="off"
          autofocus
        >
        
        <button type="submit" class="search-btn">
          Search
        </button>
      </form>
    </div>
    
    <!-- Quick Links -->
    <div class="error-links">
      <a href="{{ routes.root_url }}" class="error-link error-link-primary">
        <svg class="link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
        <span>{{ '404.go_home' | t | default: 'Go to Homepage' }}</span>
      </a>
      
      <a href="{{ routes.all_products_collection_url }}" class="error-link">
        <svg class="link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"/>
          <circle cx="20" cy="21" r="1"/>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
        </svg>
        <span>{{ '404.back_to_shopping' | t | default: 'Browse eSIMs' }}</span>
      </a>
      
      <a href="/pages/support" class="error-link">
        <svg class="link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
          <line x1="12" y1="17" x2="12.01" y2="17"/>
        </svg>
        <span>{{ '404.contact_support' | t | default: 'Contact Support' }}</span>
      </a>
    </div>
    
  </div>
</section>

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "header",
      "content": "404 Error Page"
    },
    {
      "type": "paragraph",
      "content": "This page is shown when a customer visits an invalid URL. Customize translations in locales/en.default.json"
    }
  ]
}
{% endschema %}