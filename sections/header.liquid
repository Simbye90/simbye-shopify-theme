<style>
/* CSS Custom Properties f√ºr Theming */
:root {
  --header-height: 80px;
  --header-mobile-height: 65px;
  --primary-color: #009a61;
  --primary-hover: #00824f;
  --text-color: #2c2c2c;
  --bg-header: #ffffff;
  --bg-dropdown: #ffffff;
  --border-color: #e5e5e5;
  --transition-base: 0.3s ease;
  --transition-fast: 0.2s ease;
  --font-base: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

[data-theme="dark"] {
  --text-color: #ffffff;
  --bg-header: #1a1a1a;
  --bg-dropdown: #2a2a2a;
  --border-color: #3a3a3a;
}

/* Header Base */
.enterprise-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: var(--header-height);
  background: var(--bg-header);
  border-bottom: 1px solid var(--border-color);
  z-index: 1000;
  transition: all var(--transition-base);
  will-change: transform;
}

.enterprise-header.scrolled {
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
}

.enterprise-header.hidden {
  transform: translateY(-100%);
}

.header-container {
  display: grid;
  grid-template-columns: 240px 1fr auto;
  align-items: center;
  height: 100%;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 32px;
  gap: 48px;
}

/* Logo Section - BIGGER! */
.header-logo {
  display: flex;
  align-items: center;
  height: 100%;
}

.header-logo a {
  display: flex;
  align-items: center;
}

.header-logo img {
  width: auto;
  height: 45px;
  max-width: 240px;
  object-fit: contain;
}

/* Navigation - Desktop (NO SUPPORT) */
.header-nav {
  display: flex;
  align-items: center;
  gap: 12px;
  height: 100%;
}

.nav-item {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-link {
  display: inline-flex;
  align-items: center;
  padding: 10px 20px;
  color: var(--text-color);
  font-size: 16px;
  font-weight: 500;
  text-decoration: none;
  border-radius: 8px;
  transition: all var(--transition-fast);
  position: relative;
  font-family: var(--font-base);
  white-space: nowrap;
}

.nav-link:hover {
  background: rgba(0, 154, 97, 0.08);
  color: var(--primary-color);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 2px;
  background: var(--primary-color);
  transition: width var(--transition-fast);
}

.nav-link.active::after {
  width: calc(100% - 40px);
}

/* Actions Section */
.header-actions {
  display: flex;
  align-items: center;
  gap: 20px;
  height: 100%;
}

/* Auth Buttons */
.auth-group {
  display: flex;
  height: 44px;
  border-radius: 22px;
  overflow: hidden;
  box-shadow: 0 0 0 1px var(--border-color);
  background: var(--bg-header);
}

.auth-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 24px;
  height: 100%;
  font-size: 15px;
  font-weight: 500;
  color: white;
  background: var(--primary-color);
  text-decoration: none;
  transition: all var(--transition-fast);
  white-space: nowrap;
  cursor: pointer;
}

.auth-btn:hover {
  background: var(--primary-hover);
}

.auth-btn.login {
  border-radius: 22px 0 0 22px;
  border-right: 1px solid rgba(255, 255, 255, 0.2);
}

.auth-btn.register {
  border-radius: 0 22px 22px 0;
  background: #4a4a4a;
}

.auth-btn.register:hover {
  background: #3a3a3a;
}

.auth-btn.logged-in {
  border-radius: 22px;
  padding: 0 28px;
  gap: 10px;
}

/* Language & Currency Switchers */
.switcher-group {
  display: flex;
  gap: 12px;
}

.switcher {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 10px 16px;
  border-radius: 10px;
  background: transparent;
  border: 1px solid var(--border-color);
  color: var(--text-color);
  font-size: 15px;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
  font-family: var(--font-base);
}

.switcher:hover {
  background: rgba(0, 154, 97, 0.05);
  border-color: var(--primary-color);
}

.switcher-icon {
  width: 22px;
  height: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

/* Dark Mode Toggle - BETTER ICON */
.theme-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 12px;
  background: transparent;
  border: 1px solid var(--border-color);
  cursor: pointer;
  transition: all var(--transition-fast);
  position: relative;
  overflow: hidden;
}

.theme-toggle:hover {
  background: rgba(0, 154, 97, 0.05);
  border-color: var(--primary-color);
  transform: scale(1.05);
}

.theme-toggle svg {
  width: 24px;
  height: 24px;
  transition: all var(--transition-base);
  position: absolute;
  color: var(--text-color);
}

.theme-toggle .sun-icon {
  opacity: 0;
  transform: rotate(-180deg) scale(0.5);
}

.theme-toggle .moon-icon {
  opacity: 1;
  transform: rotate(0deg) scale(1);
}

[data-theme="dark"] .theme-toggle .sun-icon {
  opacity: 1;
  transform: rotate(0deg) scale(1);
}

[data-theme="dark"] .theme-toggle .moon-icon {
  opacity: 0;
  transform: rotate(180deg) scale(0.5);
}

/* Mobile Menu Toggle */
.mobile-toggle {
  display: none;
  flex-direction: column;
  justify-content: center;
  gap: 5px;
  width: 44px;
  height: 44px;
  padding: 10px;
  cursor: pointer;
  z-index: 1001;
}

.mobile-toggle span {
  display: block;
  width: 100%;
  height: 2px;
  background: var(--text-color);
  transition: all var(--transition-fast);
  border-radius: 2px;
}

.mobile-toggle.active span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.mobile-toggle.active span:nth-child(2) {
  opacity: 0;
}

.mobile-toggle.active span:nth-child(3) {
  transform: rotate(-45deg) translate(7px, -6px);
}

/* Mobile Menu */
.mobile-menu {
  position: fixed;
  top: 0;
  right: -100%;
  width: 85%;
  max-width: 400px;
  height: 100vh;
  background: var(--bg-header);
  box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
  transition: right var(--transition-base);
  z-index: 999;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.mobile-menu.active {
  right: 0;
}

.mobile-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-base);
  z-index: 998;
}

.mobile-menu-overlay.active {
  opacity: 1;
  visibility: visible;
}

/* Mobile Menu Content */
.mobile-menu-header {
  padding: 20px;
  border-bottom: 1px solid var(--border-color);
}

.mobile-menu-nav {
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.mobile-nav-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  color: var(--text-color);
  text-decoration: none;
  font-size: 16px;
  font-weight: 500;
  border-radius: 8px;
  transition: all var(--transition-fast);
}

.mobile-nav-item:hover {
  background: rgba(0, 154, 97, 0.08);
  color: var(--primary-color);
}

.mobile-menu-actions {
  padding: 20px;
  border-top: 1px solid var(--border-color);
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.mobile-action-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14px 0;
}

.mobile-action-row span {
  font-size: 15px;
  font-weight: 500;
  color: var(--text-color);
}

/* Dark Mode Switch for Mobile */
.dark-mode-switch {
  position: relative;
  width: 52px;
  height: 28px;
  background: var(--border-color);
  border-radius: 14px;
  cursor: pointer;
  transition: background var(--transition-base);
}

.dark-mode-switch.active {
  background: var(--primary-color);
}

.dark-mode-switch-handle {
  position: absolute;
  top: 3px;
  left: 3px;
  width: 22px;
  height: 22px;
  background: white;
  border-radius: 50%;
  transition: transform var(--transition-base);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.dark-mode-switch.active .dark-mode-switch-handle {
  transform: translateX(24px);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .header-container {
    grid-template-columns: 200px 1fr auto;
    gap: 24px;
    padding: 0 24px;
  }
  
  .nav-link {
    padding: 8px 16px;
    font-size: 15px;
  }
  
  .header-logo img {
    height: 40px;
  }
}

@media (max-width: 768px) {
  .enterprise-header {
    height: var(--header-mobile-height);
  }
  
  .header-container {
    grid-template-columns: 180px 1fr;
    padding: 0 16px;
  }
  
  .header-logo img {
    height: 35px;
    max-width: 180px;
  }
  
  .header-nav,
  .switcher-group,
  .theme-toggle {
    display: none;
  }
  
  .mobile-toggle {
    display: flex;
  }
  
  .auth-group:not(.mobile-menu-header .auth-group) {
    display: none;
  }
}

/* Loading Animation */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.header-loaded .nav-item,
.header-loaded .header-actions > * {
  animation: fadeInUp 0.5s ease forwards;
  opacity: 0;
}

.header-loaded .nav-item:nth-child(1) { animation-delay: 50ms; }
.header-loaded .nav-item:nth-child(2) { animation-delay: 100ms; }
.header-loaded .nav-item:nth-child(3) { animation-delay: 150ms; }
</style>

