<style>
/* CSS Custom Properties */
:root {
  --header-height: 80px;
  --header-mobile-height: 65px;
  --primary-color: #009a61;
  --primary-hover: #00824f;
  --text-color: #1a1a1a;
  --text-secondary: #666666;
  --bg-header: #ffffff;
  --border-color: rgba(0, 0, 0, 0.08);
  --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
  --transition-fast: 150ms ease;
  --transition-base: 250ms ease;
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --text-color: #f5f5f5;
  --text-secondary: #b0b0b0;
  --bg-header: #0f0f0f;
  --border-color: rgba(255, 255, 255, 0.1);
  --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.3);
}

/* Header Base */
.enterprise-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: var(--header-height);
  background: var(--bg-header);
  z-index: 1000;
  transition: all var(--transition-base);
  border-bottom: 1px solid var(--border-color);
}

.enterprise-header.scrolled {
  box-shadow: var(--shadow-md);
}

.header-container {
  display: grid;
  grid-template-columns: 200px 1fr auto;
  align-items: center;
  height: 100%;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 32px;
  gap: 40px;
}

/* Logo */
.header-logo {
  display: flex;
  align-items: center;
  height: 100%;
}

.header-logo img {
  width: 180px;
  height: auto;
  object-fit: contain;
}

/* Desktop Navigation */
.header-nav {
  display: flex;
  align-items: center;
  gap: 8px;
  height: 100%;
}

.nav-link {
  display: inline-flex;
  align-items: center;
  padding: 10px 20px;
  color: var(--text-color);
  font-size: 15px;
  font-weight: 500;
  text-decoration: none;
  border-radius: 8px;
  transition: all var(--transition-fast);
  position: relative;
}

.nav-link:hover {
  background: rgba(0, 154, 97, 0.08);
  color: var(--primary-color);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20px;
  right: 20px;
  height: 2px;
  background: var(--primary-color);
  transform: scaleX(0);
  transition: transform var(--transition-fast);
}

.nav-link.active::after,
.nav-link:hover::after {
  transform: scaleX(1);
}

/* Desktop Actions */
.header-actions {
  display: flex;
  align-items: center;
  gap: 16px;
  height: 100%;
}

/* Login Button - Desktop */
.auth-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 28px;
  height: 44px;
  font-size: 15px;
  font-weight: 600;
  color: white;
  background: var(--primary-color);
  text-decoration: none;
  border-radius: 22px;
  transition: all var(--transition-base);
  gap: 8px;
}

.auth-btn:hover {
  background: var(--primary-hover);
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.25);
}

/* Switcher Group */
.switcher-group {
  display: flex;
  gap: 8px;
}

.switcher {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 10px 16px;
  border-radius: 10px;
  background: transparent;
  border: 1px solid var(--border-color);
  color: var(--text-color);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.switcher:hover {
  border-color: var(--primary-color);
  background: rgba(0, 154, 97, 0.05);
}

/* Dark Mode Toggle - Desktop */
.theme-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 12px;
  background: transparent;
  border: 1px solid var(--border-color);
  cursor: pointer;
  transition: all var(--transition-fast);
  position: relative;
  overflow: hidden;
}

.theme-toggle:hover {
  border-color: var(--primary-color);
  background: rgba(0, 154, 97, 0.05);
}

.theme-toggle svg {
  width: 22px;
  height: 22px;
  transition: all var(--transition-base);
  position: absolute;
  color: var(--text-color);
}

.theme-toggle .sun-icon {
  opacity: 0;
  transform: rotate(-180deg) scale(0);
}

.theme-toggle .moon-icon {
  opacity: 1;
  transform: rotate(0) scale(1);
}

[data-theme="dark"] .theme-toggle .sun-icon {
  opacity: 1;
  transform: rotate(0) scale(1);
}

[data-theme="dark"] .theme-toggle .moon-icon {
  opacity: 0;
  transform: rotate(180deg) scale(0);
}

/* Mobile Toggle Button */
.mobile-toggle {
  display: none;
  width: 44px;
  height: 44px;
  align-items: center;
  justify-content: center;
  border-radius: 10px;
  background: var(--primary-color);
  cursor: pointer;
  border: none;
  position: relative;
}

.mobile-toggle .burger {
  width: 20px;
  height: 16px;
  position: relative;
}

.mobile-toggle .burger span {
  display: block;
  position: absolute;
  width: 100%;
  height: 2px;
  background: white;
  border-radius: 2px;
  transition: all var(--transition-base);
}

.mobile-toggle .burger span:nth-child(1) { top: 0; }
.mobile-toggle .burger span:nth-child(2) { top: 7px; }
.mobile-toggle .burger span:nth-child(3) { bottom: 0; }

.mobile-toggle.active .burger span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.mobile-toggle.active .burger span:nth-child(2) {
  opacity: 0;
}

.mobile-toggle.active .burger span:nth-child(3) {
  transform: rotate(-45deg) translate(5px, -5px);
}

/* Mobile Menu - ENTERPRISE LEVEL */
.mobile-menu {
  position: fixed;
  top: 0;
  right: 0;
  width: 75%;
  max-width: 360px;
  height: 100vh;
  background: var(--bg-header);
  transform: translateX(100%);
  transition: transform var(--transition-base);
  z-index: 999;
  overflow-y: auto;
  box-shadow: -4px 0 24px rgba(0, 0, 0, 0.1);
}

.mobile-menu.active {
  transform: translateX(0);
}

.mobile-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-base);
  z-index: 998;
}

.mobile-overlay.active {
  opacity: 1;
  visibility: visible;
}

/* Mobile Menu Header */
.mobile-menu-header {
  padding: 20px;
  border-bottom: 1px solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mobile-logo {
  width: 140px;
  height: auto;
}

.mobile-close {
  width: 40px;
  height: 40px;
  border-radius: 8px;
  background: rgba(0, 0, 0, 0.05);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all var(--transition-fast);
}

[data-theme="dark"] .mobile-close {
  background: rgba(255, 255, 255, 0.05);
}

.mobile-close:hover {
  background: rgba(0, 154, 97, 0.1);
}

/* Mobile User Section */
.mobile-user-section {
  padding: 20px;
  border-bottom: 1px solid var(--border-color);
}

.mobile-user-info {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 16px;
}

.mobile-user-avatar {
