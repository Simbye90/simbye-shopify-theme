<style>
/* Import Inter Font */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

/* CSS Custom Properties f√ºr Theming */
:root {
  --header-height: 70px;
  --header-mobile-height: 60px;
  --primary-color: #009a61;
  --primary-hover: #00824f;
  --text-color: #2c2c2c;
  --bg-header: #ffffff;
  --border-color: rgba(0, 0, 0, 0.08);
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.08);
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 350ms cubic-bezier(0.4, 0, 0.2, 1);
  --mobile-menu-width: 85%;
  --mobile-menu-bg: #fafafa;
  --font-base: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --text-color: #e8e8e8;
  --bg-header: #1a1a1a;
  --border-color: rgba(255, 255, 255, 0.1);
  --mobile-menu-bg: #242424;
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
}

/* Prevent CLS with fixed heights */
.enterprise-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: var(--header-height);
  background: var(--bg-header);
  border-bottom: 1px solid var(--border-color);
  z-index: 1000;
  contain: layout style paint;
  will-change: transform;
  transform: translateZ(0);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  transition: box-shadow var(--transition-base);
}

.enterprise-header.scrolled {
  box-shadow: var(--shadow-sm);
}

.header-container {
  display: grid;
  grid-template-columns: 200px 1fr auto;
  align-items: center;
  height: 100%;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 24px;
  gap: 32px;
}

/* Logo Section */
.header-logo {
  display: flex;
  align-items: center;
  height: 100%;
}

.header-logo img {
  width: auto;
  height: 32px;
  object-fit: contain;
}

/* Navigation - Desktop */
.header-nav {
  display: flex;
  align-items: center;
  gap: 8px;
  height: 100%;
}

.nav-item {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-link {
  display: inline-flex;
  align-items: center;
  padding: 8px 16px;
  color: var(--text-color);
  font-size: 15px;
  font-weight: 500;
  text-decoration: none;
  border-radius: 8px;
  transition: all var(--transition-fast);
  position: relative;
  font-family: var(--font-base);
}

.nav-link:hover {
  background: rgba(0, 154, 97, 0.08);
  color: var(--primary-color);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 50%;
  width: 0;
  height: 2px;
  background: var(--primary-color);
  transform: translateX(-50%);
  transition: width var(--transition-fast);
}

.nav-link.active::after {
  width: calc(100% - 32px);
}

/* Actions Section */
.header-actions {
  display: flex;
  align-items: center;
  gap: 16px;
  height: 100%;
}

/* Auth Buttons */
.auth-group {
  display: flex;
  height: 40px;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 0 0 1px var(--border-color);
  background: var(--bg-header);
}

.auth-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 20px;
  height: 100%;
  font-size: 14px;
  font-weight: 500;
  color: white;
  background: var(--primary-color);
  text-decoration: none;
  transition: background var(--transition-fast);
  white-space: nowrap;
  font-family: var(--font-base);
}

.auth-btn:hover {
  background: var(--primary-hover);
}

.auth-btn.login {
  border-radius: 20px 0 0 20px;
  border-right: 1px solid rgba(255, 255, 255, 0.2);
}

.auth-btn.register {
  border-radius: 0 20px 20px 0;
  background: var(--text-color);
}

.auth-btn.register:hover {
  background: #4a4a4a;
}

.auth-btn.logged-in {
  border-radius: 20px;
  padding: 0 24px;
  gap: 8px;
}

/* Language & Currency Switchers */
.switcher-group {
  display: flex;
  gap: 8px;
}

.switcher {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 8px 12px;
  border-radius: 8px;
  background: transparent;
  border: 1px solid var(--border-color);
  color: var(--text-color);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
  font-family: var(--font-base);
}

.switcher:hover {
  border-color: var(--primary-color);
  background: rgba(0, 154, 97, 0.05);
}

.switcher-icon {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}

/* Dark Mode Toggle */
.theme-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: transparent;
  border: 1px solid var(--border-color);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.theme-toggle:hover {
  background: rgba(0, 154, 97, 0.05);
  border-color: var(--primary-color);
}

.theme-toggle svg {
  width: 20px;
  height: 20px;
  transition: transform var(--transition-base);
}

.theme-toggle:active svg {
  transform: rotate(30deg);
}

/* Mobile Menu Toggle - Modern Dot Grid Design */
.mobile-toggle {
  display: none;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 12px;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
  cursor: pointer;
  z-index: 1001;
  position: relative;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 154, 97, 0.2);
  transition: all var(--transition-base);
}

.mobile-toggle:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.3);
}

.mobile-toggle:active {
  transform: scale(0.95);
}

.mobile-toggle .menu-icon {
  display: grid;
  grid-template-columns: repeat(3, 4px);
  grid-template-rows: repeat(3, 4px);
  gap: 4px;
  transition: all var(--transition-base);
}

.mobile-toggle .menu-icon span {
  display: block;
  width: 4px;
  height: 4px;
  background: white;
  border-radius: 50%;
  transition: all var(--transition-base);
}

/* Animated X pattern when active */
.mobile-toggle.active .menu-icon {
  transform: rotate(45deg);
}

.mobile-toggle.active .menu-icon span:nth-child(1),
.mobile-toggle.active .menu-icon span:nth-child(5),
.mobile-toggle.active .menu-icon span:nth-child(9) {
  transform: scale(1.5);
  background: rgba(255, 255, 255, 1);
}

.mobile-toggle.active .menu-icon span:nth-child(3),
.mobile-toggle.active .menu-icon span:nth-child(7) {
  transform: scale(1.5);
  background: rgba(255, 255, 255, 1);
}

.mobile-toggle.active .menu-icon span:nth-child(2),
.mobile-toggle.active .menu-icon span:nth-child(4),
.mobile-toggle.active .menu-icon span:nth-child(6),
.mobile-toggle.active .menu-icon span:nth-child(8) {
  transform: scale(0);
  opacity: 0;
}

/* Mobile Menu */
.mobile-menu {
  position: fixed;
  top: 0;
  right: 0;
  width: var(--mobile-menu-width);
  height: 100vh;
  background: var(--mobile-menu-bg);
  transform: translateX(100%);
  transition: transform var(--transition-slow);
  z-index: 999;
  overflow-y: auto;
  box-shadow: -4px 0 24px rgba(0, 0, 0, 0.1);
  will-change: transform;
}

.mobile-menu.active {
  transform: translateX(0);
}

.mobile-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-base);
  z-index: 998;
}

.mobile-overlay.active {
  opacity: 1;
  visibility: visible;
}

.mobile-menu-content {
  padding: 80px 24px 24px;
}

.mobile-menu-header {
  padding: 20px 24px;
  border-bottom: 1px solid var(--border-color);
  background: var(--bg-header);
  margin-bottom: 20px;
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
}

.mobile-user-info {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 16px;
}

.mobile-user-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 18px;
}

.mobile-user-name {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-color);
}

.mobile-user-email {
  font-size: 14px;
  color: rgba(var(--text-color), 0.7);
}

.mobile-menu-nav {
  margin-bottom: 32px;
}

.mobile-nav-item {
  display: block;
  padding: 16px 0;
  color: var(--text-color);
  font-size: 16px;
  font-weight: 500;
  text-decoration: none;
  border-bottom: 1px solid var(--border-color);
  transition: all var(--transition-fast);
}

.mobile-nav-item:hover {
  color: var(--primary-color);
  padding-left: 8px;
}

.mobile-menu-actions {
  padding-top: 20px;
  border-top: 1px solid var(--border-color);
}

.mobile-action-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 0;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .header-container {
    grid-template-columns: 150px 1fr auto;
    gap: 20px;
    padding: 0 20px;
  }
  
  .nav-link {
    padding: 6px 12px;
    font-size: 14px;
  }
}

@media (max-width: 768px) {
  .enterprise-header {
    height: var(--header-mobile-height);
  }
  
  .header-container {
    grid-template-columns: 150px 1fr;
    padding: 0 16px;
  }
  
  .header-nav,
  .switcher-group,
  .theme-toggle {
    display: none;
  }
  
  .mobile-toggle {
    display: flex;
  }
  
  .header-actions {
    justify-content: flex-end;
  }
  
  .auth-group {
    display: none;
  }
}

/* Animations */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.header-loaded .nav-item {
  animation: slideIn var(--transition-base) ease-out backwards;
}

.header-loaded .nav-item:nth-child(1) { animation-delay: 50ms; }
.header-loaded .nav-item:nth-child(2) { animation-delay: 100ms; }
.header-loaded .nav-item:nth-child(3) { animation-delay: 150ms; }
.header-loaded .nav-item:nth-child(4) { animation-delay: 200ms; }
</style>

