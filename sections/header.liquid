<style>
/* CSS Custom Properties f√ºr Theming */
:root {
  --header-height: 80px;
  --header-mobile-height: 65px;
  --primary-color: #009a61;
  --primary-hover: #00824f;
  --text-color: #2c2c2c;
  --bg-header: #ffffff;
  --border-color: rgba(0, 0, 0, 0.08);
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.08);
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 350ms cubic-bezier(0.4, 0, 0.2, 1);
  --mobile-menu-width: 85%;
  --mobile-menu-bg: #fafafa;
  --font-base: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --text-color: #e8e8e8;
  --bg-header: #1a1a1a;
  --border-color: rgba(255, 255, 255, 0.1);
  --mobile-menu-bg: #242424;
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
}

/* Prevent CLS with fixed heights */
.enterprise-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: var(--header-height);
  background: var(--bg-header);
  border-bottom: 1px solid var(--border-color);
  z-index: 1000;
  contain: layout style paint;
  will-change: transform;
  transform: translateZ(0);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  transition: box-shadow var(--transition-base);
}

.enterprise-header.scrolled {
  box-shadow: var(--shadow-sm);
}

.header-container {
  display: grid;
  grid-template-columns: 240px 1fr auto;
  align-items: center;
  height: 100%;
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 32px;
  gap: 48px;
}

/* Logo Section - BIGGER! */
.header-logo {
  display: flex;
  align-items: center;
  height: 100%;
}

.header-logo a {
  display: flex;
  align-items: center;
}

.header-logo img {
  width: auto;
  height: 45px; /* Increased from 32px */
  max-width: 240px;
  object-fit: contain;
}

/* Navigation - Desktop (NO SUPPORT) */
.header-nav {
  display: flex;
  align-items: center;
  gap: 12px;
  height: 100%;
}

.nav-item {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-link {
  display: inline-flex;
  align-items: center;
  padding: 10px 20px;
  color: var(--text-color);
  font-size: 16px;
  font-weight: 500;
  text-decoration: none;
  border-radius: 8px;
  transition: all var(--transition-fast);
  position: relative;
  font-family: var(--font-base);
  white-space: nowrap;
}

.nav-link:hover {
  background: rgba(0, 154, 97, 0.08);
  color: var(--primary-color);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 50%;
  width: 0;
  height: 2px;
  background: var(--primary-color);
  transform: translateX(-50%);
  transition: width var(--transition-fast);
}

.nav-link.active::after {
  width: calc(100% - 40px);
}

/* Actions Section */
.header-actions {
  display: flex;
  align-items: center;
  gap: 20px;
  height: 100%;
}

/* Auth Buttons */
.auth-group {
  display: flex;
  height: 44px;
  border-radius: 22px;
  overflow: hidden;
  box-shadow: 0 0 0 1px var(--border-color);
  background: var(--bg-header);
}

.auth-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 24px;
  height: 100%;
  font-size: 15px;
  font-weight: 500;
  color: white;
  background: var(--primary-color);
  text-decoration: none;
  transition: background var(--transition-fast);
  white-space: nowrap;
  font-family: var(--font-base);
}

.auth-btn:hover {
  background: var(--primary-hover);
}

.auth-btn.login {
  border-radius: 22px 0 0 22px;
  border-right: 1px solid rgba(255, 255, 255, 0.2);
}

.auth-btn.register {
  border-radius: 0 22px 22px 0;
  background: #4a4a4a;
}

.auth-btn.register:hover {
  background: #3a3a3a;
}

.auth-btn.logged-in {
  border-radius: 22px;
  padding: 0 28px;
  gap: 10px;
}

/* Language & Currency Switchers */
.switcher-group {
  display: flex;
  gap: 12px;
}

.switcher {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 10px 16px;
  border-radius: 10px;
  background: transparent;
  border: 1px solid var(--border-color);
  color: var(--text-color);
  font-size: 15px;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
  font-family: var(--font-base);
}

.switcher:hover {
  border-color: var(--primary-color);
  background: rgba(0, 154, 97, 0.05);
}

.switcher-icon {
  width: 22px;
  height: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

/* Dark Mode Toggle - BETTER ICON */
.theme-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 12px;
  background: transparent;
  border: 1px solid var(--border-color);
  cursor: pointer;
  transition: all var(--transition-fast);
  position: relative;
  overflow: hidden;
}

.theme-toggle:hover {
  background: rgba(0, 154, 97, 0.05);
  border-color: var(--primary-color);
  transform: scale(1.05);
}

.theme-toggle svg {
  width: 24px;
  height: 24px;
  transition: all var(--transition-base);
  position: absolute;
  color: var(--text-color);
}

.theme-toggle .sun-icon {
  opacity: 0;
  transform: rotate(-180deg) scale(0.5);
}

.theme-toggle .moon-icon {
  opacity: 1;
  transform: rotate(0deg) scale(1);
}

[data-theme="dark"] .theme-toggle .sun-icon {
  opacity: 1;
  transform: rotate(0deg) scale(1);
}

[data-theme="dark"] .theme-toggle .moon-icon {
  opacity: 0;
  transform: rotate(180deg) scale(0.5);
}

/* Mobile Menu Toggle */
.mobile-toggle {
  display: none;
  flex-direction: column;
  justify-content: center;
  gap: 5px;
  width: 44px;
  height: 44px;
  padding: 10px;
  cursor: pointer;
  z-index: 1001;
}

.mobile-toggle span {
  display: block;
  width: 24px;
  height: 2px;
  background: var(--text-color);
  border-radius: 2px;
  transition: all var(--transition-base);
}

.mobile-toggle.active span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.mobile-toggle.active span:nth-child(2) {
  opacity: 0;
  transform: translateX(-10px);
}

.mobile-toggle.active span:nth-child(3) {
  transform: rotate(-45deg) translate(5px, -5px);
}

/* Mobile Menu */
.mobile-menu {
  position: fixed;
  top: 0;
  right: 0;
  width: var(--mobile-menu-width);
  height: 100vh;
  background: var(--mobile-menu-bg);
  transform: translateX(100%);
  transition: transform var(--transition-slow);
  z-index: 999;
  overflow-y: auto;
  box-shadow: -4px 0 24px rgba(0, 0, 0, 0.1);
  will-change: transform;
}

.mobile-menu.active {
  transform: translateX(0);
}

.mobile-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-base);
  z-index: 998;
}

.mobile-overlay.active {
  opacity: 1;
  visibility: visible;
}

.mobile-menu-content {
  padding: 80px 24px 24px;
}

.mobile-menu-header {
  padding: 20px 24px;
  border-bottom: 1px solid var(--border-color);
  background: var(--bg-header);
  margin-bottom: 20px;
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
}

.mobile-user-info {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 16px;
}

.mobile-user-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 18px;
}

.mobile-user-name {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-color);
}

.mobile-user-email {
  font-size: 14px;
  color: rgba(var(--text-color), 0.7);
}

.mobile-menu-nav {
  margin-bottom: 32px;
}

.mobile-nav-item {
  display: block;
  padding: 16px 0;
  color: var(--text-color);
  font-size: 16px;
  font-weight: 500;
  text-decoration: none;
  border-bottom: 1px solid var(--border-color);
  transition: all var(--transition-fast);
}

.mobile-nav-item:hover {
  color: var(--primary-color);
  padding-left: 8px;
}

.mobile-menu-actions {
  padding-top: 20px;
  border-top: 1px solid var(--border-color);
}

.mobile-action-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14px 0;
}

.mobile-action-row span {
  font-size: 15px;
  font-weight: 500;
  color: var(--text-color);
}

/* Dark Mode Switch for Mobile */
.dark-mode-switch {
  position: relative;
  width: 52px;
  height: 28px;
  background: var(--border-color);
  border-radius: 14px;
  cursor: pointer;
  transition: background var(--transition-base);
}

.dark-mode-switch.active {
  background: var(--primary-color);
}

.dark-mode-switch-handle {
  position: absolute;
  top: 3px;
  left: 3px;
  width: 22px;
  height: 22px;
  background: white;
  border-radius: 50%;
  transition: transform var(--transition-base);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.dark-mode-switch.active .dark-mode-switch-handle {
  transform: translateX(24px);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .header-container {
    grid-template-columns: 200px 1fr auto;
    gap: 24px;
    padding: 0 24px;
  }
  
  .nav-link {
    padding: 8px 16px;
    font-size: 15px;
  }
  
  .header-logo img {
    height: 40px;
  }
}

@media (max-width: 768px) {
  .enterprise-header {
    height: var(--header-mobile-height);
  }
  
  .header-container {
    grid-template-columns: 180px 1fr;
    padding: 0 16px;
  }
  
  .header-logo img {
    height: 35px;
    max-width: 180px;
  }
  
  .header-nav,
  .switcher-group,
  .theme-toggle {
    display: none;
  }
  
  .mobile-toggle {
    display: flex;
  }
  
  .header-actions {
    justify-content: flex-end;
  }
  
  .auth-group {
    display: none;
  }
}

/* Animations */
@keyframes slideIn {
