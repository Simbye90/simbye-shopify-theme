<style>
/* CSS Custom Properties */
:root {
  --header-height: 72px;
  --header-mobile-height: 60px;
  --primary-color: #009a61;
  --primary-hover: #00824f;
  --primary-dark: #007850;
  --text-color: #2c2c2c;
  --text-light: #6b6b6b;
  --bg-header: #ffffff;
  --border-color: rgba(0, 0, 0, 0.08);
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.1);
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 350ms cubic-bezier(0.4, 0, 0.2, 1);
  --mobile-menu-width: 85%;
  --mobile-menu-bg: #fafafa;
  --font-base: -apple-system, BlinkMacSystemFont, 'Droid Sans', Arial, sans-serif;
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --text-color: #e8e8e8;
  --text-light: #a0a0a0;
  --bg-header: #1a1a1a;
  --border-color: rgba(255, 255, 255, 0.1);
  --mobile-menu-bg: #242424;
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
}

/* Header Container */
.enterprise-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: var(--header-height);
  background: var(--bg-header);
  border-bottom: 1px solid var(--border-color);
  z-index: 1000;
  contain: layout style paint;
  will-change: transform;
  transform: translateZ(0);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  transition: box-shadow var(--transition-base);
}

.enterprise-header.scrolled {
  box-shadow: var(--shadow-sm);
}

.header-container {
  display: grid;
  grid-template-columns: 200px 1fr auto;
  align-items: center;
  height: 100%;
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 30px;
  gap: 40px;
}

/* Logo */
.header-logo {
  display: flex;
  align-items: center;
  height: 100%;
}

.header-logo img {
  height: 38px;
  width: auto;
  object-fit: contain;
}

/* Desktop Navigation */
.header-nav {
  display: flex;
  align-items: center;
  gap: 8px;
  height: 100%;
}

.nav-item {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-link {
  display: inline-flex;
  align-items: center;
  padding: 10px 18px;
  color: var(--text-color);
  font-size: 15px;
  font-weight: 500;
  text-decoration: none;
  border-radius: 8px;
  transition: all var(--transition-fast);
  position: relative;
  font-family: var(--font-base);
  letter-spacing: -0.01em;
}

.nav-link:hover {
  background: rgba(0, 154, 97, 0.08);
  color: var(--primary-color);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 50%;
  width: 0;
  height: 2px;
  background: var(--primary-color);
  transform: translateX(-50%);
  transition: width var(--transition-fast);
}

.nav-link.active::after {
  width: calc(100% - 36px);
}

/* Actions Section */
.header-actions {
  display: flex;
  align-items: center;
  gap: 16px;
  height: 100%;
}

/* Auth Buttons */
.auth-group {
  display: flex;
  height: 42px;
  border-radius: 21px;
  overflow: hidden;
}

.auth-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 22px;
  height: 100%;
  font-size: 14px;
  font-weight: 600;
  color: white;
  background: var(--primary-color);
  text-decoration: none;
  transition: all var(--transition-fast);
  white-space: nowrap;
  font-family: var(--font-base);
  letter-spacing: -0.02em;
}

.auth-btn:hover {
  background: var(--primary-hover);
}

.auth-btn.login {
  border-radius: 21px 0 0 21px;
  border-right: 1px solid rgba(255, 255, 255, 0.2);
}

.auth-btn.register {
  border-radius: 0 21px 21px 0;
  background: var(--primary-color);
}

.auth-btn.register:hover {
  background: var(--primary-hover);
}

.auth-btn.logged-in {
  border-radius: 21px;
  padding: 0 24px;
  gap: 8px;
  box-shadow: 0 2px 8px rgba(0, 154, 97, 0.15);
}

/* Language & Currency */
.switcher-group {
  display: flex;
  gap: 10px;
}

.switcher {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 9px 14px;
  border-radius: 10px;
  background: transparent;
  border: 1.5px solid var(--border-color);
  color: var(--text-color);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--transition-fast);
  font-family: var(--font-base);
}

.switcher:hover {
  border-color: var(--primary-color);
  background: rgba(0, 154, 97, 0.05);
}

.switcher-icon {
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
}

/* Dark Mode Toggle */
.theme-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 42px;
  height: 42px;
  border-radius: 10px;
  background: transparent;
  border: 1.5px solid var(--border-color);
  cursor: pointer;
  transition: all var(--transition-fast);
  position: relative;
  overflow: hidden;
}

.theme-toggle:hover {
  border-color: var(--primary-color);
  background: rgba(0, 154, 97, 0.05);
}

.theme-toggle svg {
  width: 22px;
  height: 22px;
  transition: all var(--transition-base);
  position: absolute;
  color: var(--text-color);
}

.theme-toggle .sun-icon {
  opacity: 0;
  transform: rotate(-90deg);
}

.theme-toggle .moon-icon {
  opacity: 1;
  transform: rotate(0deg);
}

[data-theme="dark"] .theme-toggle .sun-icon {
  opacity: 1;
  transform: rotate(0deg);
}

[data-theme="dark"] .theme-toggle .moon-icon {
  opacity: 0;
  transform: rotate(90deg);
}

/* Mobile Menu Toggle - Modern Design */
.mobile-toggle {
  display: none;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  border-radius: 10px;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
  cursor: pointer;
  z-index: 1001;
  position: relative;
  transition: all var(--transition-base);
  box-shadow: 0 2px 8px rgba(0, 154, 97, 0.2);
}

.mobile-toggle:hover {
  transform: scale(1.05);
}

.mobile-toggle:active {
  transform: scale(0.95);
}

.mobile-toggle .burger {
  width: 20px;
  height: 16px;
  position: relative;
}

.mobile-toggle .burger span {
  display: block;
  position: absolute;
  width: 100%;
  height: 2px;
  background: white;
  border-radius: 2px;
  transition: all var(--transition-base);
  left: 0;
}

.mobile-toggle .burger span:nth-child(1) {
  top: 0;
}

.mobile-toggle .burger span:nth-child(2) {
  top: 50%;
  transform: translateY(-50%);
}

.mobile-toggle .burger span:nth-child(3) {
  bottom: 0;
}

.mobile-toggle.active .burger span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.mobile-toggle.active .burger span:nth-child(2) {
  opacity: 0;
}

.mobile-toggle.active .burger span:nth-child(3) {
  transform: rotate(-45deg) translate(5px, -5px);
}

/* Mobile Menu */
.mobile-menu {
  position: fixed;
  top: 0;
  right: 0;
  width: var(--mobile-menu-width);
  height: 100vh;
  background: var(--mobile-menu-bg);
  transform: translateX(100%);
  transition: transform var(--transition-slow);
  z-index: 999;
  overflow-y: auto;
  box-shadow: -4px 0 24px rgba(0, 0, 0, 0.1);
}

.mobile-menu.active {
  transform: translateX(0);
}

.mobile-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-base);
  z-index: 998;
}

.mobile-overlay.active {
  opacity: 1;
  visibility: visible;
}

.mobile-menu-content {
  padding: 80px 24px 24px;
}

.mobile-menu-header {
  padding: 20px;
  background: var(--bg-header);
  margin-bottom: 20px;
  border-radius: 12px;
  box-shadow: var(--shadow-sm);
}

.mobile-user-info {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 16px;
}

.mobile-user-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 16px;
}

.mobile-user-name {
  font-size: 17px;
  font-weight: 600;
  color: var(--text-color);
}

.mobile-user-email {
  font-size: 13px;
  color: var(--text-light);
}

.mobile-auth-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 44px;
  background: var(--primary-color);
  color: white;
  font-size: 15px;
  font-weight: 600;
  text-decoration: none;
  border-radius: 10px;
  transition: all var(--transition-fast);
}

.mobile-auth-button:hover {
  background: var(--primary-hover);
}

.mobile-menu-nav {
  margin-bottom: 32px;
}

.mobile-nav-item {
  display: block;
  padding: 16px 0;
  color: var(--text-color);
  font-size: 16px;
  font-weight: 500;
  text-decoration: none;
  border-bottom: 1px solid var(--border-color);
  transition: all var(--transition-fast);
}

.mobile-nav-item:hover {
  color: var(--primary-color);
  padding-left: 8px;
}

.mobile-menu-actions {
  padding-top: 20px;
  border-top: 1px solid var(--border-color);
}

.mobile-action-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14px 0;
}

.mobile-action-row span {
  font-size: 15px;
  font-weight: 500;
  color: var(--text-color);
}

/* iOS Style Toggle Switch for Dark Mode */
.toggle-switch {
  position: relative;
  width: 51px;
  height: 31px;
  background: #e9e9ea;
  border-radius: 31px;
  cursor: pointer;
  transition: background var(--transition-base);
}

.toggle-switch.active {
  background: var(--primary-color);
}

.toggle-switch-handle {
  position: absolute;
  top: 2px;
  left: 2px;
  width: 27px;
  height: 27px;
  background: white;
  border-radius: 50%;
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
  transition: transform var(--transition-base);
}

.toggle-switch.active .toggle-switch-handle {
  transform: translateX(20px);
}

/* Responsive */
@media (max-width: 1024px) {
  .header-container {
    grid-template-columns: 180px 1fr auto;
    gap: 24px;
    padding: 0 20px;
  }
  
  .nav-link {
    padding: 8px 14px;
    font-size: 14px;
  }
}

@media (max-width: 768px) {
  .enterprise-header {
    height: var(--header-mobile-height);
  }
  
  .header-container {
    grid-template-columns: 150px 1fr;
    padding: 0 16px;
  }
  
  .header-logo img {
    height: 32px;
  }
  
  .header-nav,
  .switcher-group,
  .theme-toggle {
    display: none;
  }
  
  .mobile-toggle {
    display: flex;
  }
  
  .header-actions {
    justify-content: flex-end;
  }
  
  .auth-group {
    display: none;
  }
}

/* Animations */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.header-loaded .nav-item {
  animation: slideIn var(--transition-base) ease-out backwards;
}

.header-loaded .nav-item:nth-child(1) { animation-delay: 50ms; }
.header-loaded .nav-item:nth-child(2) { animation-delay: 100ms; }
.header-loaded .nav-item:nth-child(3) { animation-delay: 150ms; }
.header-loaded .nav-item:nth-child(4) { animation-delay: 200ms; }
</style>

