            <input type="hidden" name="language_code" value="{{ localization.language.iso_code }}">
            <input type="hidden" name="return_to" value="{{ request.url }}">
            {% for language in localization.available_languages %}
              <button type="submit"
                      class="mobile-dropdown-item {% if language.iso_code == localization.language.iso_code %}active{% endif %}"
                      role="menuitem"
                      data-value="{{ language.iso_code }}"
                      onclick="this.form.querySelector('[name=language_code]').value='{{ language.iso_code }}'">
                <span>{{ language.endonym_name }}</span>
              </button>
            {% endfor %}
          {% endform %}
        </localization-form>
      </div>
    </div>

    <!-- Country/Currency -->
    <div class="settings-row" id="mobile-country-row">
      <span class="settings-label">{{ 'header.currency' | t | default: 'Currency' }}</span>
      <div class="settings-value" role="button" tabindex="0" aria-expanded="false">
        <span>{{ localization.country.currency.symbol }} {{ localization.country.currency.iso_code }}</span>
      </div>
      <div class="mobile-dropdown" role="menu" aria-label="{{ 'header.currency' | t | default: 'Currency' }}">
        {% if localization.available_countries.size > 1 %}
          <localization-form>
            {% form 'localization' %}
              <input type="hidden" name="country_code" value="{{ localization.country.iso_code }}">
              <input type="hidden" name="return_to" value="{{ request.url }}">
              {% for country in localization.available_countries %}
                <button type="submit"
                        class="mobile-dropdown-item {% if country.iso_code == localization.country.iso_code %}active{% endif %}"
                        role="menuitem"
                        data-value="{{ country.iso_code }}"
                        onclick="this.form.querySelector('[name=country_code]').value='{{ country.iso_code }}'">
                  <span>{{ country.currency.symbol }} {{ country.currency.iso_code }}</span>
                  <span style="opacity:.6; margin-left:auto;">{{ country.name }}</span>
                </button>
              {% endfor %}
            {% endform %}
          </localization-form>
        {% endif %}
      </div>
    </div>

    <!-- Dark Mode -->
    <div class="settings-row">
      <span class="settings-label">{{ 'header.dark_mode' | t | default: 'Dark Mode' }}</span>
      <div class="dark-mode-switch" id="dark-mode-switch" role="switch" aria-checked="false" tabindex="0">
        <div class="dark-mode-switch-handle"></div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div class="mobile-footer">¬© {{ 'now' | date: "%Y" }} {{ shop.name }}</div>
</nav>

<script>
(function(){
  'use strict';

  // Elements
  const header = document.getElementById('enterprise-header');
  const mobileToggle = document.getElementById('mobile-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileOverlay = document.getElementById('mobile-overlay');
  const mobileClose = document.getElementById('mobile-close');
  const themeToggle = document.getElementById('theme-toggle');
  const darkModeSwitch = document.getElementById('dark-mode-switch');
  const languageSwitcher = document.getElementById('language-switcher');
  const countrySwitcher = document.getElementById('country-switcher');

  // State
  let currentTheme = (()=>{
    try{ return localStorage.getItem('theme') || 'light'; }catch(e){ return 'light'; }
  })();
  let isMenuOpen = false;
  let lastFocus = null;

  // Init
  (function init(){
    document.documentElement.setAttribute('data-theme', currentTheme);
    if(darkModeSwitch){ darkModeSwitch.setAttribute('aria-checked', currentTheme === 'dark' ? 'true' : 'false'); }
    bindEvents();
    handleScroll();
    markActiveNav();
  })();

  // Helpers
  function qs(sel, root=document){ return root.querySelector(sel); }
  function qsa(sel, root=document){ return [...root.querySelectorAll(sel)]; }

  // Events
  function bindEvents(){
    // Scroll
    window.addEventListener('scroll', handleScroll, { passive:true });

    // Theme
    [themeToggle, darkModeSwitch].forEach(el=>{
      if(!el) return;
      el.addEventListener('click', toggleTheme);
      el.addEventListener('keydown', e=>{ if(e.key==='Enter' || e.key===' '){ e.preventDefault(); toggleTheme(); } });
    });

    // Desktop switchers
    setupSwitcher(languageSwitcher);
    setupSwitcher(countrySwitcher);

    // Mobile dropdowns
    setupMobileDropdown('mobile-language-row');
    setupMobileDropdown('mobile-country-row');

    // Mobile menu open/close
    if(mobileToggle){ mobileToggle.addEventListener('click', openMobileMenu); }
    if(mobileClose){ mobileClose.addEventListener('click', closeMobileMenu); }
    if(mobileOverlay){ mobileOverlay.addEventListener('click', closeMobileMenu); }

    // Global close on click outside
    document.addEventListener('click', closeAllSwitchers);

    // Esc handling
    document.addEventListener('keydown', e=>{
      if(e.key==='Escape'){
        closeMobileMenu();
        closeAllSwitchers();
      }
    });

    // Swipe to close mobile menu
    let touchStartX = 0;
    if(mobileMenu){
      mobileMenu.addEventListener('touchstart', e=>{ touchStartX = e.touches[0].clientX; }, { passive:true });
      mobileMenu.addEventListener('touchend', e=>{
        const dx = e.changedTouches[0].clientX - touchStartX;
        if(dx > 80){ closeMobileMenu(); }
      }, { passive:true });
    }
  }

  // Scroll handler
  function handleScroll(){
    if(window.scrollY > 10){ header.classList.add('scrolled'); }
    else{ header.classList.remove('scrolled'); }
  }

  // Theme toggle
  function toggleTheme(){
    currentTheme = (currentTheme === 'light') ? 'dark' : 'light';
    document.documentElement.setAttribute('data-theme', currentTheme);
    if(darkModeSwitch){ darkModeSwitch.setAttribute('aria-checked', currentTheme === 'dark' ? 'true' : 'false'); }
    try{ localStorage.setItem('theme', currentTheme); }catch(e){}
  }

  // Switcher (desktop)
  function setupSwitcher(el){
    if(!el) return;
    const toggle = (expand)=>{
      el.setAttribute('aria-expanded', expand ? 'true' : 'false');
    };
    el.addEventListener('click', e=>{
      e.stopPropagation();
      const expanded = el.getAttribute('aria-expanded') === 'true';
      closeAllSwitchers();
      toggle(!expanded);
    });
    el.addEventListener('keydown', e=>{
      if(e.key==='Enter' || e.key===' '){
        e.preventDefault();
        const expanded = el.getAttribute('aria-expanded') === 'true';
        closeAllSwitchers();
        toggle(!expanded);
      }
    });
  }

  function closeAllSwitchers(){
    qsa('.switcher[aria-expanded="true"]').forEach(sw=> sw.setAttribute('aria-expanded','false'));
    qsa('.settings-row.active').forEach(r=> r.classList.remove('active'));
    qsa('.settings-row .settings-value[aria-expanded="true"]').forEach(v=> v.setAttribute('aria-expanded','false'));
  }

  // Mobile dropdowns
  function setupMobileDropdown(rowId){
    const row = document.getElementById(rowId);
    if(!row) return;
    const val = qs('.settings-value', row);
    if(!val) return;

    val.addEventListener('click', e=>{
      e.stopPropagation();
      const active = row.classList.contains('active');
      qsa('.settings-row').forEach(r=> r.classList.remove('active'));
      if(!active){ row.classList.add('active'); }
      val.setAttribute('aria-expanded', !active ? 'true' : 'false');
    });

    val.addEventListener('keydown', e=>{
      if(e.key==='Enter' || e.key===' '){
        e.preventDefault();
        val.click();
      }
    });
  }

  // Mobile menu
  function openMobileMenu(){
    isMenuOpen = true;
    lastFocus = document.activeElement;
    mobileToggle.classList.add('active');
    mobileToggle.setAttribute('aria-expanded','true');
    mobileMenu.classList.add('active');
    mobileMenu.setAttribute('aria-hidden','false');
    mobileOverlay.classList.add('active');
    mobileOverlay.setAttribute('aria-hidden','false');
    document.body.style.overflow='hidden';

    // focus trap start
    setTimeout(()=>{
      const firstBtn = qs('.mobile-menu a, .mobile-menu button');
      if(firstBtn) firstBtn.focus();
    }, 0);
    document.addEventListener('focus', trapFocus, true);
  }

  function closeMobileMenu(){
    if(!isMenuOpen) return;
    isMenuOpen = false;
    mobileToggle.classList.remove('active');
    mobileToggle.setAttribute('aria-expanded','false');
    mobileMenu.classList.remove('active');
    mobileMenu.setAttribute('aria-hidden','true');
    mobileOverlay.classList.remove('active');
    mobileOverlay.setAttribute('aria-hidden','true');
    document.body.style.overflow='';
    document.removeEventListener('focus', trapFocus, true);
    if(lastFocus && typeof lastFocus.focus === 'function'){ lastFocus.focus(); }
  }

  function trapFocus(e){
    if(!isMenuOpen) return;
    if(!mobileMenu.contains(e.target)){
      e.stopPropagation();
      const firstBtn = qs('.mobile-menu a, .mobile-menu button');
      if(firstBtn) firstBtn.focus();
    }
  }

  // Active nav marker (locale-aware)
  function markActiveNav(){
    const path = window.location.pathname.replace(/^\/[a-z]{2}(-[a-z]{2})?\//i,'/'); // entfernt evtl. /de/ oder /en-eu/
    qsa('.nav-link, .mobile-nav-item').forEach(link=>{
      try{
        const href = new URL(link.getAttribute('href'), window.location.origin).pathname.replace(/^\/[a-z]{2}(-[a-z]{2})?\//i,'/');
        if(href === path){ link.classList.add('active'); }
      }catch(_e){}
    });
  }

})();
</script>

