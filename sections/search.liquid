<!-- SIMBYE ENTERPRISE SEARCH - V1.0 -->

<style>
/* CSS Variables */
:root {
  --search-primary: #009a61;
  --search-primary-hover: #00824f;
  --search-accent: #00d97e;
  --search-text: #1a1a1a;
  --search-text-secondary: #666666;
  --search-bg: #ffffff;
  --search-card-bg: #ffffff;
  --search-border: rgba(0, 0, 0, 0.08);
  --search-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.06);
  --search-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.08);
  --search-shadow-lg: 0 12px 32px rgba(0, 154, 97, 0.15);
  --search-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --search-gradient: linear-gradient(135deg, #f0faf7 0%, #ffffff 100%);
}

/* Dark Mode */
[data-theme="dark"] {
  --search-text: #f5f5f5;
  --search-text-secondary: #999999;
  --search-bg: #0a0a0a;
  --search-card-bg: rgba(26, 26, 26, 0.8);
  --search-border: rgba(255, 255, 255, 0.08);
  --search-primary: #00d97e;
  --search-primary-hover: #009a61;
  --search-accent: #00ff88;
  --search-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.3);
  --search-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
  --search-shadow-lg: 0 12px 32px rgba(0, 217, 126, 0.15);
  --search-gradient: linear-gradient(135deg, rgba(0, 217, 126, 0.05) 0%, transparent 100%);
}

/* Kill Shopify Grid */
.shopify-section:has(.search-section) {
  display: block !important;
  padding: 0 !important;
  margin: 0 !important;
  grid-template-columns: unset !important;
}

/* Main Section */
.search-section {
  width: 100%;
  min-height: 100vh;
  background: var(--search-bg);
  padding: 120px 0 80px 0;
  transition: var(--search-transition);
}

[data-theme="dark"] .search-section {
  background: linear-gradient(180deg, #0a0a0a 0%, #0d100f 50%, #0a0a0a 100%);
}

/* Container */
.search-container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 40px;
}

/* Header */
.search-header {
  text-align: center;
  margin-bottom: 60px;
  animation: fadeInUp 0.6s ease;
}

.search-title {
  font-size: clamp(36px, 5vw, 56px);
  font-weight: 700;
  color: var(--search-text);
  margin: 0 0 20px 0;
  letter-spacing: -0.02em;
}

.search-title-highlight {
  color: var(--search-primary);
}

/* Search Form */
.search-form {
  max-width: 700px;
  margin: 0 auto 60px auto;
  animation: fadeInUp 0.7s ease 0.1s both;
}

.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: white;
  border-radius: 16px;
  box-shadow: var(--search-shadow-lg);
  overflow: hidden;
  height: 64px;
  transition: var(--search-transition);
  border: 2px solid transparent;
}

[data-theme="dark"] .search-input-wrapper {
  background: rgba(26, 26, 26, 0.8);
  border-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
}

.search-input-wrapper:focus-within {
  box-shadow: 0 12px 40px rgba(0, 154, 97, 0.25);
  border-color: var(--search-primary);
}

.search-icon {
  width: 24px;
  height: 24px;
  margin: 0 20px;
  color: var(--search-primary);
  flex-shrink: 0;
}

.search-input {
  flex: 1;
  border: none;
  padding: 0 16px 0 0;
  font-size: 18px;
  font-weight: 500;
  outline: none;
  background: transparent;
  color: var(--search-text);
  font-family: inherit;
}

.search-input::placeholder {
  color: var(--search-text-secondary);
  font-weight: 400;
}

.search-submit {
  height: 100%;
  background: var(--search-primary);
  color: white;
  border: none;
  padding: 0 32px;
  font-weight: 700;
  font-size: 16px;
  cursor: pointer;
  transition: var(--search-transition);
  white-space: nowrap;
  letter-spacing: -0.01em;
}

.search-submit:hover {
  background: var(--search-primary-hover);
}

/* Results Info */
.search-results-info {
  text-align: center;
  margin-bottom: 40px;
  animation: fadeInUp 0.8s ease 0.2s both;
}

.search-results-count {
  font-size: 18px;
  color: var(--search-text-secondary);
  margin: 0;
}

.search-results-count strong {
  color: var(--search-primary);
  font-weight: 700;
}

/* Results Grid */
.search-results-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 32px;
  margin-bottom: 60px;
}

/* Result Card */
.search-result-card {
  background: var(--search-card-bg);
  border: 2px solid var(--search-border);
  border-radius: 20px;
  overflow: hidden;
  transition: var(--search-transition);
  text-decoration: none;
  display: flex;
  flex-direction: column;
  box-shadow: var(--search-shadow-sm);
  animation: fadeInUp 0.9s ease both;
  animation-delay: calc(var(--card-index) * 0.05s);
}

.search-result-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--search-shadow-lg);
  border-color: var(--search-primary);
}

[data-theme="dark"] .search-result-card {
  background: var(--search-card-bg);
  border-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
}

/* Image */
.search-result-image {
  position: relative;
  aspect-ratio: 4/3;
  overflow: hidden;
  background: var(--search-gradient);
}

.search-result-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.search-result-card:hover .search-result-image img {
  transform: scale(1.05);
}

/* Type Badge */
.search-result-type {
  position: absolute;
  top: 12px;
  left: 12px;
  background: var(--search-primary);
  color: white;
  padding: 4px 12px;
  border-radius: 8px;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  z-index: 2;
}

[data-theme="dark"] .search-result-type {
  background: var(--search-primary);
  color: #0a0a0a;
}

/* Content */
.search-result-content {
  padding: 20px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.search-result-title {
  font-size: 18px;
  font-weight: 700;
  color: var(--search-text);
  margin: 0 0 8px 0;
  letter-spacing: -0.01em;
  line-height: 1.3;
}

.search-result-excerpt {
  font-size: 14px;
  color: var(--search-text-secondary);
  line-height: 1.5;
  margin: 0 0 16px 0;
  flex: 1;
}

.search-result-price {
  font-size: 20px;
  font-weight: 700;
  color: var(--search-primary);
  margin-top: auto;
}

/* No Results */
.search-no-results {
  text-align: center;
  padding: 80px 20px;
  animation: fadeInUp 0.8s ease;
}

.search-no-results-icon {
  width: 120px;
  height: 120px;
  margin: 0 auto 32px auto;
  background: var(--search-gradient);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--search-primary);
}

.search-no-results-icon svg {
  width: 60px;
  height: 60px;
}

.search-no-results-title {
  font-size: 32px;
  font-weight: 700;
  color: var(--search-text);
  margin: 0 0 16px 0;
  letter-spacing: -0.01em;
}

.search-no-results-text {
  font-size: 18px;
  color: var(--search-text-secondary);
  margin: 0 0 32px 0;
  max-width: 500px;
  margin-left: auto;
  margin-right: auto;
}

.search-no-results-cta {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 14px 32px;
  background: var(--search-primary);
  color: white;
  text-decoration: none;
  border-radius: 12px;
  font-weight: 600;
  font-size: 16px;
  transition: var(--search-transition);
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.3);
}

.search-no-results-cta:hover {
  background: var(--search-primary-hover);
  transform: translateY(-2px);
  box-shadow: var(--search-shadow-lg);
}

/* Pagination */
.search-pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  margin-top: 60px;
  animation: fadeInUp 0.9s ease 0.3s both;
}

.pagination-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 44px;
  height: 44px;
  padding: 0 16px;
  background: var(--search-card-bg);
  color: var(--search-text);
  text-decoration: none;
  border: 2px solid var(--search-border);
  border-radius: 12px;
  font-weight: 600;
  font-size: 15px;
  transition: var(--search-transition);
}

.pagination-link:hover:not(.pagination-link--current) {
  border-color: var(--search-primary);
  color: var(--search-primary);
  transform: translateY(-2px);
}

.pagination-link--current {
  background: var(--search-primary);
  color: white;
  border-color: var(--search-primary);
}

.pagination-link--disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

/* Responsive */
@media (max-width: 1024px) {
  .search-container {
    padding: 0 24px;
  }
  
  .search-results-grid {
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 24px;
  }
}

@media (max-width: 768px) {
  .search-section {
    padding: 100px 0 60px 0;
  }
  
  .search-container {
    padding: 0 20px;
  }
  
  .search-header {
    margin-bottom: 40px;
  }
  
  .search-title {
    font-size: 32px;
  }
  
  .search-form {
    margin-bottom: 40px;
  }
  
  .search-input-wrapper {
    height: 56px;
  }
  
  .search-input {
    font-size: 16px;
  }
  
  .search-submit {
    padding: 0 24px;
    font-size: 15px;
  }
  
  .search-results-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .search-no-results {
    padding: 60px 20px;
  }
  
  .search-no-results-icon {
    width: 100px;
    height: 100px;
  }
  
  .search-no-results-title {
    font-size: 28px;
  }
  
  .search-no-results-text {
    font-size: 16px;
  }
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Loading State */
.search-loading {
  text-align: center;
  padding: 60px 20px;
}

.search-loading-spinner {
  width: 48px;
  height: 48px;
  border: 4px solid var(--search-border);
  border-top-color: var(--search-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin: 0 auto 20px auto;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
</style>

<div class="search-section">
  <div class="search-container">
    
    <!-- Header -->
    <div class="search-header">
      <h1 class="search-title">
        {{ 'search.title' | t | default: 'Search' }} 
        <span class="search-title-highlight">{{ 'search.products' | t | default: 'eSIM' }}</span>
      </h1>
    </div>
    
    <!-- Search Form -->
    <form action="{{ routes.search_url }}" method="get" role="search" class="search-form">
      <div class="search-input-wrapper">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.35-4.35"/>
        </svg>
        
        <input
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="{{ 'search.placeholder' | t | default: 'Search for eSIM destinations...' }}"
          class="search-input"
          aria-label="{{ 'search.placeholder' | t | default: 'Search' }}"
          autocomplete="off"
        >
        
        <button type="submit" class="search-submit">
          {{ 'search.submit' | t | default: 'Search' }}
        </button>
      </div>
    </form>
    
    {% if search.performed %}
      {% if search.results_count == 0 %}
        
        <!-- No Results -->
        <div class="search-no-results">
          <div class="search-no-results-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
              <line x1="11" y1="8" x2="11" y2="14"/>
              <line x1="8" y1="11" x2="14" y2="11"/>
            </svg>
          </div>
          
          <h2 class="search-no-results-title">
            {{ 'search.no_results_title' | t | default: 'No results found' }}
          </h2>
          
          <p class="search-no-results-text">
            {{ 'search.no_results_html' | t: terms: search.terms | default: 'No results found for "' | append: search.terms | append: '". Try searching with different keywords.' }}
          </p>
          
          <a href="{{ routes.all_products_collection_url }}" class="search-no-results-cta">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
            {{ 'search.browse_all' | t | default: 'Browse All eSIM' }}
          </a>
        </div>
        
      {% else %}
        
        <!-- Results Info -->
        <div class="search-results-info">
          <p class="search-results-count">
            {{ 'search.results_for_html' | t: terms: search.terms, count: search.results_count | default: 'Found' }}
            <strong>{{ search.results_count }}</strong>
            {{ 'search.results_text' | t | default: 'results' }}
          </p>
        </div>
        
        <!-- Results Grid -->
        {% paginate search.results by 12 %}
          <div class="search-results-grid">
            {% for result in search.results %}
              {% assign featured_image = result.featured_image | default: result.image %}
              
              <a href="{{ result.url }}" class="search-result-card" style="--card-index: {{ forloop.index }}">
                
                {% if featured_image %}
                  <div class="search-result-image">
                    <img 
                      src="{{ featured_image | image_url: width: 600 }}" 
                      alt="{{ result.title | escape }}"
                      loading="lazy"
                      width="600"
                      height="450"
                    >
                    
                    <span class="search-result-type">
                      {% if result.object_type == 'product' %}
                        {{ 'search.type_product' | t | default: 'Product' }}
                      {% elsif result.object_type == 'article' %}
                        {{ 'search.type_article' | t | default: 'Article' }}
                      {% elsif result.object_type == 'page' %}
                        {{ 'search.type_page' | t | default: 'Page' }}
                      {% endif %}
                    </span>
                  </div>
                {% endif %}
                
                <div class="search-result-content">
                  <h3 class="search-result-title">{{ result.title }}</h3>
                  
                  {% if result.excerpt %}
                    <p class="search-result-excerpt">
                      {{ result.excerpt | strip_html | truncate: 120 }}
                    </p>
                  {% endif %}
                  
                  {% if result.price %}
                    <div class="search-result-price">
                      {{ result.price | money_with_currency }}
                    </div>
                  {% endif %}
                </div>
                
              </a>
            {% endfor %}
          </div>
          
          <!-- Pagination -->
          {% if paginate.pages > 1 %}
            <div class="search-pagination">
              
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}" class="pagination-link">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                    <polyline points="15 18 9 12 15 6"/>
                  </svg>
                </a>
              {% else %}
                <span class="pagination-link pagination-link--disabled">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                    <polyline points="15 18 9 12 15 6"/>
                  </svg>
                </span>
              {% endif %}
              
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="pagination-link">{{ part.title }}</a>
                {% else %}
                  {% if part.title == paginate.current_page %}
                    <span class="pagination-link pagination-link--current">{{ part.title }}</span>
                  {% else %}
                    <span class="pagination-link pagination-link--disabled">{{ part.title }}</span>
                  {% endif %}
                {% endif %}
              {% endfor %}
              
              {% if paginate.next %}
                <a href="{{ paginate.next.url }}" class="pagination-link">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                    <polyline points="9 18 15 12 9 6"/>
                  </svg>
                </a>
              {% else %}
                <span class="pagination-link pagination-link--disabled">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                    <polyline points="9 18 15 12 9 6"/>
                  </svg>
                </span>
              {% endif %}
              
            </div>
          {% endif %}
          
        {% endpaginate %}
        
      {% endif %}
    {% endif %}
    
  </div>
</div>

{% schema %}
{
  "name": "Search",
  "settings": [
    {
      "type": "header",
      "content": "Search Settings"
    },
    {
      "type": "paragraph",
      "content": "This section displays search results. Customize translations in the theme language files."
    }
  ]
}
{% endschema %}