/* CSS Variables - Identisch mit Why Section */
:root {
  --compare-bg: #ffffff;
  --compare-text: #1a1a1a;
  --compare-text-secondary: #666666;
  --compare-primary: #009a61;
  --compare-primary-hover: #00824f;
  --compare-accent: #00d97e;
  --compare-success: #00d97e;
  --compare-warning: #ffc107;
  --compare-danger: #ff4757;
  --compare-card-bg: #ffffff;
  --compare-border: rgba(0, 0, 0, 0.08);
  --compare-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.06);
  --compare-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.08);
  --compare-shadow-lg: 0 12px 32px rgba(0, 154, 97, 0.15);
  --compare-gradient: linear-gradient(135deg, #f8fffe 0%, #ffffff 100%);
  --compare-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --compare-bg: transparent;
  --compare-text: #f5f5f5;
  --compare-text-secondary: #999999;
  --compare-primary: #00d97e;
  --compare-primary-hover: #009a61;
  --compare-accent: #00ff88;
  --compare-success: #00d97e;
  --compare-warning: #ffb800;
  --compare-danger: #ff6b6b;
  --compare-card-bg: rgba(26, 26, 26, 0.8);
  --compare-border: rgba(255, 255, 255, 0.08);
  --compare-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.3);
  --compare-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
  --compare-shadow-lg: 0 12px 32px rgba(0, 217, 126, 0.15);
  --compare-gradient: linear-gradient(135deg, rgba(0, 217, 126, 0.05) 0%, transparent 100%);
}

/* Main Section */
.comparison-section {
  width: 100%;
  padding: 0 0 20px 0;
  background: var(--compare-bg);
  position: relative;
  overflow: hidden;
  transition: var(--compare-transition);
}

/* Light Mode */
[data-theme="light"] .comparison-section {
  background: #ffffff;
}

/* Dark Mode */
[data-theme="dark"] .comparison-section {
  background: #0a0a0a;
}

/* Background Pattern */
.comparison-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

/* Container */
.comparison-container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 100px 40px 0 40px;
  position: relative;
  z-index: 1;
}

/* Header */
.comparison-header {
  text-align: center;
  margin-bottom: 72px;
  animation: fadeInUp 0.8s ease;
}

/* Title - EXAKT WIE WHY SECTION */
.comparison-title {
  font-size: clamp(36px, 5vw, 56px);
  font-weight: 700;
  color: var(--compare-text);
  margin: 0 0 20px 0;
  letter-spacing: -0.02em;
  line-height: 1.1;
}

.comparison-title-highlight {
  background: var(--compare-primary);
  color: white;
  padding: 4px 20px;
  border-radius: 12px;
  display: inline-block;
  margin: 0 8px;
}

[data-theme="dark"] .comparison-title-highlight {
  background: var(--compare-primary);
  color: #fff;
}

.comparison-subtitle {
  font-size: 20px;
  color: var(--compare-text-secondary);
  margin: 0;
  font-weight: 400;
  line-height: 1.5;
  max-width: 800px;
  margin: 0 auto;
}

/* Trust Indicators */
.trust-indicators {
  display: flex;
  justify-content: center;
  gap: 32px;
  margin-top: 24px;
  flex-wrap: wrap;
}

.trust-indicator {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: var(--compare-text-secondary);
}

.trust-indicator svg {
  width: 16px;
  height: 16px;
  color: var(--compare-primary);
}

/* Table Container */
.comparison-table-wrapper {
  background: var(--compare-card-bg);
  border-radius: 24px;
  padding: 0;
  box-shadow: var(--compare-shadow-lg);
  border: 2px solid var(--compare-border);
  overflow: hidden;
  position: relative;
  animation: fadeInUp 0.9s ease 0.2s both;
}

[data-theme="dark"] .comparison-table-wrapper {
  background: var(--compare-card-bg);
  border-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
}

/* Desktop Table */
.comparison-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
}

.comparison-table thead {
  background: var(--compare-gradient);
  border-bottom: 2px solid var(--compare-border);
}

.comparison-table th {
  padding: 28px 24px;
  font-size: 18px;
  font-weight: 700;
  text-align: center;
  position: relative;
  vertical-align: middle;
}

.comparison-table th:first-child {
  text-align: left;
  font-weight: 600;
  color: var(--compare-text-secondary);
  font-size: 16px;
}

/* Simbye Column - HIGHLIGHTED */
.comparison-table th.featured-column {
  background: linear-gradient(135deg, var(--compare-primary), var(--compare-accent));
  color: white;
  position: relative;
}

.comparison-table th.featured-column::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, transparent 100%);
  pointer-events: none;
}

/* Recommended Badge */
.recommended-badge {
  position: absolute;
  top: -14px;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #ff7e50, #ff9a76);
  color: white;
  padding: 4px 16px;
  border-radius: 100px;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 12px rgba(255, 126, 80, 0.3);
  animation: subtlePulse 4s ease-in-out infinite;
  white-space: nowrap;
}

/* Option Names */
.option-name {
  font-size: 20px;
  font-weight: 700;
  color: var(--compare-text);
  margin-bottom: 4px;
  display: block;
}

.featured-column .option-name {
  color: white;
}

.option-type {
  font-size: 13px;
  font-weight: 500;
  opacity: 0.8;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Table Body */
.comparison-table tbody tr {
  border-bottom: 1px solid var(--compare-border);
  transition: var(--compare-transition);
  animation: fadeInUp 0.6s ease both;
}

.comparison-table tbody tr:nth-child(1) { animation-delay: 0.3s; }
.comparison-table tbody tr:nth-child(2) { animation-delay: 0.35s; }
.comparison-table tbody tr:nth-child(3) { animation-delay: 0.4s; }
.comparison-table tbody tr:nth-child(4) { animation-delay: 0.45s; }
.comparison-table tbody tr:nth-child(5) { animation-delay: 0.5s; }
.comparison-table tbody tr:nth-child(6) { animation-delay: 0.55s; }
.comparison-table tbody tr:nth-child(7) { animation-delay: 0.6s; }
.comparison-table tbody tr:nth-child(8) { animation-delay: 0.65s; }

.comparison-table tbody tr:hover {
  background: var(--compare-gradient);
}

.comparison-table tbody tr:last-child {
  border-bottom: none;
}

.comparison-table td {
  padding: 24px;
  text-align: center;
  font-size: 16px;
  position: relative;
}

.comparison-table td:first-child {
  text-align: left;
  font-weight: 600;
  color: var(--compare-text);
}

/* Feature Label */
.feature-label {
  display: flex;
  align-items: center;
  gap: 8px;
}

.feature-info {
  width: 16px;
  height: 16px;
  background: rgba(0, 154, 97, 0.1);
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: help;
  position: relative;
}

.feature-info svg {
  width: 10px;
  height: 10px;
  color: var(--compare-primary);
}

/* Featured Column Cells */
.comparison-table td.featured-column {
  background: linear-gradient(135deg, 
    rgba(0, 154, 97, 0.05) 0%, 
    rgba(0, 217, 126, 0.05) 100%);
  font-weight: 600;
}

/* Value Styling */
.value-check {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: linear-gradient(135deg, var(--compare-success), var(--compare-accent));
  border-radius: 50%;
  animation: checkmarkPop 0.5s ease both;
}

.value-check svg {
  width: 18px;
  height: 18px;
  color: white;
  stroke-width: 3;
}

.value-cross {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: rgba(255, 71, 87, 0.1);
  border-radius: 50%;
}

.value-cross svg {
  width: 18px;
  height: 18px;
  color: var(--compare-danger);
  stroke-width: 2.5;
}

.value-partial {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 50%;
}

.value-partial svg {
  width: 18px;
  height: 18px;
  color: var(--compare-warning);
  stroke-width: 2.5;
}

/* Price Values */
.price-value {
  font-size: 24px;
  font-weight: 700;
  color: var(--compare-text);
}

.price-value.best-price {
  color: var(--compare-primary);
  position: relative;
}

.price-unit {
  font-size: 14px;
  color: var(--compare-text-secondary);
  font-weight: 400;
}

/* Save Badge */
.save-badge {
  position: absolute;
  top: -8px;
  right: -8px;
  background: linear-gradient(135deg, var(--compare-success), #00ff88);
  color: #0a0a0a;
  padding: 4px 12px;
  border-radius: 100px;
  font-size: 11px;
  font-weight: 700;
  box-shadow: 0 4px 12px rgba(0, 217, 126, 0.4);
  animation: subtlePulse 4s ease-in-out infinite;
}

/* Text Values */
.text-value {
  font-size: 15px;
  color: var(--compare-text);
  line-height: 1.4;
}

.text-value.highlight {
  color: var(--compare-primary);
  font-weight: 600;
}

/* CTA Section */
.comparison-cta {
  text-align: center;
  margin-top: 48px;
  padding: 48px;
  background: var(--compare-gradient);
  border-radius: 24px;
  border: 2px solid var(--compare-border);
  animation: fadeInUp 0.9s ease 0.8s both;
}

[data-theme="dark"] .comparison-cta {
  background: var(--compare-card-bg);
  border-color: rgba(255, 255, 255, 0.08);
}

.cta-title {
  font-size: 28px;
  font-weight: 700;
  color: var(--compare-text);
  margin-bottom: 16px;
}

.cta-subtitle {
  font-size: 18px;
  color: var(--compare-text-secondary);
  margin-bottom: 32px;
}

.cta-buttons {
  display: flex;
  justify-content: center;
  gap: 16px;
  flex-wrap: wrap;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 18px 36px;
  background: linear-gradient(135deg, var(--compare-primary), var(--compare-accent));
  color: white;
  border: none;
  border-radius: 100px;
  font-size: 16px;
  font-weight: 700;
  text-decoration: none;
  cursor: pointer;
  transition: var(--compare-transition);
  box-shadow: 0 8px 24px rgba(0, 154, 97, 0.25);
  animation: subtlePulse 4s ease-in-out infinite;
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--compare-shadow-lg);
}

.cta-button-secondary {
  background: transparent;
  color: var(--compare-primary);
  border: 2px solid var(--compare-primary);
  animation: none;
}

.cta-button-secondary:hover {
  background: var(--compare-primary);
  color: white;
}

/* Mobile Styles */
@media (max-width: 1024px) {
  .comparison-container {
    padding: 80px 24px 0 24px;
  }
  
  .comparison-table th,
  .comparison-table td {
    padding: 20px 16px;
  }
  
  .option-name {
    font-size: 18px;
  }
}

/* Mobile Table */
@media (max-width: 768px) {
  .comparison-section {
    padding: 0 0 20px 0;
  }
  
  .comparison-container {
    padding: 20px 16px 0 16px;
  }
  
  [data-theme="dark"] .comparison-section {
    padding-top: 0 !important;
    margin-top: 0 !important;
  }
  
  .comparison-header {
    margin-bottom: 48px;
  }
  
  .comparison-title {
    font-size: 32px;
  }
  
  .comparison-subtitle {
    font-size: 17px;
    padding: 0 16px;
  }
  
  .trust-indicators {
    gap: 16px;
  }
  
  .trust-indicator {
    font-size: 12px;
  }
  
  /* Mobile Table Wrapper */
  .comparison-table-wrapper {
    border-radius: 20px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }
  
  /* Scrollable Table */
  .comparison-table {
    min-width: 600px;
  }
  
  .comparison-table th,
  .comparison-table td {
    padding: 16px 12px;
  }
  
  .comparison-table th:first-child,
  .comparison-table td:first-child {
    position: sticky;
    left: 0;
    z-index: 1;
    background: var(--compare-card-bg);
    box-shadow: 2px 0 4px rgba(0,0,0,0.1);
  }
  
  .comparison-table th.featured-column {
    position: sticky;
    left: 140px;
    z-index: 1;
  }
  
  .comparison-table td.featured-column {
    position: sticky;
    left: 140px;
    z-index: 1;
  }
  
  .option-name {
    font-size: 16px;
  }
  
  .price-value {
    font-size: 20px;
  }
  
  .recommended-badge {
    font-size: 10px;
    padding: 3px 10px;
  }
  
  /* CTA Mobile */
  .comparison-cta {
    padding: 32px 20px;
    border-radius: 20px;
  }
  
  .cta-title {
    font-size: 24px;
  }
  
  .cta-subtitle {
    font-size: 16px;
  }
  
  .cta-buttons {
    flex-direction: column;
  }
  
  .cta-button {
    width: 100%;
    padding: 16px 32px;
  }
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes subtlePulse {
  0%, 100% { 
    transform: translateY(0) scale(1);
  }
  50% { 
    transform: translateY(-3px) scale(1.02);
  }
}

@keyframes checkmarkPop {
  0% {
    transform: scale(0) rotate(-180deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.2) rotate(10deg);
  }
  100% {
    transform: scale(1) rotate(0);
    opacity: 1;
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
</style>

