  }
  
  .cta-text {
    font-size: 24px;
    margin-bottom: 32px;
  }
  
  .cta-button {
    font-size: 20px;
    padding: 24px 56px;
  }
}

/* Very Small Screens */
@media (max-width: 400px) {
  .comparison-container {
    padding: 0 12px;
  }
  
  .comparison-table {
    padding: 12px 8px;
    border-radius: 20px;
  }
  
  .table-header-cell {
    padding: 10px 4px;
  }
  
  .table-header-cell:first-child {
    width: 38%;
  }
  
  .provider-name {
