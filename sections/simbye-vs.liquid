<style>
/* CSS Variables - Why Section Style */
:root {
  --compare-bg: #ffffff;
  --compare-text: #1a1a1a;
  --compare-text-secondary: #666666;
  --compare-primary: #009a61;
  --compare-primary-hover: #00824f;
  --compare-accent: #00d97e;
  --compare-danger: #ff4757;
  --compare-warning: #ffa500;
  --compare-card-bg: #ffffff;
  --compare-border: rgba(0, 0, 0, 0.08);
  --compare-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.06);
  --compare-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.08);
  --compare-shadow-lg: 0 12px 32px rgba(0, 154, 97, 0.15);
  --compare-gradient: linear-gradient(135deg, #f8fffe 0%, #ffffff 100%);
  --compare-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode */
[data-theme="dark"] {
  --compare-bg: transparent;
  --compare-text: #f5f5f5;
  --compare-text-secondary: #999999;
  --compare-primary: #00d97e;
  --compare-primary-hover: #009a61;
  --compare-accent: #00ff88;
  --compare-danger: #ff6b6b;
  --compare-warning: #ffd93d;
  --compare-card-bg: rgba(26, 26, 26, 0.8);
  --compare-border: rgba(255, 255, 255, 0.08);
  --compare-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.3);
  --compare-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
  --compare-shadow-lg: 0 12px 32px rgba(0, 217, 126, 0.15);
  --compare-gradient: linear-gradient(135deg, rgba(0, 217, 126, 0.05) 0%, transparent 100%);
}

/* Main Section */
.comparison-section {
  width: 100%;
  padding: 80px 0;
  background: var(--compare-bg);
  position: relative;
  overflow: hidden;
  transition: var(--compare-transition);
}

[data-theme="light"] .comparison-section {
  background: #ffffff;
}

[data-theme="dark"] .comparison-section {
  background: #0a0a0a;
}

/* Container */
.comparison-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
  z-index: 1;
}

/* Header */
.comparison-header {
  text-align: center;
  margin-bottom: 48px;
  animation: fadeInUp 0.8s ease;
}

.comparison-title {
  font-size: clamp(32px, 5vw, 48px);
  font-weight: 700;
  color: var(--compare-text);
  margin: 0 0 16px 0;
  letter-spacing: -0.02em;
  line-height: 1.1;
}

.comparison-title-highlight {
  background: var(--compare-primary);
  color: white;
  padding: 4px 20px;
  border-radius: 12px;
  display: inline-block;
  margin: 0 8px;
}

[data-theme="dark"] .comparison-title-highlight {
  background: var(--compare-primary);
  color: #fff;
}

.comparison-subtitle {
  font-size: 18px;
  color: var(--compare-text-secondary);
  margin: 0;
  font-weight: 400;
  line-height: 1.5;
  max-width: 600px;
  margin: 0 auto;
}

/* Save Badge */
.save-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: linear-gradient(135deg, var(--compare-accent), #00ff88);
  color: #0a0a0a;
  padding: 8px 20px;
  border-radius: 100px;
  font-weight: 700;
  font-size: 14px;
  margin-top: 20px;
  box-shadow: 0 6px 20px rgba(0, 217, 126, 0.4);
  animation: subtlePulse 4s ease-in-out infinite;
}

/* Table Container - MOBILE FIRST */
.comparison-table {
  background: var(--compare-card-bg);
  border-radius: 24px;
  padding: 16px;
  box-shadow: var(--compare-shadow-md);
  border: 2px solid var(--compare-border);
  animation: fadeInUp 0.9s ease 0.2s both;
  overflow: hidden;
  width: 100%;
}

[data-theme="dark"] .comparison-table {
  background: var(--compare-card-bg);
  border-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
}

/* Table Layout - MOBILE OPTIMIZED */
.table-wrapper {
  width: 100%;
  display: table;
  table-layout: fixed;
}

/* Table Header */
.table-header {
  display: table-row;
}

.table-header-cell {
  display: table-cell;
  padding: 12px 8px;
  vertical-align: middle;
  text-align: center;
  border-bottom: 2px solid var(--compare-border);
  position: relative;
}

.table-header-cell:first-child {
  width: 35%;
  text-align: left;
  padding-left: 4px;
}

.provider-name {
  font-size: 13px;
  font-weight: 700;
  color: var(--compare-text);
  margin-bottom: 4px;
  word-wrap: break-word;
  overflow-wrap: break-word;
  hyphens: auto;
  line-height: 1.2;
}

.provider-type {
  font-size: 11px;
  color: var(--compare-text-secondary);
  word-wrap: break-word;
  overflow-wrap: break-word;
}

/* Simbye Column Highlight */
.table-header-cell.is-simbye {
  background: var(--compare-gradient);
  border: 2px solid var(--compare-primary);
  border-bottom: 2px solid var(--compare-primary);
  border-radius: 16px 16px 0 0;
  position: relative;
}

[data-theme="dark"] .table-header-cell.is-simbye {
  background: linear-gradient(135deg, rgba(0, 217, 126, 0.1) 0%, transparent 100%);
}

/* Best Choice Badge */
.best-choice-badge {
  position: absolute;
  top: -14px;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, var(--compare-primary), var(--compare-accent));
  color: white;
  padding: 4px 12px;
  border-radius: 100px;
  font-size: 10px;
  font-weight: 700;
  text-transform: uppercase;
  white-space: nowrap;
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.3);
}

/* Table Body */
.table-row {
  display: table-row;
  animation: fadeInUp 0.8s ease both;
}

.table-row:nth-child(1) { animation-delay: 0.1s; }
.table-row:nth-child(2) { animation-delay: 0.2s; }
.table-row:nth-child(3) { animation-delay: 0.3s; }
.table-row:nth-child(4) { animation-delay: 0.4s; }
.table-row:nth-child(5) { animation-delay: 0.5s; }
.table-row:nth-child(6) { animation-delay: 0.6s; }
.table-row:nth-child(7) { animation-delay: 0.7s; }

.table-cell {
  display: table-cell;
  padding: 16px 8px;
  vertical-align: middle;
  text-align: center;
  border-bottom: 1px solid var(--compare-border);
}

.table-row:last-child .table-cell {
  border-bottom: none;
}

.table-cell:first-child {
  text-align: left;
  padding-left: 4px;
  padding-right: 4px;
}

.table-cell.is-simbye {
  background: var(--compare-gradient);
  border-left: 2px solid var(--compare-primary);
  border-right: 2px solid var(--compare-primary);
}

[data-theme="dark"] .table-cell.is-simbye {
  background: rgba(0, 217, 126, 0.03);
}

.table-row:last-child .table-cell.is-simbye {
  border-bottom: 2px solid var(--compare-primary);
  border-radius: 0 0 16px 16px;
}

/* Feature Name with Icon */
.feature-wrapper {
  display: flex;
  align-items: center;
  gap: 8px;
}

.feature-icon-wrapper {
  width: 32px;
  height: 32px;
  background: linear-gradient(135deg, var(--compare-primary), var(--compare-accent));
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

[data-theme="dark"] .feature-icon-wrapper {
  background: linear-gradient(135deg, rgba(0, 217, 126, 0.2), rgba(0, 154, 97, 0.2));
}

.feature-icon {
  width: 16px;
  height: 16px;
  color: white;
}

[data-theme="dark"] .feature-icon {
  color: var(--compare-primary);
}

.feature-name {
  font-size: 13px;
  font-weight: 600;
  color: var(--compare-text);
  line-height: 1.2;
  word-wrap: break-word;
  overflow-wrap: break-word;
  hyphens: auto;
  text-align: left;
}

/* Values - MOBILE OPTIMIZED */
.value-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 40px;
}

.check-icon {
  width: 24px;
  height: 24px;
  color: var(--compare-primary);
  animation: checkIn 0.4s ease both;
}

.x-icon {
  width: 24px;
  height: 24px;
  color: var(--compare-danger);
  animation: xIn 0.4s ease both;
}

.warning-icon {
  width: 24px;
  height: 24px;
  color: var(--compare-warning);
  animation: warningIn 0.4s ease both;
}

.value-text {
  font-size: 11px;
  color: var(--compare-text);
  font-weight: 600;
  margin-top: 4px;
  text-align: center;
  word-wrap: break-word;
  overflow-wrap: break-word;
  hyphens: auto;
  max-width: 100%;
  line-height: 1.2;
}

.value-subtext {
  font-size: 10px;
  color: var(--compare-text-secondary);
  margin-top: 2px;
}

/* Bottom CTA */
.comparison-cta {
  text-align: center;
  margin-top: 48px;
  animation: fadeInUp 0.9s ease 0.8s both;
}

.cta-text {
  font-size: 20px;
  color: var(--compare-text);
  margin-bottom: 24px;
  font-weight: 600;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  padding: 20px 48px;
  background: linear-gradient(135deg, var(--compare-primary), var(--compare-accent));
  color: white;
  border: none;
  border-radius: 100px;
  font-size: 18px;
  font-weight: 700;
  cursor: pointer;
  transition: var(--compare-transition);
  box-shadow: 0 10px 30px rgba(0, 154, 97, 0.3);
  animation: subtlePulse 4s ease-in-out infinite;
  text-decoration: none;
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: var(--compare-shadow-lg);
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes subtlePulse {
  0%, 100% { 
    transform: translateY(0) scale(1);
  }
  50% { 
    transform: translateY(-3px) scale(1.02);
  }
}

@keyframes checkIn {
  0% {
    transform: scale(0) rotate(-180deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.2) rotate(10deg);
  }
  100% {
    transform: scale(1) rotate(0);
    opacity: 1;
  }
}

@keyframes xIn {
  0% {
    transform: scale(0) rotate(180deg);
    opacity: 0;
  }
  100% {
    transform: scale(1) rotate(0);
    opacity: 1;
  }
}

@keyframes warningIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Desktop Styles */
