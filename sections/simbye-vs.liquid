<script>
(function() {
  'use strict';
  
  // Cache DOM elements
  const section = document.querySelector('.comparison-section');
  const tableRows = document.querySelectorAll('.comparison-table tbody tr');
  const valueChecks = document.querySelectorAll('.value-check');
  
  // Initialize
  function init() {
    if (!section) return;
    
    // Animate on scroll
    animateOnScroll();
  }
  
  // Animate elements on scroll
  function animateOnScroll() {
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
          if (entry.isIntersecting) {
            // Animate checkmarks with delay
            if (entry.target.classList.contains('value-check')) {
              setTimeout(() => {
                entry.target.classList.add('animate');
              }, index * 100);
            }
            
            observer.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.3,
        rootMargin: '0px'
      });
      
      // Observe checkmarks
      valueChecks.forEach(check => {
        observer.observe(check);
      });
    }
  }
  
  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

