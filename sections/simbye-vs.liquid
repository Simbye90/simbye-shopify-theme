<script>
(function() {
  'use strict';
  
  // Get dynamic price from first product (Turkey as example)
  function updateSimbyePrice() {
    {% if section.settings.reference_product %}
      {% assign ref_product = section.settings.reference_product %}
      {% if ref_product.variants.size > 0 %}
        {% assign first_variant = ref_product.variants[0] %}
        {% if first_variant.price == 0 and ref_product.variants.size > 1 %}
          {% assign first_variant = ref_product.variants[1] %}
        {% endif %}
        
        const price = "{{ first_variant.price | money }}";
        const priceElement = document.getElementById('simbye-price');
        const pricePerGbElement = document.getElementById('simbye-price-per-gb');
        
        if (priceElement) {
          priceElement.textContent = price;
        }
        
        // Calculate price per GB
        {% assign gb_amount = first_variant.title | split: ' ' | first %}
        {% if gb_amount %}
          const gbAmount = parseFloat("{{ gb_amount }}".replace('GB', ''));
          const priceValue = {{ first_variant.price | divided_by: 100.0 }};
          
          if (!isNaN(gbAmount) && gbAmount > 0 && pricePerGbElement) {
            const perGb = (priceValue / gbAmount).toFixed(2);
            pricePerGbElement.textContent = `€${perGb}/GB`;
          }
        {% endif %}
      {% endif %}
    {% endif %}
  }
  
  // Initialize on DOM load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updateSimbyePrice);
  } else {
    updateSimbyePrice();
  }
  
  // Intersection Observer for animations
  const section = document.querySelector('.esim-comparison-section');
  if (!section) return;
  
  if ('IntersectionObserver' in window) {
    const animateObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.style.animationPlayState = 'running';
          animateObserver.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px'
    });
    
    // Observe animated elements
    const elements = section.querySelectorAll('[class*="fade"], [class*="scale"]');
    elements.forEach(el => {
      el.style.animationPlayState = 'paused';
      animateObserver.observe(el);
    });
  }
})();
</script>

