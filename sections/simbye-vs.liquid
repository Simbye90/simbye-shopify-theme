<style>
/* CSS Variables - Identisch mit Why Section */
:root {
  --compare-bg: #ffffff;
  --compare-text: #1a1a1a;
  --compare-text-secondary: #666666;
  --compare-primary: #009a61;
  --compare-primary-hover: #00824f;
  --compare-accent: #00d97e;
  --compare-success: #00d97e;
  --compare-warning: #ffc107;
  --compare-danger: #ff4757;
  --compare-card-bg: #ffffff;
  --compare-border: rgba(0, 0, 0, 0.08);
  --compare-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.06);
  --compare-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.08);
  --compare-shadow-lg: 0 12px 32px rgba(0, 154, 97, 0.15);
  --compare-gradient: linear-gradient(135deg, #f8fffe 0%, #ffffff 100%);
  --compare-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --compare-bg: transparent;
  --compare-text: #f5f5f5;
  --compare-text-secondary: #999999;
  --compare-primary: #00d97e;
  --compare-primary-hover: #009a61;
  --compare-accent: #00ff88;
  --compare-success: #00d97e;
  --compare-warning: #ffb800;
  --compare-danger: #ff6b6b;
  --compare-card-bg: rgba(26, 26, 26, 0.8);
  --compare-border: rgba(255, 255, 255, 0.08);
  --compare-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.3);
  --compare-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
  --compare-shadow-lg: 0 12px 32px rgba(0, 217, 126, 0.15);
  --compare-gradient: linear-gradient(135deg, rgba(0, 217, 126, 0.05) 0%, transparent 100%);
}

/* Main Section */
.comparison-section {
  width: 100%;
  padding: 0 0 20px 0;
  background: var(--compare-bg);
  position: relative;
  overflow: hidden;
  transition: var(--compare-transition);
}

/* Light Mode */
[data-theme="light"] .comparison-section {
  background: #ffffff;
}

/* Dark Mode */
[data-theme="dark"] .comparison-section {
  background: #0a0a0a;
}

/* Background Pattern */
.comparison-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
}

/* Container */
.comparison-container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 100px 40px 0 40px;
  position: relative;
  z-index: 1;
}

/* Header */
.comparison-header {
  text-align: center;
  margin-bottom: 72px;
  animation: fadeInUp 0.8s ease;
}

/* Title - EXAKT WIE WHY SECTION */
.comparison-title {
  font-size: clamp(32px, 5vw, 56px);
  font-weight: 700;
  color: var(--compare-text);
  margin: 0 0 20px 0;
  letter-spacing: -0.02em;
  line-height: 1.1;
}

.comparison-title-highlight {
  background: var(--compare-primary);
  color: white;
  padding: 4px 20px;
  border-radius: 12px;
  display: inline-block;
  margin: 0 8px;
}

[data-theme="dark"] .comparison-title-highlight {
  background: var(--compare-primary);
  color: #fff;
}

.comparison-subtitle {
  font-size: 20px;
  color: var(--compare-text-secondary);
  margin: 0;
  font-weight: 400;
  line-height: 1.5;
  max-width: 800px;
  margin: 0 auto;
}

/* Trust Indicators */
.trust-indicators {
  display: flex;
  justify-content: center;
  gap: 32px;
  margin-top: 24px;
  flex-wrap: wrap;
}

.trust-indicator {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: var(--compare-text-secondary);
}

.trust-indicator svg {
  width: 16px;
  height: 16px;
  color: var(--compare-primary);
}

/* Table Container */
.comparison-table-wrapper {
  background: var(--compare-card-bg);
  border-radius: 24px;
  padding: 0;
  box-shadow: var(--compare-shadow-lg);
  border: 2px solid var(--compare-border);
  overflow: hidden;
  position: relative;
  animation: fadeInUp 0.9s ease 0.2s both;
}

[data-theme="dark"] .comparison-table-wrapper {
  background: var(--compare-card-bg);
  border-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
}

/* Desktop Table */
.comparison-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
}

.comparison-table thead {
  background: var(--compare-gradient);
  border-bottom: 2px solid var(--compare-border);
}

.comparison-table th {
  padding: 28px 24px;
  font-size: 18px;
  font-weight: 700;
  text-align: center;
  position: relative;
  vertical-align: middle;
}

.comparison-table th:first-child {
  text-align: left;
  font-weight: 600;
  color: var(--compare-text-secondary);
  font-size: 16px;
}

/* Simbye Column - HIGHLIGHTED */
.comparison-table th.featured-column {
  background: linear-gradient(135deg, var(--compare-primary), var(--compare-accent));
  color: white;
  position: relative;
}

.comparison-table th.featured-column::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, transparent 100%);
  pointer-events: none;
}

/* Recommended Badge */
.recommended-badge {
  position: absolute;
  top: -14px;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #ff7e50, #ff9a76);
  color: white;
  padding: 4px 16px;
  border-radius: 100px;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 12px rgba(255, 126, 80, 0.3);
  animation: subtlePulse 4s ease-in-out infinite;
  white-space: nowrap;
}

/* Option Names */
.option-name {
  font-size: 20px;
  font-weight: 700;
  color: var(--compare-text);
  margin-bottom: 4px;
  display: block;
}

.featured-column .option-name {
  color: white;
}

.option-type {
  font-size: 13px;
  font-weight: 500;
  opacity: 0.8;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Table Body */
.comparison-table tbody tr {
  border-bottom: 1px solid var(--compare-border);
  transition: var(--compare-transition);
  animation: fadeInUp 0.6s ease both;
}

.comparison-table tbody tr:nth-child(1) { animation-delay: 0.3s; }
.comparison-table tbody tr:nth-child(2) { animation-delay: 0.35s; }
.comparison-table tbody tr:nth-child(3) { animation-delay: 0.4s; }
.comparison-table tbody tr:nth-child(4) { animation-delay: 0.45s; }
.comparison-table tbody tr:nth-child(5) { animation-delay: 0.5s; }
.comparison-table tbody tr:nth-child(6) { animation-delay: 0.55s; }
.comparison-table tbody tr:nth-child(7) { animation-delay: 0.6s; }
.comparison-table tbody tr:nth-child(8) { animation-delay: 0.65s; }
.comparison-table tbody tr:nth-child(9) { animation-delay: 0.7s; }

.comparison-table tbody tr:hover {
  background: var(--compare-gradient);
}

.comparison-table tbody tr:last-child {
  border-bottom: none;
}

.comparison-table td {
  padding: 24px;
  text-align: center;
  font-size: 16px;
  position: relative;
}

.comparison-table td:first-child {
  text-align: left;
  font-weight: 600;
  color: var(--compare-text);
}

/* Feature Label */
.feature-label {
  display: flex;
  align-items: center;
  gap: 8px;
}

.feature-info {
  width: 16px;
  height: 16px;
  background: rgba(0, 154, 97, 0.1);
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: help;
  position: relative;
}

.feature-info svg {
  width: 10px;
  height: 10px;
  color: var(--compare-primary);
}

/* Featured Column Cells */
.comparison-table td.featured-column {
  background: linear-gradient(135deg, 
    rgba(0, 154, 97, 0.05) 0%, 
    rgba(0, 217, 126, 0.05) 100%);
  font-weight: 600;
}

/* Value Styling */
.value-check {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: linear-gradient(135deg, var(--compare-success), var(--compare-accent));
  border-radius: 50%;
  animation: checkmarkPop 0.5s ease both;
}

.value-check svg {
  width: 18px;
  height: 18px;
  color: white;
  stroke-width: 3;
}

.value-cross {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: rgba(255, 71, 87, 0.1);
  border-radius: 50%;
}

.value-cross svg {
  width: 18px;
  height: 18px;
  color: var(--compare-danger);
  stroke-width: 2.5;
}

.value-partial {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 50%;
}

.value-partial svg {
  width: 18px;
  height: 18px;
  color: var(--compare-warning);
  stroke-width: 2.5;
}

/* Price Values */
.price-value {
  font-size: 24px;
  font-weight: 700;
  color: var(--compare-text);
}

.price-value.best-price {
  color: var(--compare-primary);
  position: relative;
}

.price-unit {
  font-size: 14px;
  color: var(--compare-text-secondary);
  font-weight: 400;
}

/* Save Badge */
.save-badge {
  position: absolute;
  top: -8px;
  right: -8px;
  background: linear-gradient(135deg, var(--compare-success), #00ff88);
  color: #0a0a0a;
  padding: 4px 12px;
  border-radius: 100px;
  font-size: 11px;
  font-weight: 700;
  box-shadow: 0 4px 12px rgba(0, 217, 126, 0.4);
  animation: subtlePulse 4s ease-in-out infinite;
}

/* Text Values */
.text-value {
  font-size: 15px;
  color: var(--compare-text);
  line-height: 1.4;
}

.text-value.highlight {
  color: var(--compare-primary);
  font-weight: 600;
}

/* Mobile Styles */
@media (max-width: 1024px) {
  .comparison-container {
    padding: 80px 24px 0 24px;
  }
  
  .comparison-table th,
  .comparison-table td {
    padding: 20px 16px;
    font-size: 14px;
  }
  
  .option-name {
    font-size: 18px;
  }
}

/* Mobile Table - OPTIMIZED wie Holafly */
@media (max-width: 768px) {
  .comparison-section {
    padding: 0 0 20px 0;
  }
  
  .comparison-container {
    padding: 20px 0 0 0; /* Kein seitlicher Padding */
  }
  
  [data-theme="dark"] .comparison-section {
    padding-top: 0 !important;
    margin-top: 0 !important;
  }
  
  .comparison-header {
    margin-bottom: 32px;
    padding: 0 16px;
  }
  
  .comparison-title {
    font-size: 28px;
  }
  
  .comparison-subtitle {
    font-size: 16px;
  }
  
  .trust-indicators {
    gap: 16px;
  }
  
  .trust-indicator {
    font-size: 12px;
  }
  
  /* Mobile Table Wrapper - Full Width */
  .comparison-table-wrapper {
    border-radius: 20px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    margin: 0 16px;
    background: var(--compare-card-bg);
  }
  
  /* Table ohne min-width für natürliches Scrolling */
  .comparison-table {
    width: auto;
    min-width: 100%;
  }
  
  .comparison-table thead {
    position: sticky;
    top: 0;
    z-index: 3;
    background: var(--compare-card-bg);
  }
  
  .comparison-table th {
    padding: 16px 12px;
    font-size: 14px;
    min-width: 100px;
    white-space: nowrap;
  }
  
  .comparison-table th:first-child {
    position: sticky;
    left: 0;
    z-index: 4;
    background: var(--compare-card-bg);
    box-shadow: 2px 0 4px rgba(0,0,0,0.05);
    min-width: 140px;
    padding-left: 16px;
    font-size: 13px;
  }
  
  .comparison-table th.featured-column {
    min-width: 120px;
  }
  
  .comparison-table td {
    padding: 20px 12px;
    font-size: 14px;
    min-width: 100px;
  }
  
  .comparison-table td:first-child {
    position: sticky;
    left: 0;
    z-index: 2;
    background: var(--compare-card-bg);
    box-shadow: 2px 0 4px rgba(0,0,0,0.05);
    min-width: 140px;
    padding-left: 16px;
    font-size: 13px;
  }
  
  [data-theme="dark"] .comparison-table td:first-child,
  [data-theme="dark"] .comparison-table th:first-child {
    background: rgba(26, 26, 26, 0.95);
  }
  
  /* Feature Labels mit Icons */
  .feature-label {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  .feature-icon-mobile {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--compare-primary);
    flex-shrink: 0;
  }
  
  .feature-icon-mobile svg {
    width: 20px;
    height: 20px;
  }
  
  .feature-info {
    display: none; /* Hide info icon on mobile */
  }
  
  /* Compact Option Names */
  .option-name {
    font-size: 15px;
    font-weight: 700;
    margin-bottom: 2px;
  }
  
  .option-type {
    font-size: 10px;
    opacity: 0.7;
  }
  
  /* Prices */
  .price-value {
    font-size: 18px;
  }
  
  .price-unit {
    font-size: 12px;
  }
  
  /* Badges */
  .recommended-badge {
    font-size: 9px;
    padding: 2px 8px;
    top: -10px;
  }
  
  .save-badge {
    font-size: 9px;
    padding: 2px 6px;
    top: -6px;
    right: -6px;
  }
  
  /* Values - Größere Touch-Targets */
  .value-check,
  .value-cross,
  .value-partial {
    width: 32px;
    height: 32px;
  }
  
  .value-check svg,
  .value-cross svg,
  .value-partial svg {
    width: 18px;
    height: 18px;
  }
  
  .text-value {
    font-size: 13px;
  }
  
  /* Scroll Indicator */
  .comparison-table-wrapper::after {
    content: '→';
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 24px;
    color: var(--compare-primary);
    opacity: 0.5;
    pointer-events: none;
    animation: scrollHint 2s ease-in-out infinite;
  }
  
  @keyframes scrollHint {
    0%, 100% { transform: translateY(-50%) translateX(0); }
    50% { transform: translateY(-50%) translateX(5px); }
  }
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes subtlePulse {
  0%, 100% { 
    transform: translateY(0) scale(1);
  }
  50% { 
    transform: translateY(-3px) scale(1.02);
  }
}

@keyframes checkmarkPop {
  0% {
    transform: scale(0) rotate(-180deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.2) rotate(10deg);
  }
  100% {
    transform: scale(1) rotate(0);
    opacity: 1;
  }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}
</style>

