                      <span class="plan-price-old">{{ variant.compare_at_price | money }}</span>
                    {% endif %}
                    <span class="plan-price">
                      {% if is_free %}
                        FREE
                      {% else %}
                        {{ variant.price | money }}
                      {% endif %}
                    </span>
