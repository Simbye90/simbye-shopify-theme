}

/* Hero Info - ENHANCED */
.hero-info-section {
  animation: fadeInUp 0.8s ease 0.2s both;
}

/* Title mit Flagge - ENHANCED */
.product-title-wrapper {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 32px;
  animation: fadeInUp 0.8s ease 0.3s both;
}

.product-flag {
  width: 56px;
  height: 42px;
  border-radius: 12px;
  object-fit: cover;
