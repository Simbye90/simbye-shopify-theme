/* FIX 2: VARIANTEN ABST√ÑNDE */
.plans-container {
  display: flex;
  flex-direction: column;
  gap: 16px !important; /* WICHTIG: Abstand zwischen Cards */
}

.variant-group {
  display: flex;
  flex-direction: column;
