  align-items: center;
  justify-content: center;
  gap: 12px;
  font-family: inherit;
}

.variant-tab:hover {
  background: rgba(0, 154, 97, 0.05);
  color: var(--product-text);
}

.variant-tab.active {
  background: var(--product-primary);
  color: white;
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.3);
}

/* Tab Icons - HEROICONS */
.tab-icon {
  width: 20px;
  height: 20px;
