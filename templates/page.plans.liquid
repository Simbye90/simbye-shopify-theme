<script>
// Check jQuery
if (typeof jQuery === 'undefined') {
  console.error('❌ jQuery not loaded! Loading now...');
  var script = document.createElement('script');
  script.src = 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js';
  document.head.appendChild(script);
  script.onload = function() {
    initCheckEsim();
  };
} else {
  console.log('✅ jQuery ' + jQuery.fn.jquery + ' already loaded');
  jQuery(document).ready(function() {
    initCheckEsim();
  });
}

function initCheckEsim() {
  console.log('🚀 Initializing Check eSIM Page');
  
  const $ = jQuery;
  
  // Elements
  const $orderInput = $('#orderNumber');
  const $searchBtn = $('#searchBtn');
  const $errorMsg = $('#errorMsg');
  const $successMsg = $('#successMsg');
  const $loading = $('#loading');
  const $esimCard = $('#esimCard');
  
  // Check URL parameters
  const urlParams = new URLSearchParams(window.location.search);
  const orderFromUrl = urlParams.get('order_number');
  
  if (orderFromUrl) {
    console.log('📝 Found order in URL:', orderFromUrl);
    $orderInput.val(orderFromUrl);
    // Auto-search after 500ms
    setTimeout(searchOrder, 500);
  }
  
  // Search button click
  $searchBtn.on('click', searchOrder);
  
  // Enter key in input
  $orderInput.on('keypress', function(e) {
    if (e.which === 13) searchOrder();
  });
  
  // Main search function
  function searchOrder() {
    const orderNumber = $orderInput.val().trim();
    
    if (!orderNumber) {
      showError('Please enter an order number');
      return;
    }
    
    console.log('🔍 Searching for order:', orderNumber);
    
    // Clear messages
    $errorMsg.removeClass('show');
    $successMsg.removeClass('show');
    $esimCard.removeClass('active');
    
    // Show loading
    $loading.addClass('active');
    $searchBtn.prop('disabled', true);
    
    // API Call
    const apiUrl = 'https://simbye.com/apps/topup/info/' + orderNumber;
    
    $.ajax({
      url: apiUrl,
      method: 'GET',
      headers: {
        'ngrok-skip-browser-warning': 'skip',
        'Accept': 'application/json'
      },
      dataType: 'json',
      timeout: 10000,
      success: function(response) {
        console.log('✅ API Response:', response);
        
        if (response && response.data && response.data.obj && response.data.obj.esimList) {
          const esimList = response.data.obj.esimList;
          if (esimList && esimList.length > 0) {
            displayEsimData(esimList[0]);
            showSuccess('eSIM found successfully!');
          } else {
            showError('No eSIM found for this order number');
          }
        } else {
          showError('Invalid response format');
        }
      },
      error: function(xhr, status, error) {
        console.error('❌ API Error:', {
          status: status,
          error: error,
          response: xhr.responseText
        });
        
        if (status === 'timeout') {
          showError('Request timed out. Please try again.');
        } else if (xhr.status === 0) {
          showError('Network error. Please check your connection.');
        } else if (xhr.status === 404) {
          showError('Order not found. Please check the order number.');
        } else {
          showError('Failed to load eSIM data. Error: ' + error);
        }
      },
      complete: function() {
        $loading.removeClass('active');
        $searchBtn.prop('disabled', false);
      }
    });
  }
  
  // Display eSIM data
  function displayEsimData(esim) {
    console.log('📊 Displaying eSIM:', esim);
    
    const pkg = esim.packageList && esim.packageList[0] || {};
    
    // Store data for top-up
    $('#esimTranNo').text(esim.esimTranNo || '');
    $('#pkgCode').text(pkg.packageCode || '');
    
    // Package info
    $('#packageName').text(pkg.packageName || 'eSIM Package');
    $('#packageCode').text('Code: ' + (pkg.packageCode || 'N/A'));
    
    // QR Code
    if (esim.qrCodeUrl) {
      $('#qrCode').attr('src', esim.qrCodeUrl);
    }
    
    // ICCID
    $('#iccid').text(formatIccid(esim.iccid) || '-');
    
    // Dates
    if (esim.activateTime) {
      $('#activationDate').text(formatDate(esim.activateTime));
    } else {
      $('#activationDate').text('Not activated');
    }
    
    if (esim.expiredTime) {
      $('#expiryDate').text(formatDate(esim.expiredTime));
    }
    
    // Region
    $('#region').text(pkg.locationCode || '-');
    
    // Data usage calculation
    const totalBytes = esim.totalVolume || 0;
    const usedBytes = esim.orderUsage || 0;
    const totalGB = bytesToGB(totalBytes);
    const usedGB = bytesToGB(usedBytes);
    const leftGB = totalGB - usedGB;
    const percentage = totalGB > 0 ? (usedGB / totalGB * 100) : 0;
    
    $('#totalData').text(formatDataSize(totalGB));
    $('#dataUsed').text(formatDataSize(usedGB));
    $('#dataLeft').text(formatDataSize(leftGB));
    
    // Progress bar
    $('#progressBar').css('width', percentage + '%');
    $('#progressBar .progress-text').text(Math.round(percentage) + '%');
    
    // Show card
    $esimCard.addClass('active');
  }
  
  // Format functions
  function formatIccid(iccid) {
    if (!iccid) return null;
    // Format: 8943 1081 7000 1086 375
    return iccid.replace(/(.{4})/g, '$1 ').trim();
  }
  
  function formatDate(dateString) {
    if (!dateString) return '-';
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    });
  }
  
  function bytesToGB(bytes) {
    return bytes / (1024 * 1024 * 1024);
  }
  
  function formatDataSize(gb) {
    if (gb < 0) return '0 GB';
    if (gb < 1) {
      return Math.round(gb * 1024) + ' MB';
    }
    return gb.toFixed(2) + ' GB';
  }
  
  // Messages
  function showError(message) {
    $errorMsg.text(message).addClass('show');
    setTimeout(() => $errorMsg.removeClass('show'), 5000);
  }
  
  function showSuccess(message) {
    $successMsg.text(message).addClass('show');
    setTimeout(() => $successMsg.removeClass('show'), 3000);
  }
  
  // Hide QR Code button
  $('#hideQR').on('click', function() {
    alert('Email verification required to show QR code');
    // Implement email verification modal here
  });
  
  // Top up button
  $('#topupBtn').on('click', function() {
    const esimTranNo = $('#esimTranNo').text();
    const pkgCode = $('#pkgCode').text();
    
    if (!esimTranNo || !pkgCode) {
      showError('Missing data for top-up');
      return;
    }
    
    console.log('🛒 Starting top-up:', {
      esimTranNo: esimTranNo,
      packageCode: pkgCode
    });
    
    // Load top-up plans
    loadTopUpPlans(esimTranNo, pkgCode);
  });
  
  // Load top-up plans
  function loadTopUpPlans(esimTranNo, packageCode) {
    const currency = window.Shopify?.currency?.active || 'USD';
    const apiUrl = 'https://simbye.com/apps/topup/plans?esimTranNo=' + esimTranNo + 
                   '&packageCode=' + packageCode + 
                   '&currency=' + currency;
    
    console.log('📦 Loading top-up plans:', apiUrl);
    
    // Here you would implement the modal with top-up options
    alert('Top-up API: ' + apiUrl);
  }
}
</script>