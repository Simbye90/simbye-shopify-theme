    <!-- My eSIMs Tab -->
    <div id="esims-tab" class="tab-content active">
      
      <div class="section-header">
        <h2 class="section-title">Your eSIM Collection</h2>
        <div class="section-actions">
          <div class="filter-group">
            <button class="filter-btn active" onclick="filterEsims('all')">All</button>
            <button class="filter-btn" onclick="filterEsims('active')">Active</button>
            <button class="filter-btn" onclick="filterEsims('expired')">Expired</button>
          </div>
        </div>
      </div>
      
      <div class="esims-grid">
        
        {% assign has_esims = false %}
        {% assign esim_counter = 0 %}
        
        {% comment %} FIXED: ZEIGT ALLE ESIMS - KEINE BREAKS, KEIN SKIP {% endcomment %}
        {% for order in customer.orders %}
          {% assign orderMeta = order.metafields.Simbye.esimaccess_details %}
          
          {% if orderMeta and orderMeta != empty %}
            {% for esimData in orderMeta %}
              {% assign has_esims = true %}
              {% assign esim_counter = esim_counter | plus: 1 %}
              
              {% comment %} DEFAULT FALLBACK - Verwende immer ersten Line Item {% endcomment %}
              {% assign matched_product = order.line_items.first.product %}
              {% assign matched_variant = order.line_items.first.variant %}
              {% assign match_found = false %}
              
              {% comment %} VERSUCHE BESSERES MATCH ZU FINDEN (Optional) {% endcomment %}
              {% if esimData.packageList and esimData.packageList.size > 0 %}
                {% for package in esimData.packageList %}
                  {% unless match_found %}
                    {% for line_item in order.line_items %}
                      {% unless match_found %}
                        {% for variant in line_item.product.variants %}
                          {% if variant.metafields.custom.package_code == package.packageCode %}
                            {% assign matched_product = line_item.product %}
                            {% assign matched_variant = variant %}
                            {% assign match_found = true %}
                            {% break %}
                          {% endif %}
                        {% endfor %}
                      {% endunless %}
                    {% endfor %}
                  {% endunless %}
                {% endfor %}
              {% endif %}
              
              {% comment %} IMMER ESIM CARD ERSTELLEN - MIT ODER OHNE MATCH {% endcomment %}
              
              {% comment %} Calculate Status {% endcomment %}
              {% assign status = 'active' %}
              {% assign status_text = 'Active' %}
              {% assign days_left = 999 %}
              
              {% if esimData.expiredTime %}
                {% assign expiry_timestamp = esimData.expiredTime | date: '%s' | times: 1 %}
                {% assign now_timestamp = 'now' | date: '%s' | times: 1 %}
                {% assign days_left = expiry_timestamp | minus: now_timestamp | divided_by: 86400 %}
                
                {% if days_left < 0 %}
                  {% assign status = 'expired' %}
                  {% assign status_text = 'Expired' %}
                {% elsif days_left <= 3 %}
                  {% assign status = 'expiring' %}
                  {% assign status_text = 'Expiring Soon' %}
                {% endif %}
              {% endif %}
              
              {% comment %} Calculate Data Usage {% endcomment %}
              {% assign data_total_gb = 0 %}
              {% assign data_used_gb = 0 %}
              {% assign usage_percent = 0 %}
              
              {% if esimData.totalVolume %}
                {% assign data_total_gb = esimData.totalVolume | divided_by: 1073741824.0 %}
              {% endif %}
              
              {% if esimData.orderUsage %}
                {% assign data_used_gb = esimData.orderUsage | divided_by: 1073741824.0 %}
                {% if data_total_gb > 0 %}
                  {% assign usage_percent = data_used_gb | divided_by: data_total_gb | times: 100 %}
                {% endif %}
              {% endif %}
              
              {% assign usage_class = '' %}
              {% if usage_percent >= 80 %}
                {% assign usage_class = 'danger' %}
              {% elsif usage_percent >= 60 %}
                {% assign usage_class = 'warning' %}
              {% endif %}
              
              <!-- eSIM Card #{{ esim_counter }} -->
              <div class="esim-card" data-status="{{ status }}" data-esim-id="{{ esim_counter }}">
                <div class="esim-status status-{{ status }}">{{ status_text }}</div>
                
                <div class="esim-header">
                  {% if matched_product.featured_image %}
                    <img 
                      src="{{ matched_product.featured_image | image_url: width: 128 }}" 
                      alt="{{ matched_product.title }}"
                      class="esim-flag"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="esim-flag" style="background: var(--account-gradient); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
                      eSIM
                    </div>
                  {% endif %}
                  <div class="esim-info">
                    <h3>{{ matched_product.title | split: ' - ' | first | replace: 'eSIM', '' | strip | default: 'eSIM Package' }}</h3>
                    <div class="esim-plan">
                      {% if matched_variant.title != 'Default Title' %}
                        {{ matched_variant.title }}
                      {% else %}
                        {% if esimData.packageList.first %}
                          {{ esimData.packageList.first.packageName | default: 'Data Plan' }}
                        {% else %}
                          Data Plan
                        {% endif %}
                      {% endif %}
                      • Order {{ order.name }}
                    </div>
                  </div>
                </div>
                
                {% if status != 'expired' and data_total_gb > 0 %}
                  <div class="usage-meter">
                    <div class="usage-header">
                      <span class="usage-label">Data Usage</span>
                      <span class="usage-value">{{ data_used_gb | round: 1 }}GB / {{ data_total_gb | round }}GB</span>
                    </div>
                    <div class="usage-bar">
                      <div class="usage-fill {{ usage_class }}" style="width: {{ usage_percent | round }}%"></div>
                    </div>
                  </div>
                {% endif %}
                
                <div class="esim-details">
                  <div class="detail-row">
                    <span class="detail-label">
                      <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      Purchased
                    </span>
                    <span class="detail-value">{{ order.created_at | date: '%b %d, %Y' }}</span>
                  </div>
                  
                  {% if esimData.expiredTime %}
                    <div class="detail-row">
                      <span class="detail-label">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        {% if status == 'expired' %}Expired{% else %}Expires{% endif %}
                      </span>
                      <span class="detail-value">
                        {{ esimData.expiredTime | date: '%b %d, %Y' }}
                        {% if days_left >= 0 %}
                          ({{ days_left }} days)
                        {% endif %}
                      </span>
                    </div>
                  {% endif %}
                  
                  {% if esimData.iccid %}
                    <div class="detail-row">
                      <span class="detail-label">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"/>
                        </svg>
                        ICCID
                      </span>
                      <span class="detail-value">...{{ esimData.iccid | slice: -8, 8 }}</span>
                    </div>
                  {% endif %}
                </div>
                
                <div class="esim-actions">
                  {% if esimData.qrCodeUrl %}
                    <button 
                      class="btn btn-primary" 
                      onclick="showQR('{{ esimData.qrCodeUrl }}', '{{ matched_product.title | escape }}')"
                    >
                      <svg width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
                      </svg>
                      QR Code
                    </button>
                  {% else %}
                    <button class="btn btn-primary" disabled style="opacity: 0.5; cursor: not-allowed;">
                      No QR Available
                    </button>
                  {% endif %}
                  
                  {% if status != 'expired' %}
                    {% comment %} Check if daily/unlimited - FIXED DETECTION {% endcomment %}
                    {% assign is_unlimited = false %}
                    {% assign variant_title_lower = matched_variant.title | downcase %}
                    {% assign variant_sku_lower = matched_variant.sku | downcase %}
                    {% assign product_title_lower = matched_product.title | downcase %}
                    
                    {% if variant_title_lower contains 'daily' or variant_title_lower contains 'unlimited' %}
                      {% assign is_unlimited = true %}
                    {% elsif variant_sku_lower contains 'daily' or variant_sku_lower contains 'unlimited' %}
                      {% assign is_unlimited = true %}
                    {% elsif product_title_lower contains 'daily' or product_title_lower contains 'unlimited' %}
                      {% assign is_unlimited = true %}
                    {% endif %}
                    
                    {% unless is_unlimited %}
                      <a href="{{ matched_product.url }}" class="btn btn-secondary">
                        <svg width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Top Up
                      </a>
                    {% else %}
                      <button class="btn btn-secondary" disabled style="opacity: 0.5; cursor: not-allowed;">
                        Not Rechargeable
                      </button>
                    {% endunless %}
                  {% else %}
                    <a href="{{ routes.root_url }}" class="btn btn-danger">
                      <svg width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                      </svg>
                      Buy New
                    </a>
                  {% endif %}
                </div>
              </div>
              
            {% endfor %}
          {% endif %}
        {% endfor %}
        
      </div>
      
      {% unless has_esims %}
