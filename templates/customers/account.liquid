  <div class="account-page-title">
    <h1 class="headline">{{ 'customer.account.title' | t | default: 'My Account' }}</h1>
  </div>
  
  <div class="container">
    <!-- Tab Navigation -->
    <nav class="tab-nav">
      <ul>
        <li>
          <a href="javascript:void(0)" onclick="showTab('account-info')" class="active">
