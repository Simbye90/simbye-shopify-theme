<script>
// Tab switching
function showTab(tabId) {
  // Hide all tabs
  var tabs = document.getElementsByClassName('tab-content');
  for (var i = 0; i < tabs.length; i++) {
    tabs[i].classList.remove('active-tab');
  }
  
  // Remove active from all nav links
  var navLinks = document.querySelectorAll('.tab-nav a');
  navLinks.forEach(function(link) {
    link.classList.remove('active');
  });
  
  // Show selected tab
  document.getElementById(tabId).classList.add('active-tab');
  
  // Set active nav link
  event.currentTarget.classList.add('active');
}

// eSIM Details button
document.addEventListener('DOMContentLoaded', function() {
  // Handle eSIM details buttons
  document.querySelectorAll('.esim_details').forEach(function(btn) {
    if (!btn.href) { // Only for buttons, not links
      btn.addEventListener('click', function() {
        var orderId = this.dataset.id;
        var ccid = this.dataset.ccid;
        console.log('eSIM Details for order:', orderId, 'CCID:', ccid);
        // Add your logic here
      });
    }
  });
  
  // Handle install buttons
  document.querySelectorAll('.installbtn').forEach(function(btn) {
    if (!btn.href) { // Only for buttons, not links
      btn.addEventListener('click', function() {
        var container = this.closest('.sim_btns').querySelector('.iframe_container');
        if (container) {
          container.classList.toggle('hidden');
          container.classList.toggle('visible');
        }
      });
    }
  });
  
  // Handle close iframe
  document.querySelectorAll('.close_iframe').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var container = this.closest('.iframe_container');
      if (container) {
        container.classList.add('hidden');
        container.classList.remove('visible');
      }
    });
  });
});

// Installation guide gallery
var images = [
  'https://cdn.shopify.com/s/files/1/0633/9012/2175/files/Iphone_eSIM_settings.png?v=1716650753',
  'https://cdn.shopify.com/s/files/1/0633/9012/2175/files/Simbye_eSIM_settings_install.png?v=1716651263',
  'https://cdn.shopify.com/s/files/1/0633/9012/2175/files/Iphone_eSIM_settings_install.png?v=1716650773',
  'https://cdn.shopify.com/s/files/1/0633/9012/2175/files/Iphone_eSIM_settings_after_install.png?v=1716650790'
];

var texts = [
  "1. Click on Settings",
  "2. Go to Mobile Services",
  "3. Go to Simbye eSIM",
  "4. Activate the Line and Data Roaming"
];

var currentIndex = 0;
var interval = 4000;

// Preload images
function preloadImages() {
  images.forEach(function(src) {
    var img = new Image();
    img.src = src;
  });
}

preloadImages();

function nextImage() {
  var galleryDiv = document.getElementById('galleryDiv');
  var imageText = document.getElementById('imageText');
  
  currentIndex = (currentIndex + 1) % images.length;
  
  // Change image with smooth transition
  galleryDiv.style.backgroundImage = 'url(' + images[currentIndex] + ')';
  
  // Change text with smooth transition
  imageText.style.opacity = 0;
  setTimeout(function() {
    imageText.innerText = texts[currentIndex];
    imageText.style.opacity = 1;
  }, 500);
}

// Auto advance gallery
setInterval(nextImage, interval);
</script>