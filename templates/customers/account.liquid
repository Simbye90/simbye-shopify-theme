          {% for order in customer.orders %}
            {% assign orderMeta = order.metafields.Simbye.esimaccess_details %}
            {% if orderMeta %}
              {% for esim in orderMeta %}
                {% if esim.status == 'ACTIVE' %}
                  {% assign active_esims = active_esims | plus: 1 %}
                {% endif %}
              {% endfor %}
            {% endif %}
          {% endfor %}
          <div class="stat-value">{{ active_esims }}</div>
          <div class="stat-label">Active</div>
        </div>
        
        <!-- Total Orders -->
        <div class="stat-card">
          <div class="stat-icon">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
          </div>
          <div class="stat-value">{{ customer.orders_count }}</div>
          <div class="stat-label">Orders</div>
        </div>
        
        <!-- Expiring Soon -->
        <div class="stat-card">
          <div class="stat-icon">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          {% assign expiring_soon = 0 %}
          {% assign now = 'now' | date: '%s' %}
          {% for order in customer.orders %}
            {% assign orderMeta = order.metafields.Simbye.esimaccess_details %}
            {% if orderMeta %}
              {% for esim in orderMeta %}
                {% if esim.expiredTime %}
                  {% assign expiry = esim.expiredTime | date: '%s' %}
                  {% assign days_diff = expiry | minus: now | divided_by: 86400 %}
                  {% if days_diff >= 0 and days_diff <= 7 %}
                    {% assign expiring_soon = expiring_soon | plus: 1 %}
                  {% endif %}
                {% endif %}
              {% endfor %}
            {% endif %}
          {% endfor %}
          <div class="stat-value">{{ expiring_soon }}</div>
          <div class="stat-label">Expiring Soon</div>
