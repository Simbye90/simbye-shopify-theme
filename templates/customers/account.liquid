            {{ 'check_out_page_main_tabs_1' | t | default: 'Account Info' }}
          </a>
        </li>
        <li>
          <a href="javascript:void(0)" onclick="showTab('my-esims')">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M10 2v8.5a.5.5 0 01-.5.5h-6a.5.5 0 01-.5-.5V2M10 13v8.5a.5.5 0 01-.5.5h-6a.5.5 0 01-.5-.5V13M21 2v8.5a.5.5 0 01-.5.5h-6a.5.5 0 01-.5-.5V2M21 13v8.5a.5.5 0 01-.5.5h-6a.5.5 0 01-.5-.5V13"/>
