            </svg>
          </div>
          {% assign expiring_soon = 0 %}
          {% assign seven_days = 604800 %}
          {% for order in customer.orders %}
            {% assign orderMeta = order.metafields.Simbye.esimaccess_details %}
            {% if orderMeta %}
              {% for esim in orderMeta %}
                {% if esim.expiredTime %}
                  {% assign expiry = esim.expiredTime | date: '%s' | times: 1 %}
                  {% assign time_left = expiry | minus: now_timestamp %}
                  {% if time_left > 0 and time_left <= seven_days %}
                    {% assign expiring_soon = expiring_soon | plus: 1 %}
                  {% endif %}
                {% endif %}
