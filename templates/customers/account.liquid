            <div class="account-action">
              <button type="submit">{{ 'check_out_page_main_tabs_1_inner_btn_save_changes' | t | default: 'Save Changes' }}</button>
            </div>
          </form>
          
          <div class="del_account_container">
            <h3 class="del_account_title">{{ 'check_out_page_main_tabs_1_inner_logout_heading' | t | default: 'Sign Out' }}</h3>
            <p class="del_account_subtitle">
              {{ 'check_out_page_main_tabs_1_inner_logout_inner_txt' | t | default: 'You can sign out from your account at any time.' }}
            </p>
            <a id="deleteButton" href="{{ routes.account_logout_url }}">
