<!-- SIMBYE ENTERPRISE ACCOUNT DASHBOARD V2.0 -->

<style>
/* CSS Variables - Enterprise Account System */
:root {
  --account-bg: #f8f9fa;
  --account-text: #1a1a1a;
  --account-text-secondary: #666666;
  --account-primary: #009a61;
  --account-primary-hover: #00824f;
  --account-accent: #00d97e;
  --account-success: #00d97e;
  --account-warning: #ff9a00;
  --account-danger: #ff3b30;
  --account-card-bg: #ffffff;
  --account-border: rgba(0, 0, 0, 0.06);
  --account-shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.04);
  --account-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.06);
  --account-shadow-lg: 0 12px 32px rgba(0, 154, 97, 0.08);
  --account-gradient: linear-gradient(135deg, #009a61 0%, #00d97e 100%);
  --account-radius: 20px;
  --account-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode */
[data-theme="dark"] {
  --account-bg: #0a0a0a;
  --account-text: #f5f5f5;
  --account-text-secondary: #999999;
  --account-primary: #00d97e;
  --account-primary-hover: #009a61;
  --account-accent: #00ff88;
  --account-card-bg: rgba(26, 26, 26, 0.8);
  --account-border: rgba(255, 255, 255, 0.08);
  --account-shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.2);
  --account-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.3);
  --account-shadow-lg: 0 12px 32px rgba(0, 217, 126, 0.1);
}

/* Main Layout */
.account-dashboard {
  min-height: 100vh;
  background: var(--account-bg);
  padding: 40px 0 80px 0;
}

.account-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Welcome Header */
.account-header {
  margin-bottom: 48px;
}

.welcome-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32px;
}

.welcome-content h1 {
  font-size: 36px;
  font-weight: 700;
  color: var(--account-text);
  margin: 0 0 8px 0;
}

.welcome-content p {
  font-size: 16px;
  color: var(--account-text-secondary);
  margin: 0;
}

.quick-actions {
  display: flex;
  gap: 12px;
}

.btn-quick {
  padding: 12px 24px;
  border-radius: 12px;
  font-weight: 600;
  font-size: 15px;
  transition: var(--account-transition);
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background: var(--account-gradient);
  color: white;
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.2);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 154, 97, 0.3);
}

.btn-secondary {
  background: var(--account-card-bg);
  color: var(--account-primary);
  border: 2px solid var(--account-border);
}

.btn-secondary:hover {
  border-color: var(--account-primary);
  background: rgba(0, 154, 97, 0.05);
}

/* Stats Overview */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-bottom: 48px;
}

.stat-card {
  background: var(--account-card-bg);
  border-radius: var(--account-radius);
  padding: 24px;
  border: 1px solid var(--account-border);
  transition: var(--account-transition);
  position: relative;
  overflow: hidden;
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--account-shadow-md);
  border-color: var(--account-primary);
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--account-gradient);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.stat-card:hover::before {
  transform: scaleX(1);
}

.stat-icon {
  width: 48px;
  height: 48px;
  background: linear-gradient(135deg, rgba(0, 154, 97, 0.1), rgba(0, 217, 126, 0.1));
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
}

.stat-icon svg {
  width: 24px;
  height: 24px;
  color: var(--account-primary);
}

.stat-value {
  font-size: 32px;
  font-weight: 700;
  color: var(--account-text);
  margin-bottom: 4px;
}

.stat-label {
  font-size: 14px;
  color: var(--account-text-secondary);
}

/* Tab Navigation */
.account-tabs {
  display: flex;
  gap: 4px;
  background: rgba(0, 154, 97, 0.05);
  padding: 4px;
  border-radius: 16px;
  border: 1px solid rgba(0, 154, 97, 0.1);
  margin-bottom: 32px;
  overflow-x: auto;
}

.tab-btn {
  flex: 1;
  padding: 16px 32px;
  background: transparent;
  border: none;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  color: var(--account-text-secondary);
  cursor: pointer;
  transition: var(--account-transition);
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.tab-btn:hover {
  background: rgba(0, 154, 97, 0.08);
  color: var(--account-text);
}

.tab-btn.active {
  background: var(--account-primary);
  color: white;
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.3);
}

.tab-icon {
  width: 20px;
  height: 20px;
}

/* Tab Content */
.tab-content {
  display: none;
  animation: fadeIn 0.4s ease;
}

.tab-content.active {
  display: block;
}

/* eSIM Grid */
.esim-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 24px;
  margin-bottom: 32px;
}

.esim-card {
  background: var(--account-card-bg);
  border-radius: var(--account-radius);
  padding: 24px;
  border: 2px solid var(--account-border);
  transition: var(--account-transition);
  position: relative;
  overflow: hidden;
}

.esim-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--account-shadow-lg);
  border-color: var(--account-primary);
}

.esim-status {
  position: absolute;
  top: 24px;
  right: 24px;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-active {
  background: rgba(0, 217, 126, 0.1);
  color: var(--account-success);
}

.status-expired {
  background: rgba(255, 59, 48, 0.1);
  color: var(--account-danger);
}

.status-pending {
  background: rgba(255, 154, 0, 0.1);
  color: var(--account-warning);
}

.esim-country {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 20px;
}

.esim-flag {
  width: 48px;
  height: 36px;
  border-radius: 8px;
  object-fit: cover;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.esim-name {
  font-size: 20px;
  font-weight: 700;
  color: var(--account-text);
}

.esim-details {
  margin-bottom: 20px;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
  border-bottom: 1px solid var(--account-border);
  font-size: 14px;
}

.detail-label {
  color: var(--account-text-secondary);
}

.detail-value {
  font-weight: 600;
  color: var(--account-text);
}

/* Data Usage Bar */
.data-usage {
  margin: 20px 0;
}

.usage-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
  font-size: 14px;
}

.usage-bar {
  height: 8px;
  background: var(--account-border);
  border-radius: 4px;
  overflow: hidden;
}

.usage-fill {
  height: 100%;
  background: var(--account-gradient);
  border-radius: 4px;
  transition: width 0.5s ease;
}

/* eSIM Actions */
.esim-actions {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}

.btn-esim {
  flex: 1;
  padding: 12px 20px;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 600;
  text-align: center;
  cursor: pointer;
  transition: var(--account-transition);
  border: none;
  text-decoration: none;
}

.btn-topup {
  background: var(--account-gradient);
  color: white;
}

.btn-topup:hover {
  transform: scale(1.02);
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.3);
}

.btn-qr {
  background: transparent;
  color: var(--account-primary);
  border: 2px solid var(--account-primary);
}

.btn-qr:hover {
  background: var(--account-primary);
  color: white;
}

/* Order Table */
.order-table {
  background: var(--account-card-bg);
  border-radius: var(--account-radius);
  overflow: hidden;
  border: 1px solid var(--account-border);
  margin-bottom: 32px;
}

.table-wrapper {
  overflow-x: auto;
}

table {
  width: 100%;
  border-collapse: collapse;
}

thead {
  background: rgba(0, 154, 97, 0.05);
}

th {
  padding: 16px 20px;
  text-align: left;
  font-size: 13px;
  font-weight: 700;
  color: var(--account-text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

td {
  padding: 20px;
  border-top: 1px solid var(--account-border);
  font-size: 14px;
  color: var(--account-text);
}

.order-number {
  font-weight: 700;
  color: var(--account-primary);
  text-decoration: none;
}

.order-number:hover {
  text-decoration: underline;
}

.order-status {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 600;
}

.status-completed {
  background: rgba(0, 217, 126, 0.1);
  color: var(--account-success);
}

.status-processing {
  background: rgba(255, 154, 0, 0.1);
  color: var(--account-warning);
}

/* Account Form */
.account-form {
  background: var(--account-card-bg);
  border-radius: var(--account-radius);
  padding: 32px;
  border: 1px solid var(--account-border);
  max-width: 600px;
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 24px;
  margin-bottom: 32px;
}

.form-group {
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 13px;
  font-weight: 600;
  color: var(--account-text-secondary);
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.form-input {
  padding: 12px 16px;
  border: 2px solid var(--account-border);
  border-radius: 12px;
  font-size: 15px;
  color: var(--account-text);
  background: var(--account-bg);
  transition: var(--account-transition);
}

.form-input:focus {
  outline: none;
  border-color: var(--account-primary);
  box-shadow: 0 0 0 4px rgba(0, 154, 97, 0.1);
}

.form-input[readonly] {
  opacity: 0.6;
  cursor: not-allowed;
}

/* QR Modal */
.qr-modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
  z-index: 9999;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.qr-modal.active {
  display: flex;
}

.qr-content {
  background: var(--account-card-bg);
  border-radius: var(--account-radius);
  padding: 32px;
  max-width: 400px;
  width: 100%;
  text-align: center;
  position: relative;
}

.qr-close {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: var(--account-border);
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--account-transition);
}

.qr-close:hover {
  background: var(--account-danger);
  color: white;
}

.qr-image {
  width: 256px;
  height: 256px;
  margin: 0 auto 24px;
  padding: 16px;
  background: white;
  border-radius: 16px;
}

/* Animations */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .account-container {
    padding: 0 16px;
  }
  
  .welcome-section {
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
  }
  
  .welcome-content h1 {
    font-size: 28px;
  }
  
  .quick-actions {
    width: 100%;
  }
  
  .btn-quick {
    flex: 1;
    justify-content: center;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .account-tabs {
    gap: 2px;
    padding: 2px;
  }
  
  .tab-btn {
    padding: 12px 16px;
    font-size: 14px;
  }
  
  .tab-icon {
    display: none;
  }
  
  .esim-grid {
    grid-template-columns: 1fr;
  }
  
  .table-wrapper {
    margin: 0 -16px;
    padding: 0 16px;
  }
  
  .form-grid {
    grid-template-columns: 1fr;
  }
}

/* Loading Spinner */
.loading-spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid var(--account-border);
  border-top-color: var(--account-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 60px 20px;
  background: var(--account-card-bg);
  border-radius: var(--account-radius);
  border: 2px dashed var(--account-border);
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 24px;
  background: rgba(0, 154, 97, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-icon svg {
  width: 40px;
  height: 40px;
  color: var(--account-primary);
}

.empty-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--account-text);
  margin-bottom: 8px;
}

.empty-text {
  font-size: 16px;
  color: var(--account-text-secondary);
  margin-bottom: 24px;
}
</style>

<div class="account-dashboard">
  <div class="account-container">
    
    <!-- Welcome Header -->
    <div class="account-header">
      <div class="welcome-section">
        <div class="welcome-content">
          <h1>{{ 'account.welcome' | t | default: 'Welcome back' }}, {{ customer.first_name | default: customer.email | split: '@' | first | capitalize }}!</h1>
          <p>{{ 'account.subtitle' | t | default: 'Manage your eSIMs, orders, and account settings' }}</p>
        </div>
        <div class="quick-actions">
          <a href="/collections/all" class="btn-quick btn-primary">
            <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            {{ 'account.buy_esim' | t | default: 'Buy New eSIM' }}
          </a>
          <a href="/pages/support" class="btn-quick btn-secondary">
            <svg width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            {{ 'account.support' | t | default: 'Support' }}
          </a>
        </div>
      </div>
      
      <!-- Stats Overview -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <div class="stat-value">{{ customer.orders.size | default: 0 }}</div>
          <div class="stat-label">{{ 'account.total_esims' | t | default: 'Total eSIMs' }}</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"/>
            </svg>
          </div>
          <div class="stat-value">
            {% assign active_count = 0 %}
            {% for order in customer.orders %}
              {% if order.fulfillment_status == 'fulfilled' %}
                {% assign active_count = active_count | plus: 1 %}
              {% endif %}
            {% endfor %}
            {{ active_count }}
          </div>
          <div class="stat-label">{{ 'account.active_esims' | t | default: 'Active eSIMs' }}</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <div class="stat-value">{{ customer.orders_count | default: 0 }}</div>
          <div class="stat-label">{{ 'account.total_orders' | t | default: 'Total Orders' }}</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
          </div>
          <div class="stat-value">12</div>
          <div class="stat-label">{{ 'account.countries' | t | default: 'Countries Visited' }}</div>
        </div>
      </div>
    </div>
    
    <!-- Tab Navigation -->
    <div class="account-tabs">
      <button class="tab-btn active" onclick="showTab('esims')">
        <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
        </svg>
        {{ 'account.tab_esims' | t | default: 'My eSIMs' }}
      </button>
      <button class="tab-btn" onclick="showTab('orders')">
        <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        {{ 'account.tab_orders' | t | default: 'Order History' }}
      </button>
      <button class="tab-btn" onclick="showTab('settings')">
        <svg class="tab-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        {{ 'account.tab_settings' | t | default: 'Account Settings' }}
      </button>
    </div>
    
    <!-- Tab Content: My eSIMs -->
    <div id="esims" class="tab-content active">
      {% if customer.orders.size > 0 %}
        <div class="esim-grid">
          {% for order in customer.orders %}
            {% for line_item in order.line_items %}
              <div class="esim-card">
                <span class="esim-status status-active">{{ 'account.status_active' | t | default: 'Active' }}</span>
                
                <div class="esim-country">
                  {% if line_item.product.featured_image %}
                    <img src="{{ line_item.product.featured_image | image_url: width: 96 }}" 
                         alt="{{ line_item.product.title }}" 
                         class="esim-flag">
                  {% endif %}
                  <div>
                    <h3 class="esim-name">{{ line_item.product.title | split: ' - ' | first }}</h3>
                    <p style="margin: 0; font-size: 12px; color: var(--account-text-secondary);">
                      {{ 'account.order' | t | default: 'Order' }}: {{ order.name }}
                    </p>
                  </div>
                </div>
                
                <div class="esim-details">
                  <div class="detail-row">
                    <span class="detail-label">{{ 'account.plan' | t | default: 'Plan' }}</span>
                    <span class="detail-value">{{ line_item.variant.title }}</span>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">{{ 'account.activated' | t | default: 'Activated' }}</span>
                    <span class="detail-value">{{ order.created_at | date: "%b %d, %Y" }}</span>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">{{ 'account.expires' | t | default: 'Expires' }}</span>
                    <span class="detail-value">
                      {% assign days = line_item.variant.title | split: ' ' | last | split: 'Day' | first | plus: 0 %}
                      {% if days > 0 %}
                        {% assign seconds = days | times: 86400 %}
                        {% assign expiry = order.created_at | date: '%s' | plus: seconds %}
                        {{ expiry | date: "%b %d, %Y" }}
                      {% else %}
                        {{ 'account.no_expiry' | t | default: 'No expiry' }}
                      {% endif %}
                    </span>
                  </div>
                </div>
                
                <div class="data-usage">
                  <div class="usage-header">
                    <span>{{ 'account.data_usage' | t | default: 'Data Usage' }}</span>
                    <span>2.3 GB / 5 GB</span>
                  </div>
                  <div class="usage-bar">
                    <div class="usage-fill" style="width: 46%"></div>
                  </div>
                </div>
                
                <div class="esim-actions">
                  <button class="btn-esim btn-topup" onclick="topUp('{{ line_item.product.handle }}')">
                    {{ 'account.top_up' | t | default: 'Top Up' }}
                  </button>
                  <button class="btn-esim btn-qr" onclick="showQR('{{ order.name }}')">
                    {{ 'account.view_qr' | t | default: 'View QR' }}
                  </button>
                </div>
              </div>
            {% endfor %}
          {% endfor %}
        </div>
      {% else %}
        <div class="empty-state">
          <div class="empty-icon">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="empty-title">{{ 'account.no_esims_title' | t | default: 'No eSIMs yet' }}</h3>
          <p class="empty-text">{{ 'account.no_esims_text' | t | default: 'Start your journey with instant connectivity worldwide' }}</p>
          <a href="/collections/all" class="btn-quick btn-primary">
            {{ 'account.browse_esims' | t | default: 'Browse eSIMs' }}
          </a>
        </div>
      {% endif %}
    </div>
    
    <!-- Tab Content: Order History -->
    <div id="orders" class="tab-content">
      {% if customer.orders.size > 0 %}
        <div class="order-table">
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>{{ 'account.order_number' | t | default: 'Order' }}</th>
                  <th>{{ 'account.date' | t | default: 'Date' }}</th>
                  <th>{{ 'account.products' | t | default: 'Products' }}</th>
                  <th>{{ 'account.status' | t | default: 'Status' }}</th>
                  <th>{{ 'account.total' | t | default: 'Total' }}</th>
                </tr>
              </thead>
              <tbody>
                {% for order in customer.orders %}
                  <tr>
                    <td>
                      <a href="{{ order.customer_url }}" class="order-number">
                        {{ order.name }}
                      </a>
                    </td>
                    <td>{{ order.created_at | date: "%b %d, %Y" }}</td>
                    <td>
                      {% for item in order.line_items %}
                        {{ item.title | split: ' - ' | first }}{% unless forloop.last %}, {% endunless %}
                      {% endfor %}
                    </td>
                    <td>
                      <span class="order-status status-completed">
                        {{ order.fulfillment_status_label | default: 'Delivered' }}
                      </span>
                    </td>
                    <td><strong>{{ order.total_price | money }}</strong></td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      {% else %}
        <div class="empty-state">
          <div class="empty-icon">
            <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="empty-title">{{ 'account.no_orders_title' | t | default: 'No orders yet' }}</h3>
          <p class="empty-text">{{ 'account.no_orders_text' | t | default: 'Your order history will appear here' }}</p>
        </div>
      {% endif %}
    </div>
    
    <!-- Tab Content: Account Settings -->
    <div id="settings" class="tab-content">
      <div class="account-form">
        <h2 style="margin: 0 0 32px 0; font-size: 24px; font-weight: 700; color: var(--account-text);">
          {{ 'account.personal_info' | t | default: 'Personal Information' }}
        </h2>
        
        <form method="post" action="{{ routes.account_url }}" accept-charset="UTF-8">
          <input type="hidden" name="form_type" value="customer">
          
          <div class="form-grid">
            <div class="form-group">
              <label class="form-label" for="firstName">{{ 'account.first_name' | t | default: 'First Name' }}</label>
              <input type="text" 
                     id="firstName" 
                     name="customer[first_name]" 
                     value="{{ customer.first_name }}" 
                     class="form-input">
            </div>
            
            <div class="form-group">
              <label class="form-label" for="lastName">{{ 'account.last_name' | t | default: 'Last Name' }}</label>
              <input type="text" 
                     id="lastName" 
                     name="customer[last_name]" 
                     value="{{ customer.last_name }}" 
                     class="form-input">
            </div>
            
            <div class="form-group">
              <label class="form-label" for="email">{{ 'account.email' | t | default: 'Email' }}</label>
              <input type="email" 
                     id="email" 
                     name="customer[email]" 
                     value="{{ customer.email }}" 
                     class="form-input" 
                     readonly>
            </div>
            
            <div class="form-group">
              <label class="form-label" for="phone">{{ 'account.phone' | t | default: 'Phone' }}</label>
              <input type="tel" 
                     id="phone" 
                     name="customer[phone]" 
                     value="{{ customer.phone }}" 
                     class="form-input">
            </div>
          </div>
          
          <div style="display: flex; gap: 12px;">
            <button type="submit" class="btn-quick btn-primary">
              {{ 'account.save_changes' | t | default: 'Save Changes' }}
            </button>
            <a href="{{ routes.account_logout_url }}" class="btn-quick btn-secondary">
              {{ 'account.logout' | t | default: 'Logout' }}
            </a>
          </div>
        </form>
      </div>
    </div>
    
  </div>
</div>

<!-- QR Modal -->
<div class="qr-modal" id="qrModal">
  <div class="qr-content">
    <button class="qr-close" onclick="closeQR()">âœ•</button>
    <h3 style="margin: 0 0 24px 0; font-size: 24px; font-weight: 700;">
      {{ 'account.qr_title' | t | default: 'Your eSIM QR Code' }}
    </h3>
    <div class="qr-image">
      <img id="qrImage" src="" alt="QR Code" style="width: 100%; height: 100%;">
    </div>
    <p style="font-size: 14px; color: var(--account-text-secondary); margin: 0;">
      {{ 'account.qr_instruction' | t | default: 'Scan this code with your phone to install the eSIM' }}
    </p>
  </div>
</div>

<script>
function showTab(tabName) {
  // Hide all tabs
  document.querySelectorAll('.tab-content').forEach(tab => {
    tab.classList.remove('active');
  });
  
  // Remove active from all buttons
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.classList.remove('active');
  });
  
  // Show selected tab
  document.getElementById(tabName).classList.add('active');
  
  // Set active button
  event.target.classList.add('active');
}

function showQR(orderNumber) {
  // In real implementation, fetch QR from order metafields
  const modal = document.getElementById('qrModal');
  const qrImage = document.getElementById('qrImage');
  
  // Placeholder QR - replace with actual QR from order
  qrImage.src = 'https://api.qrserver.com/v1/create-qr-code/?size=256x256&data=' + orderNumber;
  
  modal.classList.add('active');
}

function closeQR() {
  document.getElementById('qrModal').classList.remove('active');
}

function topUp(productHandle) {
  window.location.href = '/products/' + productHandle;
}

// Close modal on outside click
document.getElementById('qrModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeQR();
  }
});
</script>