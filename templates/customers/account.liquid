        Download QR Code
      </button>
    </div>
    <p class="qr-instruction">
      Scan this code with your phone camera to install the eSIM
    </p>
  </div>
</div>

<script>
(function() {
  'use strict';
  
  // Tab Switching
  window.switchAccountTab = function(tabName) {
    document.querySelectorAll('.tab-content').forEach(content => {
      content.classList.remove('active');
    });
    
    document.querySelectorAll('.account-tab').forEach(tab => {
      tab.classList.remove('active');
    });
    
    const selectedContent = document.getElementById(tabName + '-content');
    if (selectedContent) {
      selectedContent.classList.add('active');
    }
    
    event.target.closest('.account-tab').classList.add('active');
    
    if (window.innerWidth < 768) {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
  };
  
  // QR Modal
  window.showQRModal = function(qrUrl, title) {
    const modal = document.getElementById('qrModal');
    const qrImage = document.getElementById('qrImage');
    const qrTitle = document.getElementById('qrTitle');
    
    qrImage.src = qrUrl;
    qrTitle.textContent = title + ' QR Code';
    modal.classList.add('active');
    
    modal.dataset.qrUrl = qrUrl;
    modal.dataset.title = title;
    
    document.body.style.overflow = 'hidden';
  };
  
  window.closeQRModal = function() {
    const modal = document.getElementById('qrModal');
    modal.classList.remove('active');
    document.body.style.overflow = '';
  };
  
  window.downloadQR = function() {
    const modal = document.getElementById('qrModal');
    const qrUrl = modal.dataset.qrUrl;
    const title = modal.dataset.title || 'esim-qr';
    
    if (qrUrl) {
      const link = document.createElement('a');
      link.href = qrUrl;
      link.download = title.toLowerCase().replace(/[^a-z0-9]/g, '-') + '-qr.png';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    }
  };
  
  // Close modal on outside click
  document.addEventListener('click', function(e) {
    const modal = document.getElementById('qrModal');
    if (e.target === modal) {
      closeQRModal();
    }
  });
  
  // Close modal on ESC
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeQRModal();
    }
  });
  
  console.log('Simbye Account Page V2.0 - All Fixes Applied');
  
})();
</script>