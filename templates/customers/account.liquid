<style>
/* ============================================
   ENTERPRISE ACCOUNT PAGE - FOUNDATION
   Mobile First + Dark Mode + Connected Tabs
   ============================================ */

/* CSS Variables */
:root {
  --account-primary: #009a61;
  --account-primary-hover: #00824f;
  --account-accent: #00d97e;
  --account-text: #1a1a1a;
  --account-text-secondary: #666666;
  --account-bg: #ffffff;
  --account-card-bg: #ffffff;
  --account-border: rgba(0, 0, 0, 0.08);
  --account-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.06);
  --account-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.08);
  --account-shadow-lg: 0 12px 32px rgba(0, 154, 97, 0.15);
  --account-gradient: linear-gradient(135deg, #009a61 0%, #00d97e 100%);
  --account-radius: 24px;
  --account-radius-sm: 16px;
  --account-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode Variables */
[data-theme="dark"] {
  --account-text: #f5f5f5;
  --account-text-secondary: #999999;
  --account-bg: #0a0a0a;
  --account-card-bg: rgba(26, 26, 26, 0.8);
  --account-border: rgba(255, 255, 255, 0.08);
  --account-primary: #00d97e;
  --account-primary-hover: #009a61;
  --account-accent: #00ff88;
  --account-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.3);
  --account-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
  --account-shadow-lg: 0 12px 32px rgba(0, 217, 126, 0.15);
}

/* Kill Shopify Grid - KRITISCH! */
.shopify-section:has(.account-page-enterprise) {
  display: block !important;
  padding: 0 !important;
  margin: 0 !important;
  grid-template-columns: unset !important;
  max-width: 100% !important;
  width: 100% !important;
}

.shopify-section:has(.account-page-enterprise) > * {
  grid-column: unset !important;
  margin: 0 !important;
}

/* Main Section */
.account-page-enterprise {
  width: 100%;
  min-height: 100vh;
  background: var(--account-bg);
  padding: 40px 0 80px 0;
  transition: var(--account-transition);
  position: relative;
}

/* Light Mode Background */
[data-theme="light"] .account-page-enterprise {
  background: #ffffff;
}

/* Dark Mode Background */
[data-theme="dark"] .account-page-enterprise {
  background: #0a0a0a;
}

/* Container */
.account-container {
  max-width: 1440px;
  margin: 0 auto;
  padding: 0 20px;
  position: relative;
  z-index: 1;
}

/* Welcome Header */
.account-header {
  text-align: center;
  margin-bottom: 48px;
  animation: fadeInUp 0.6s ease;
}

.account-welcome {
  font-size: 36px;
  font-weight: 700;
  color: var(--account-text);
  margin: 0 0 12px 0;
  letter-spacing: -0.02em;
  line-height: 1.1;
}

.account-subtitle {
  font-size: 16px;
  color: var(--account-text-secondary);
  margin: 0;
}

/* Connected Tabs - WIE PRODUCT PAGE! */
.account-tabs {
  display: flex;
  gap: 4px;
  background: rgba(0, 154, 97, 0.05);
  padding: 4px;
  border-radius: var(--account-radius-sm);
  border: 1px solid rgba(0, 154, 97, 0.1);
  margin-bottom: 48px;
  box-shadow: var(--account-shadow-sm);
  animation: fadeInUp 0.7s ease 0.1s both;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
}

.account-tabs::-webkit-scrollbar {
  display: none;
}

[data-theme="dark"] .account-tabs {
  background: rgba(0, 217, 126, 0.05);
  border-color: rgba(0, 217, 126, 0.1);
}

.account-tab {
  flex: 1;
  min-width: 140px;
  padding: 16px 24px;
  background: transparent;
  border: none;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  color: var(--account-text-secondary);
  cursor: pointer;
  transition: var(--account-transition);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  font-family: inherit;
  white-space: nowrap;
}

.account-tab:hover {
  background: rgba(0, 154, 97, 0.08);
  color: var(--account-text);
}

[data-theme="dark"] .account-tab:hover {
  background: rgba(0, 217, 126, 0.08);
  color: #ffffff;
}

.account-tab.active {
  background: var(--account-primary);
  color: white;
  box-shadow: 0 4px 12px rgba(0, 154, 97, 0.3);
}

[data-theme="dark"] .account-tab.active {
  background: var(--account-primary);
  color: #0a0a0a;
}

.tab-icon {
  width: 20px;
  height: 20px;
  stroke-width: 2;
}

/* Tab Content */
.tab-content {
  display: none;
  animation: fadeInUp 0.5s ease;
}

.tab-content.active {
  display: block;
}

/* Placeholder Cards - Temporär für Structure */
.placeholder-card {
  background: var(--account-card-bg);
  border: 2px solid var(--account-border);
  border-radius: var(--account-radius);
  padding: 48px 32px;
  text-align: center;
  box-shadow: var(--account-shadow-md);
  margin-bottom: 24px;
}

[data-theme="dark"] .placeholder-card {
  background: var(--account-card-bg);
  border-color: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10px);
}

.placeholder-icon {
  width: 64px;
  height: 64px;
  margin: 0 auto 24px;
  color: var(--account-primary);
}

.placeholder-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--account-text);
  margin: 0 0 12px 0;
}

.placeholder-text {
  font-size: 16px;
  color: var(--account-text-secondary);
  margin: 0;
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Desktop Styles */
@media (min-width: 769px) {
  .account-container {
    padding: 0 40px;
  }
  
  .account-page-enterprise {
    padding: 60px 0 100px 0;
  }
  
  .account-welcome {
    font-size: 48px;
  }
  
  .account-subtitle {
    font-size: 18px;
  }
  
  .account-tabs {
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    overflow-x: visible;
  }
  
  .account-tab {
    min-width: auto;
    padding: 18px 32px;
    font-size: 17px;
  }
}

/* Tablet Styles */
@media (max-width: 768px) {
  .account-header {
    margin-bottom: 32px;
  }
  
  .account-welcome {
    font-size: 32px;
  }
  
  .account-tabs {
    margin-bottom: 32px;
    padding: 3px;
  }
  
  .account-tab {
    padding: 14px 20px;
    font-size: 15px;
    min-width: 120px;
  }
  
  .tab-icon {
    width: 18px;
    height: 18px;
  }
}

/* Mobile Styles */
@media (max-width: 480px) {
  .account-page-enterprise {
    padding: 30px 0 60px 0;
  }
  
  .account-welcome {
    font-size: 28px;
  }
  
  .account-subtitle {
    font-size: 14px;
  }
  
  .account-tabs {
    margin-bottom: 24px;
  }
  
  .account-tab {
    padding: 12px 16px;
    font-size: 14px;
    min-width: 100px;
  }
}
</style>

