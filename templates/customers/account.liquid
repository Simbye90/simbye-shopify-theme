<style>
/* ============================================
   ENTERPRISE DESIGN SYSTEM
   ============================================ */

:root {
  --primary: #009a61;
  --primary-hover: #00824f;
  --primary-light: rgba(0, 154, 97, 0.1);
  --primary-gradient: linear-gradient(135deg, #009a61 0%, #00d97e 100%);
  --success: #00d97e;
  --warning: #ff9a00;
  --danger: #ff3b30;
  --text: #1a1a1a;
  --text-secondary: #666666;
  --text-muted: #999999;
  --bg: #ffffff;
  --bg-secondary: #f8f9fa;
  --bg-page: #fafafa;
  --card-bg: #ffffff;
  --border: rgba(0, 0, 0, 0.08);
  --shadow-xs: 0 2px 8px rgba(0, 0, 0, 0.04);
  --shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.06);
  --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 12px 32px rgba(0, 154, 97, 0.15);
  --shadow-xl: 0 24px 64px rgba(0, 154, 97, 0.2);
  --radius-sm: 12px;
  --radius: 16px;
  --radius-lg: 24px;
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

[data-theme="dark"] {
  --text: #f5f5f5;
  --text-secondary: #b0b0b0;
  --text-muted: #888888;
  --bg: #0a0a0a;
  --bg-secondary: #141414;
  --bg-page: #050505;
  --card-bg: #1a1a1a;
  --border: rgba(255, 255, 255, 0.08);
}

/* Global Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Page Container */
.halo-page {
  background: var(--bg-page);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
  padding: 0;
}

/* Header */
.account-page-title {
  text-align: center;
  padding: 60px 20px 40px;
  background: var(--bg);
  border-bottom: 1px solid var(--border);
}

.headline {
  font-size: 48px;
  font-weight: 800;
  color: var(--text);
  letter-spacing: -0.02em;
  line-height: 1.2;
  margin: 0;
}

/* Container */
.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Tab Navigation */
.tab-nav {
  background: var(--bg);
  padding: 20px;
  border-bottom: 2px solid var(--border);
  position: sticky;
  top: 0;
  z-index: 100;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.tab-nav ul {
  list-style: none;
  display: flex;
  gap: 8px;
  background: var(--bg-secondary);
  padding: 6px;
  border-radius: var(--radius);
  max-width: 800px;
  margin: 0 auto;
}

.tab-nav li {
  flex: 1;
}

.tab-nav a {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 16px 24px;
  background: transparent;
  border: none;
  border-radius: calc(var(--radius) - 4px);
  font-size: 16px;
  font-weight: 600;
  color: var(--text-secondary);
  cursor: pointer;
  text-decoration: none;
  transition: var(--transition);
  position: relative;
  overflow: hidden;
}

.tab-nav a:hover {
  background: rgba(0, 154, 97, 0.08);
  color: var(--text);
}

.tab-nav a.active {
  background: var(--primary);
  color: white;
  box-shadow: var(--shadow-md);
}

.tab-nav svg {
  width: 20px;
  height: 20px;
}

/* Tab Content */
.tab-content {
  display: none;
  padding: 40px 20px;
  animation: fadeIn 0.4s ease;
}

.tab-content.active-tab {
  display: block;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Account Info Form */
.account-content {
  max-width: 1200px;
  margin: 0 auto;
}

.form {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  padding: 40px;
  box-shadow: var(--shadow-md);
  margin-bottom: 32px;
}

.account_info_title {
  font-size: 28px;
  font-weight: 700;
  color: var(--text);
  margin: 0 0 32px 0;
}

.form_input_main {
  margin-bottom: 24px;
  position: relative;
}

.form_input_main label {
  display: block;
  font-size: 14px;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.form_input_main input[type="text"],
.form_input_main input[type="email"],
.form_input_main input[type="password"] {
  width: 100%;
  padding: 14px 18px;
  background: var(--bg);
  border: 2px solid var(--border);
  border-radius: var(--radius-sm);
  font-size: 16px;
  color: var(--text);
  transition: var(--transition);
  font-family: inherit;
}

.form_input_main input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 4px var(--primary-light);
}

.form_input_main input[readonly] {
  background: var(--bg-secondary);
  cursor: not-allowed;
  opacity: 0.7;
}

.lock_icon {
  position: absolute;
  right: 18px;
  top: 42px;
  width: 20px;
  height: 20px;
  opacity: 0.4;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2"/><path d="M7 11V7a5 5 0 0110 0v4"/></svg>') center/contain no-repeat;
}

/* Edit Button */
.edit_btn {
  margin: 24px 0;
}

.edit_btn a {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 12px 28px;
  background: transparent;
  color: var(--primary);
  border: 2px solid var(--primary);
  border-radius: var(--radius-sm);
  font-size: 15px;
  font-weight: 600;
  text-decoration: none;
  transition: var(--transition);
}

.edit_btn a:hover {
  background: var(--primary);
  color: white;
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

/* Checkbox */
.accepts-marketing {
  display: flex;
  align-items: center;
  gap: 12px;
  margin: 28px 0;
}

.accepts-marketing input[type="checkbox"] {
  width: 22px;
  height: 22px;
  border: 2px solid var(--border);
  border-radius: 6px;
  cursor: pointer;
}

.accepts-marketing label {
  font-size: 15px;
  color: var(--text-secondary);
  cursor: pointer;
  user-select: none;
}

/* Account Action Button */
.account-action button {
  padding: 16px 40px;
  background: var(--primary-gradient);
  color: white;
  border: none;
  border-radius: var(--radius-sm);
  font-size: 16px;
  font-weight: 700;
  cursor: pointer;
  transition: var(--transition);
  box-shadow: var(--shadow-md);
}

.account-action button:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* Delete Account */
.del_account_container {
  background: rgba(255, 59, 48, 0.05);
  border: 2px solid rgba(255, 59, 48, 0.2);
  border-radius: var(--radius);
  padding: 32px;
  margin-top: 32px;
}

.del_account_title {
  font-size: 20px;
  font-weight: 700;
  color: var(--danger);
  margin: 0 0 12px 0;
}

.del_account_subtitle {
  font-size: 15px;
  color: var(--text-secondary);
  margin: 0 0 24px 0;
  line-height: 1.6;
}

#deleteButton {
  display: inline-flex;
  padding: 12px 32px;
  background: var(--danger);
  color: white;
  border-radius: var(--radius-sm);
  font-size: 15px;
  font-weight: 600;
  text-decoration: none;
  transition: var(--transition);
}

#deleteButton:hover {
  background: #cc0000;
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

/* eSIM Cards Grid */
.flag_card {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 24px;
  margin-top: 32px;
}

.product_card {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  transition: var(--transition);
  border: 2px solid var(--border);
}

.product_card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary);
}

.flag_tile {
  padding: 24px;
}

.flag_img {
  width: 100%;
  max-width: 120px;
  height: 80px;
  object-fit: contain;
  margin: 0 auto 20px;
  display: block;
  border-radius: var(--radius-sm);
}

.qrcode_img {
  width: 200px;
  height: 200px;
  margin: 20px auto;
  display: block;
  padding: 16px;
  background: white;
  border-radius: var(--radius);
  box-shadow: var(--shadow-md);
}

.flag_tile h4 {
  font-size: 18px;
  font-weight: 700;
  color: var(--text);
  margin: 16px 0;
  text-align: center;
}

/* eSIM Action Buttons */
.sim_btns {
  display: flex;
  gap: 12px;
  margin-top: 20px;
}

.esim_details,
.installbtn {
  flex: 1;
  padding: 12px 20px;
  border-radius: var(--radius-sm);
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  border: none;
  text-align: center;
  font-family: inherit;
}

.esim_details {
  background: var(--primary-gradient);
  color: white;
}

.esim_details:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
}

.installbtn {
  background: transparent;
  color: var(--primary);
  border: 2px solid var(--primary);
}

.installbtn:hover {
  background: var(--primary);
  color: white;
}

/* iFrame Container */
.iframe_container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600px;
  height: 80vh;
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
  z-index: 10000;
  padding: 20px;
  display: none;
}

.iframe_container.visible {
  display: block;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { opacity: 0; transform: translate(-50%, -40%); }
  to { opacity: 1; transform: translate(-50%, -50%); }
}

.close_iframe {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 36px;
  height: 36px;
  background: var(--bg-secondary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: var(--text);
  cursor: pointer;
  transition: var(--transition);
  z-index: 1;
}

.close_iframe:hover {
  background: var(--danger);
  color: white;
  transform: rotate(90deg);
}

.shortUrl {
  width: 100%;
  height: calc(100% - 20px);
  border: none;
  border-radius: var(--radius);
  margin-top: 20px;
}

/* Order History Table */
.order-history {
  width: 100%;
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  border-collapse: collapse;
}

.order-history thead {
  background: var(--bg-secondary);
  border-bottom: 2px solid var(--border);
}

.order-history th {
  padding: 20px;
  text-align: left;
  font-size: 13px;
  font-weight: 700;
  color: var(--text);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.order-history td {
  padding: 20px;
  border-bottom: 1px solid var(--border);
  font-size: 15px;
  color: var(--text);
}

.order-history tbody tr:last-child td {
  border-bottom: none;
}

.order-history tbody tr:hover {
  background: var(--bg-secondary);
}

.order-history a {
  color: var(--primary);
  font-weight: 600;
  text-decoration: none;
  transition: var(--transition);
}

.order-history a:hover {
  color: var(--primary-hover);
  text-decoration: underline;
}

/* Empty States */
.account_admin {
  display: flex;
  align-items: center;
  gap: 60px;
  padding: 80px 40px;
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  margin: 40px 0;
}

.wd_100 { width: 100%; }
.wd-50, .wd_50 { flex: 1; }
.d_flex { display: flex; }

.img_wrap img {
  max-width: 100%;
  height: auto;
  opacity: 0.8;
}

.text_wrap {
  text-align: left;
}

.new_sim_title {
  font-size: 32px;
  font-weight: 700;
  color: var(--text);
  margin: 0 0 16px 0;
}

.new_sim_text {
  font-size: 18px;
  color: var(--text-secondary);
  margin: 0 0 32px 0;
  line-height: 1.6;
}

.new_sim_btn {
  display: inline-flex;
  padding: 16px 40px;
  background: var(--primary-gradient);
  color: white;
  border-radius: var(--radius-sm);
  font-size: 16px;
  font-weight: 700;
  text-decoration: none;
  transition: var(--transition);
  box-shadow: var(--shadow-md);
}

.new_sim_btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* Account Description */
.account-desc {
  text-align: center;
  padding: 60px;
  color: var(--text-secondary);
  font-size: 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.account-desc svg {
  opacity: 0.3;
}

/* Installation Guide */
.containerx {
  display: flex;
  align-items: center;
  gap: 60px;
  padding: 60px 40px;
  background: linear-gradient(135deg, var(--bg) 0%, var(--bg-secondary) 100%);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  margin: 60px auto;
  max-width: 1200px;
  border: 2px solid var(--border);
}

.image-container {
  width: 500px;
  height: 600px;
  background-size: contain;
  background-position: center;
  background-repeat: no-repeat;
  cursor: pointer;
  transition: background-image 1s ease-in-out;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
  position: relative;
  overflow: hidden;
}

.image-container::after {
  content: 'Click to continue';
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  padding: 8px 20px;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  border-radius: 20px;
  font-size: 13px;
  opacity: 0.8;
}

.image-text {
  font-size: 24px;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
  color: white;
  line-height: 1.5;
  text-align: center;
  padding: 32px;
  transition: opacity 0.5s ease-in-out;
  opacity: 1;
  border-radius: var(--radius-lg);
  background: var(--primary-gradient);
  box-shadow: var(--shadow-xl);
  min-width: 400px;
}

/* Responsive Design */
@media (max-width: 768px) {
  .headline {
    font-size: 32px;
    padding: 40px 20px 30px;
  }
  
  .tab-nav {
    padding: 16px;
  }
  
  .tab-nav ul {
    flex-direction: column;
  }
  
  .tab-nav a {
    width: 100%;
  }
  
  .form {
    padding: 24px;
  }
  
  .flag_card {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .account_admin {
    flex-direction: column;
    padding: 40px 20px;
    gap: 30px;
  }
  
  .containerx {
    flex-direction: column;
    padding: 40px 20px;
    gap: 30px;
  }
  
  .image-container {
    width: 100%;
    height: 400px;
  }
  
  .image-text {
    font-size: 18px;
    padding: 24px;
    min-width: auto;
    width: 100%;
  }
  
  .order-history {
    font-size: 14px;
  }
  
  .order-history th,
  .order-history td {
    padding: 12px;
  }
}

/* Loading State */
.loading {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid rgba(0, 154, 97, 0.1);
  border-radius: 50%;
  border-top-color: var(--primary);
  animation: spin 1s ease-in-out infinite;
  margin-left: 10px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Utility Classes */
.text-left { text-align: left; }
.text-center { text-align: center; }
.visually-hidden { display: none; }
.hidden { display: none !important; }
</style>

<!-- Page Container -->
