            <div class="form_input_main">
              <label for="last_name">{{ 'check_out_page_main_tabs_1_inner_last_name' | t | default: 'Last Name' }}</label>
              <input type="text" name="customer[last_name]" value="{{ customer.last_name | capitalize }}" placeholder="Last Name">
            </div>
            
            <div class="form_input_main">
              <label for="email">{{ 'check_out_page_main_tabs_1_inner_email' | t | default: 'Email Address' }}</label>
