

<style>
/* ============================================
   ENTERPRISE ACCOUNT PAGE V3.0
   Complete Professional Edition
   ============================================ */

/* CSS Variables */
:root {
  --account-primary: #009a61;
  --account-primary-hover: #00824f;
  --account-primary-light: rgba(0, 154, 97, 0.1);
  --account-accent: #00d97e;
  --account-success: #00d97e;
  --account-warning: #ff9a00;
  --account-danger: #ff3b30;
  --account-info: #007aff;
  --account-text: #1a1a1a;
  --account-text-secondary: #666666;
  --account-text-muted: #999999;
  --account-bg: #ffffff;
  --account-bg-secondary: #f8f9fa;
  --account-card-bg: #ffffff;
  --account-border: rgba(0, 0, 0, 0.08);
  --account-border-light: rgba(0, 0, 0, 0.04);
  --account-shadow-xs: 0 2px 4px rgba(0, 0, 0, 0.04);
  --account-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.06);
  --account-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.08);
  --account-shadow-lg: 0 12px 32px rgba(0, 154, 97, 0.15);
  --account-shadow-xl: 0 20px 48px rgba(0, 154, 97, 0.2);
  --account-gradient: linear-gradient(135deg, #009a61 0%, #00d97e 100%);
  --account-gradient-danger: linear-gradient(135deg, #ff3b30 0%, #ff6b60 100%);
  --account-radius: 24px;
  --account-radius-md: 16px;
  --account-radius-sm: 12px;
  --account-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --account-transition-fast: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Dark Mode */
[data-theme="dark"] {
  --account-text: #f5f5f5;
  --account-text-secondary: #b0b0b0;
  --account-text-muted: #808080;
  --account-bg: #0a0a0a;
  --account-bg-secondary: #141414;
  --account-card-bg: #1a1a1a;
  --account-border: rgba(255, 255, 255, 0.08);
  --account-border-light: rgba(255, 255, 255, 0.04);
  --account-primary: #00d97e;
  --account-primary-hover: #00b968;
  --account-primary-light: rgba(0, 217, 126, 0.1);
  --account-accent: #00ff88;
  --account-shadow-xs: 0 2px 4px rgba(0, 0, 0, 0.2);
  --account-shadow-sm: 0 4px 12px rgba(0, 0, 0, 0.3);
  --account-shadow-md: 0 8px 24px rgba(0, 0, 0, 0.4);
  --account-shadow-lg: 0 12px 32px rgba(0, 217, 126, 0.15);
  --account-shadow-xl: 0 20px 48px rgba(0, 217, 126, 0.2);
}

/* Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Main Layout */
.account-enterprise {
  min-height: 100vh;
  background: var(--account-bg);
  font-family: system-ui, -apple-system, sans-serif;
  color: var(--account-text);
  transition: var(--account-transition);
}

.account-wrapper {
  display: flex;
  max-width: 1600px;
  margin: 0 auto;
  padding: 0 20px;
  gap: 32px;
  padding-top: 40px;
  padding-bottom: 80px;
}

/* Sidebar Navigation */
.account-sidebar {
  width: 280px;
  position: sticky;
  top: 40px;
  height: fit-content;
  background: var(--account-card-bg);
  border-radius: var(--account-radius);
  padding: 24px;
  box-shadow: var(--account-shadow-md);
  border: 1px solid var(--account-border);
  transition: var(--account-transition);
}

/* User Profile Card */
.user-profile {
  text-align: center;
  padding-bottom: 24px;
  border-bottom: 1px solid var(--account-border);
  margin-bottom: 24px;
}

.user-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin: 0 auto 16px;
  background: var(--account-gradient);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32px;
  font-weight: 700;
  color: white;
  box-shadow: var(--account-shadow-lg);
  position: relative;
}

.user-avatar-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 28px;
  height: 28px;
  background: var(--account-success);
  border: 3px solid var(--account-card-bg);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar-badge svg {
  width: 14px;
  height: 14px;
  color: white;
}

.user-name {
  font-size: 20px;
  font-weight: 700;
  color: var(--account-text);
  margin-bottom: 4px;
}

.user-email {
  font-size: 14px;
  color: var(--account-text-secondary);
  margin-bottom: 12px;
}

.user-tier {
  display: inline-block;
  padding: 6px 12px;
  background: var(--account-gradient);
  color: white;
  border-radius: 100px;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Sidebar Navigation Menu */
.sidebar-nav {
  list-style: none;
}

.nav-item {
  margin-bottom: 4px;
}

.nav-link {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  color: var(--account-text-secondary);
  text-decoration: none;
  border-radius: var(--account-radius-sm);
  transition: var(--account-transition);
  font-size: 15px;
  font-weight: 500;
  position: relative;
}

.nav-link:hover {
  background: var(--account-bg-secondary);
  color: var(--account-text);
}

.nav-link.active {
  background: var(--account-primary-light);
  color: var(--account-primary);
  font-weight: 600;
}

.nav-link.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 3px;
  height: 24px;
  background: var(--account-primary);
  border-radius: 0 3px 3px 0;
}

.nav-icon {
  width: 20px;
  height: 20px;
  stroke-width: 2;
}

.nav-badge {
  margin-left: auto;
  padding: 2px 8px;
  background: var(--account-danger);
  color: white;
  border-radius: 100px;
  font-size: 11px;
  font-weight: 700;
}

/* Main Content Area */
.account-main {
  flex: 1;
  min-width: 0;
}

/* Page Header */
.page-header {
  margin-bottom: 32px;
}

.page-title {
  font-size: 32px;
  font-weight: 800;
  color: var(--account-text);
  margin-bottom: 8px;
  letter-spacing: -0.02em;
}

.page-subtitle {
  font-size: 16px;
  color: var(--account-text-secondary);
}

/* Content Sections */
.content-section {
  display: none;
}

.content-section.active {
  display: block;
  animation: fadeIn 0.4s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Dashboard Grid */
.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  margin-bottom: 32px;
}

.metric-card {
  background: var(--account-card-bg);
  border: 1px solid var(--account-border);
  border-radius: var(--account-radius-md);
  padding: 24px;
  transition: var(--account-transition);
  position: relative;
  overflow: hidden;
}

.metric-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--account-shadow-lg);
}

.metric-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--account-gradient);
}

.metric-icon {
  width: 48px;
  height: 48px;
  background: var(--account-primary-light);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
}

.metric-icon svg {
  width: 24px;
  height: 24px;
  color: var(--account-primary);
}

.metric-value {
  font-size: 32px;
  font-weight: 800;
  color: var(--account-text);
  margin-bottom: 4px;
  letter-spacing: -0.02em;
}

.metric-label {
  font-size: 14px;
  color: var(--account-text-secondary);
}

.metric-trend {
  position: absolute;
  top: 24px;
  right: 24px;
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 4px 8px;
  background: var(--account-success);
  color: white;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 700;
}

.metric-trend.down {
  background: var(--account-danger);
}

.metric-trend svg {
  width: 14px;
  height: 14px;
}

/* Activity Timeline */
.activity-timeline {
  background: var(--account-card-bg);
  border: 1px solid var(--account-border);
  border-radius: var(--account-radius);
  padding: 28px;
  margin-bottom: 32px;
}

.timeline-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.timeline-title {
  font-size: 20px;
  font-weight: 700;
  color: var(--account-text);
}

.timeline-filter {
  display: flex;
  gap: 8px;
}

.filter-btn {
  padding: 8px 16px;
  background: transparent;
  border: 1px solid var(--account-border);
  border-radius: 8px;
  font-size: 14px;
  color: var(--account-text-secondary);
  cursor: pointer;
  transition: var(--account-transition);
  font-family: inherit;
}

.filter-btn.active {
  background: var(--account-primary);
  border-color: var(--account-primary);
  color: white;
}

.timeline-list {
  position: relative;
  padding-left: 32px;
}

.timeline-list::before {
  content: '';
  position: absolute;
  left: 11px;
  top: 0;
  bottom: 0;
  width: 2px;
  background: var(--account-border);
}

.timeline-item {
  position: relative;
  margin-bottom: 24px;
}

.timeline-dot {
  position: absolute;
  left: -26px;
  top: 6px;
  width: 12px;
  height: 12px;
  background: var(--account-card-bg);
  border: 2px solid var(--account-primary);
  border-radius: 50%;
}

.timeline-content {
  display: flex;
  justify-content: space-between;
  align-items: start;
}

.timeline-text {
  flex: 1;
}

.timeline-action {
  font-size: 15px;
  color: var(--account-text);
  margin-bottom: 4px;
}

.timeline-time {
  font-size: 13px;
  color: var(--account-text-muted);
}

/* eSIM Cards Grid */
.esim-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
  gap: 24px;
  margin-bottom: 32px;
}

.esim-card {
  background: var(--account-card-bg);
  border: 1px solid var(--account-border);
  border-radius: var(--account-radius);
  padding: 24px;
  transition: var(--account-transition);
  position: relative;
  cursor: pointer;
}

.esim-card:hover {
  box-shadow: var(--account-shadow-lg);
  transform: translateY(-4px);
}

.esim-checkbox {
  position: absolute;
  top: 20px;
  left: 20px;
  width: 20px;
  height: 20px;
}

.esim-status {
  position: absolute;
  top: 20px;
  right: 20px;
  padding: 6px 12px;
  border-radius: 100px;
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-active {
  background: rgba(0, 217, 126, 0.1);
  color: var(--account-success);
  border: 1px solid rgba(0, 217, 126, 0.3);
}

.status-expired {
  background: rgba(255, 59, 48, 0.1);
  color: var(--account-danger);
  border: 1px solid rgba(255, 59, 48, 0.3);
}

.esim-header {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 20px;
  padding-left: 32px;
}

.esim-flag {
  width: 48px;
  height: 36px;
  border-radius: 8px;
  object-fit: cover;
  box-shadow: var(--account-shadow-sm);
}

.esim-info {
  flex: 1;
}

.esim-country {
  font-size: 18px;
  font-weight: 700;
  color: var(--account-text);
  margin-bottom: 2px;
}

.esim-plan {
  font-size: 14px;
  color: var(--account-text-secondary);
}

/* Usage Meter */
.usage-meter {
  margin-bottom: 20px;
}

.usage-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
  font-size: 14px;
}

.usage-label {
  color: var(--account-text-secondary);
}

.usage-value {
  color: var(--account-text);
  font-weight: 600;
}

.usage-bar {
  height: 8px;
  background: var(--account-bg-secondary);
  border-radius: 100px;
  overflow: hidden;
}

.usage-fill {
  height: 100%;
  background: var(--account-gradient);
  border-radius: 100px;
  transition: width 1s ease;
}

.usage-fill.warning {
  background: var(--account-warning);
}

.usage-fill.danger {
  background: var(--account-danger);
}

/* Action Buttons */
.esim-actions {
  display: flex;
  gap: 12px;
}

.btn {
  padding: 10px 20px;
  border-radius: 10px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: var(--account-transition);
  border: none;
  font-family: inherit;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.btn-primary {
  background: var(--account-gradient);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: var(--account-shadow-lg);
}

.btn-secondary {
  background: transparent;
  color: var(--account-primary);
  border: 1px solid var(--account-primary);
}

.btn-secondary:hover {
  background: var(--account-primary);
  color: white;
}

.btn-icon {
  width: 18px;
  height: 18px;
}

/* Bulk Actions Bar */
.bulk-actions {
  position: fixed;
  bottom: 24px;
  left: 50%;
  transform: translateX(-50%);
  background: var(--account-card-bg);
  border: 1px solid var(--account-border);
  border-radius: var(--account-radius);
  padding: 16px 24px;
  display: flex;
  align-items: center;
  gap: 24px;
  box-shadow: var(--account-shadow-xl);
  z-index: 100;
  opacity: 0;
  visibility: hidden;
  transition: var(--account-transition);
}

.bulk-actions.active {
  opacity: 1;
  visibility: visible;
}

.bulk-count {
  font-size: 14px;
  color: var(--account-text-secondary);
}

.bulk-actions-buttons {
  display: flex;
  gap: 12px;
}

/* Orders Table */
.table-container {
  background: var(--account-card-bg);
  border: 1px solid var(--account-border);
  border-radius: var(--account-radius);
  overflow: hidden;
}

.data-table {
  width: 100%;
  border-collapse: collapse;
}

.data-table thead {
  background: var(--account-bg-secondary);
}

.data-table th {
  padding: 16px 20px;
  text-align: left;
  font-size: 13px;
  font-weight: 700;
  color: var(--account-text);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border-bottom: 1px solid var(--account-border);
}

.data-table td {
  padding: 16px 20px;
  border-bottom: 1px solid var(--account-border-light);
  font-size: 14px;
}

.data-table tbody tr:hover {
  background: var(--account-bg-secondary);
}

.order-link {
  color: var(--account-primary);
  text-decoration: none;
  font-weight: 600;
}

.order-link:hover {
  text-decoration: underline;
}

.status-badge {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.3px;
}

.status-paid {
  background: var(--account-success);
  color: white;
}

.status-pending {
  background: var(--account-warning);
  color: white;
}

.status-fulfilled {
  background: var(--account-info);
  color: white;
}

/* Download Button */
.btn-download {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  color: var(--account-primary);
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  transition: var(--account-transition);
}

.btn-download:hover {
  color: var(--account-primary-hover);
}

.btn-download svg {
  width: 16px;
  height: 16px;
}

/* Settings Forms */
.settings-grid {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 32px;
}

.settings-main {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.settings-sidebar {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.settings-card {
  background: var(--account-card-bg);
  border: 1px solid var(--account-border);
  border-radius: var(--account-radius);
  padding: 28px;
}

.card-header {
  margin-bottom: 24px;
}

.card-title {
  font-size: 20px;
  font-weight: 700;
  color: var(--account-text);
  margin-bottom: 4px;
}

.card-subtitle {
  font-size: 14px;
  color: var(--account-text-secondary);
}

/* Form Styles */
.form-group {
  margin-bottom: 20px;
}

.form-label {
  display: block;
  font-size: 14px;
  font-weight: 600;
  color: var(--account-text);
  margin-bottom: 8px;
}

.form-input {
  width: 100%;
  padding: 12px 16px;
  background: var(--account-bg);
  border: 1px solid var(--account-border);
  border-radius: var(--account-radius-sm);
  font-size: 15px;
  color: var(--account-text);
  transition: var(--account-transition);
  font-family: inherit;
}

.form-input:focus {
  outline: none;
  border-color: var(--account-primary);
  box-shadow: 0 0 0 3px var(--account-primary-light);
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.form-hint {
  font-size: 13px;
  color: var(--account-text-muted);
  margin-top: 6px;
}

/* Switch Toggle */
.form-switch {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 0;
  border-bottom: 1px solid var(--account-border-light);
}

.form-switch:last-child {
  border-bottom: none;
}

.switch-label {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.switch-title {
  font-size: 15px;
  font-weight: 500;
  color: var(--account-text);
}

.switch-description {
  font-size: 13px;
  color: var(--account-text-secondary);
}

.switch-toggle {
  position: relative;
  width: 48px;
  height: 28px;
}

.switch-toggle input {
  opacity: 0;
  width: 0;
  height: 0;
}

.switch-slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--account-border);
  transition: var(--account-transition-fast);
  border-radius: 100px;
}

.switch-slider::before {
  position: absolute;
  content: "";
  height: 20px;
  width: 20px;
  left: 4px;
  bottom: 4px;
  background: white;
  transition: var(--account-transition-fast);
  border-radius: 50%;
  box-shadow: var(--account-shadow-sm);
}

input:checked + .switch-slider {
  background: var(--account-primary);
}

input:checked + .switch-slider::before {
  transform: translateX(20px);
}

/* Two-Factor Authentication */
.twofa-status {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px;
  background: var(--account-bg-secondary);
  border-radius: var(--account-radius-sm);
  margin-bottom: 20px;
}

.twofa-icon {
  width: 40px;
  height: 40px;
  background: var(--account-success);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.twofa-icon.disabled {
  background: var(--account-border);
}

.twofa-icon svg {
  width: 20px;
  height: 20px;
  color: white;
}

.twofa-info {
  flex: 1;
}

.twofa-title {
  font-size: 15px;
  font-weight: 600;
  color: var(--account-text);
  margin-bottom: 2px;
}

.twofa-text {
  font-size: 13px;
  color: var(--account-text-secondary);
}

/* Mobile Responsive */
@media (max-width: 1024px) {
  .dashboard-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .settings-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .account-wrapper {
    flex-direction: column;
    padding: 20px 16px 60px;
  }
  
  .account-sidebar {
    width: 100%;
    position: static;
    order: 2;
  }
  
  .account-main {
    order: 1;
  }
  
  .dashboard-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .esim-grid {
    grid-template-columns: 1fr;
  }
  
  .form-row {
    grid-template-columns: 1fr;
  }
  
  .bulk-actions {
    left: 16px;
    right: 16px;
    transform: none;
    padding: 12px 16px;
  }
  
  .bulk-actions-buttons {
    flex-direction: column;
    width: 100%;
  }
  
  .bulk-actions-buttons .btn {
    width: 100%;
  }
  
  .table-container {
    overflow-x: auto;
  }
  
  .data-table {
    min-width: 600px;
  }
}

/* Loading State */
.loading-skeleton {
  background: linear-gradient(90deg, 
    var(--account-bg-secondary) 25%, 
    var(--account-border-light) 50%, 
    var(--account-bg-secondary) 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
  border-radius: var(--account-radius-sm);
}

@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
