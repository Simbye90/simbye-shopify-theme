                          </div>
                          
                          <div class="detail-row">
                            <span class="detail-label">Validity</span>
                            <span class="detail-value">
                              {% if variant.metafields.custom.validity %}
                                {{ variant.metafields.custom.validity }} Days
                              {% else %}
                                N/A
                              {% endif %}
                            </span>
                          </div>
                          
                          {% if esimData.expiredTime %}
                            <div class="detail-row">
                              <span class="detail-label">Expires</span>
                              <span class="detail-value">
                                {{ esimData.expiredTime | date: '%b %d, %Y' }}
                                {% if days_left >= 0 %}
                                  ({{ days_left }} days)
                                {% endif %}
                              </span>
                            </div>
                          {% endif %}
                          
                          {% if esimData.iccid %}
                            <div class="detail-row">
                              <span class="detail-label">ICCID</span>
                              <span class="detail-value">{{ esimData.iccid | slice: 0, 12 }}...</span>
                            </div>
                          {% endif %}
                        </div>
                        
                        <!-- Actions -->
