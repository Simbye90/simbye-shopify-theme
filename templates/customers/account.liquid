                <input type="password" name="customer[password_confirmation]" placeholder="Confirm New Password" style="margin-top: 10px;">
              {%- else -%}
                <label for="new_password">{{ 'check_out_page_main_tabs_1_inner_pass' | t | default: 'Password' }}</label>
                <input type="password" placeholder="••••••••" readonly="readonly">
              {%- endif -%}
            </div>
            
            <div class="edit_btn">
              <a href="/account/login#recover">{{ 'check_out_page_main_tabs_1_inner_btn_edit' | t | default: 'Change Password' }}</a>
