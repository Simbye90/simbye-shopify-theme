            <div class="accepts-marketing">
              <input type="hidden" name="customer[accepts_marketing]" value="false">
              <input type="checkbox" name="customer[accepts_marketing]" id="accepts-marketing" {% if customer.accepts_marketing %}checked{% endif %}>
              <label for="accepts-marketing">{{ 'check_out_page_main_tabs_1_inner_btn_subscribe_mail' | t | default: 'Subscribe to our newsletter' }}</label>
